#!/sbin/runscript

# Sample init.d file for alpine linux.

NAME=clamsmtpd
DAEMON=/usr/sbin/$NAME

depend() {
	need net clamd
}

start() {
	ebegin "Starting ${NAME}"
		start-stop-daemon --start --quiet \
			--exec ${DAEMON} -- ${OPTS}
	eend $?
}

stop() {
	ebegin "Stopping ${NAME}"
		start-stop-daemon --stop --quiet \
			--exec ${DAEMON} \
			--pidfile /var/run/${NAME}.pid
	eend $?
}
