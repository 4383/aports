# Maintainer: Carlo Landmeter <clandmeter at gmail.com>
pkgname=email
pkgver=3.1.0
pkgrel=0
pkgdesc="A command line SMTP client that's simple"
url="http://www.cleancode.org/projects/email"
license="GPL"
depends="uclibc openssl"
makedepends="openssl-dev"
source="http://www.cleancode.org/downloads/email/email-3.1.0.tar.bz2"

subpackages="$pkgname-doc"

build() {
	cd "$srcdir/$pkgname-$pkgver"

	for i in ../../*.patch; do
                msg "Applying ${i##*/}"
                patch -p1 -i $i || return 1
        done

	./configure \
        --prefix=/usr \
	--sysconfdir=/etc \
	--mandir=/usr/share/man
	make || return 1
	make DESTDIR="$pkgdir" install
}

md5sums="dc347ea65b58f49ee4fe8f578ea13535  email-3.1.0.tar.bz2"
