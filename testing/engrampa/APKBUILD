# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=engrampa
pkgver=1.10.0
pkgrel=0
pkgdesc="An archive manager for the MATE"
url="http://mate-desktop.org/"
arch="all"
license="GPLv2"
depends="libxml2-utils"
depends_dev=""
makedepends="$depends_dev glib-dev gtk+2.0-dev caja-dev itstool libsm-dev"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="4e84853791509ca00bd62bd22197d2d0  engrampa-1.10.0.tar.xz"
sha256sums="9afabd6d1a8a786ebefc30c8c2e01e3457e71de52927b1c089d4e483c027d932  engrampa-1.10.0.tar.xz"
sha512sums="0a8f0910efb77a082279908426c7c8b37c42745c084f668545338cba8f0edeccd5c7477550de664507d433770442bd565a0aa3dedf33f38bb8833feee9e64723  engrampa-1.10.0.tar.xz"
