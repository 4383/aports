pkgname=py-exifread
_pkgname=ExifRead
pkgver=2.0.2
pkgrel=1
pkgdesc="Read Exif metadata from tiff and jpeg files"
url="https://pypi.python.org/pypi/ExifRead"
arch="noarch"
license="BSD"
depends="python"
depends_dev=""
makedepends="python-dev py-setuptools"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}
md5sums="5d70c0614d4d575bc05c61c27b664cf8  ExifRead-2.0.2.tar.gz"
sha256sums="0fe01a5dd4e6c8aec35e758e5282ed54f890192e204a42deaac7b385e79b391a  ExifRead-2.0.2.tar.gz"
sha512sums="536b2a8547bd1c50e39f42c4cf19e21b5e1c940fb8224da1c94d2baea80093eb230cfcef3dc82bb1189cf96f0ee0984fd5c86cd32d6fad2a0a17ae083a85ba4f  ExifRead-2.0.2.tar.gz"
