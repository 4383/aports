# Contributor: Carlo Landmeter <clandmeter@gmail.com>

pkgname=gitolite
pkgver=3.5.1
pkgrel=0
pkgdesc='A centralized git server, with very fine-grained access control and many powerful features.'
url='http://github.com/sitaramc/gitolite'
arch='noarch'
license='GPL2'
depends='git perl'
#TODO: subpackages="$pkgname-doc"
source="https://github.com/sitaramc/$pkgname/tarball/v${pkgver}/$pkgname-$pkgver.tar.gz"

package() {
    cd "$srcdir"/sitaramc-gitolite-*

    install -d "$pkgdir"/usr/lib/gitolite || return 1
    install -d "${pkgdir}"/usr/bin || return 1
    ./install -to "${pkgdir}"/usr/lib/gitolite || return 1
    ln -s /usr/lib/gitolite/gitolite ${pkgdir}/usr/bin/ || return 1
}

md5sums="e6d3b579abd32f12fbfd7f941e420747  gitolite-3.5.1.tar.gz"
sha256sums="7ef575efc15892b460be332558f7641827d89d6a2960a49d4b768be4a4857022  gitolite-3.5.1.tar.gz"
sha512sums="6516131190a19871344a3ecdc4e9c32f13e69e92ca2c06412526238637a803c65ad3c43a0b0832287fed4343462045b0b8d6cf3364c2635cc42335b73de4be42  gitolite-3.5.1.tar.gz"
