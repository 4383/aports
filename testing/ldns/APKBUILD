# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=ldns
pkgver=1.6.10
pkgrel=0
pkgdesc="A DNS library"
url="http://nlnetlabs.nl/projects/ldns/"
arch="all"
license="Custom"
depends=
depends_dev="openssl-dev"
makedepends="$depends_dev perl"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://nlnetlabs.nl/downloads/ldns/ldns-$pkgver.tar.gz"

_builddir="$srcdir"/ldns-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="fadf8e38fbd2d3434a2c46097d9932d5  ldns-1.6.10.tar.gz"
