# Contributor: Michael Mason <ms13sp@gmail.com>
# Maintainer: Michael Mason <ms13sp@gmail.com>
pkgname=hping
_altname=hping3
pkgver=20051105
pkgrel=0
pkgdesc="A ping-like TCP/IP packet assembler/analyzer"
url="http://www.hping.org"
license="GPL"
depends=""
makedepends="libpcap-dev"
install=
subpackages="$pkgname-doc"
source="http://www.hping.org/$_altname-$pkgver.tar.gz"

build() {
	cd "$srcdir"/$_altname-$pkgver
	ln -s /usr/include/pcap/bpf.h /usr/include/net/bpf.h
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--no-tcl
	make || return 1
	make strip || return 1
	install -m755 -D "$srcdir"/"$_altname-$pkgver"/$_altname "$pkgdir"/usr/sbin/$pkgname
	ln -s "$pkgdir"/usr/sbin/$pkgname "$pkgdir"/usr/sbin/hping3
	ln -s "$pkgdir"/usr/sbin/$pkgname "$pkgdir"/usr/sbin/hping2
	install -m644 -D "$srcdir"/"$_altname-$pkgver"/docs/hping2.8 "$pkgdir"/usr/share/man/man8/hping2.8
	install -m644 -D "$srcdir"/"$_altname-$pkgver"/docs/hping3.8 "$pkgdir"/usr/share/man/man8/hping3.8

}

md5sums="ca4ea4e34bcc2162aedf25df8b2d1747  hping3-20051105.tar.gz"
