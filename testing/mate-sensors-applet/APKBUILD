# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-sensors-applet
pkgver=1.10.3
pkgrel=0
pkgdesc="An applet for the MATE Panel to display readings from hardware sensors"
url="https://github.com/mate-desktop/mate-sensors-applet"
arch="all"
license="GPLv2"
depends=""
depends_dev=""
makedepends="$depends_dev intltool glib-dev gtk+2.0-dev mate-panel-dev libxslt-dev
	itstool libxml2-utils"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	 ./configure \
                 --build=$CBUILD \
                 --host=$CHOST \
                 --sysconfdir=/etc \
		 --with-gtk=2.0 \
                 --prefix=/usr \
                 || return 1
         make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="9970bedfad2bfc0b6704e06003aa4979  mate-sensors-applet-1.10.3.tar.xz"
sha256sums="d07a23cf8d707ca3590ef9652525202121e7838987552b40ebc79a0801c5440c  mate-sensors-applet-1.10.3.tar.xz"
sha512sums="40763ef49918db4c8d7ddeaf0b3d365eb81053e49c58a15517f8fabb6c9214c6cde371d60210f184470026d60797ac4cad050b44246c062baca9e6b84230efff  mate-sensors-applet-1.10.3.tar.xz"
