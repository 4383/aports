sha256sums="13ad4ab9a861747983ffc2ed582acc47dcd90e856b5e680d8be0fb421221b1cb  source-map-0.1.34.tgz"
sha512sums="c9f0b00e3d2f47d453c2dde913382581bdd98267171ede838c6ddb8c9bf33f04cbfb9cc3436321992cc0713cb4193890b828ab892597bd6335fcd84a757ba840  source-map-0.1.34.tgz"
