# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=pacman
pkgver=4.1.1
pkgrel=0
pkgdesc="a simple library-based package manager"
url="http://www.archlinux.org/pacman/"
arch="all"
license="GPL"
depends=""
depends_dev="libarchive-dev curl-dev openssl-dev gpgme-dev gettext-dev"
makedepends="$depends_dev m4 coreutils sed autoconf automake libtool"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="ftp://ftp.archlinux.org/other/pacman/pacman-$pkgver.tar.gz"

_builddir="$srcdir"/pacman-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-scriptlet-shell=/usr/bin/bash \
		|| return 1
	make V=1 || return 1
}

package() {
	cd "$_builddir"
	make V=1 -j1 DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="72a1688ff73c1c0b79d8f87b3793d446  pacman-4.1.1.tar.gz"
sha256sums="2f8008d254655e19f890dba4fa26b27070584b8f0ef25ac476ed0136fbca8a46  pacman-4.1.1.tar.gz"
sha512sums="1f0e37ea55f3a660ab19bd40fac77667fe2095db38589282370eabeb334a4cbbe604e37639f21ce457f4f9241690160a6cbe5a5dc046188e33d83d24c8acd49f  pacman-4.1.1.tar.gz"
