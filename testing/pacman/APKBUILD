# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=pacman
pkgver=4.1.0
pkgrel=0
pkgdesc="a simple library-based package manager"
url="http://www.archlinux.org/pacman/"
arch="all"
license="GPL"
depends=""
depends_dev="libarchive-dev curl-dev openssl-dev gpgme-dev"
makedepends="$depends_dev m4 coreutils sed"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="ftp://ftp.archlinux.org/other/pacman/pacman-$pkgver.tar.gz"

_builddir="$srcdir"/pacman-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-scriptlet-shell=/usr/bin/bash \
		|| return 1
	make V=1 -j1 || return 1
}

package() {
	cd "$_builddir"
	make V=1 DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="a0f2b3148bee4784f21cf373cf59a0bc  pacman-4.1.0.tar.gz"
sha256sums="5d04f01afbacb899e135564daea7cffa8e14635dfc938f0bfac3af1723aab9b7  pacman-4.1.0.tar.gz"
sha512sums="9dc02397cb2ec00fa6f01c90a6bf032e882cdbcfc5d2eb9e65866425f638c2212e4c464c589044acf319386fddfa08d5e3bb254bba269f4094f406b406752a9d  pacman-4.1.0.tar.gz"
