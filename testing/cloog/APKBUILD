# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=cloog
pkgver=0.16.2
pkgrel=0
pkgdesc="The Chunky Loop Generator"
url="http://www.cloog.org/"
arch="all"
license="GPLv2+"
depends=
makedepends="gmp-dev"
install=""
subpackages="$pkgname-dev"
source="http://www.bastoul.net/cloog/pages/download/cloog-$pkgver.tar.gz"

_builddir="$srcdir"/cloog-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" INSTALL="install -D" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev || return 1
	mv "$pkgdir"/usr/lib/*-gdb.py "$subpkgdir"/usr/lib/
}

md5sums="83877caaa879c7160063138bb18348e7  cloog-0.16.2.tar.gz"
