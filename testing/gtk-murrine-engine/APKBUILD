# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer:
pkgname=gtk-murrine-engine
pkgver=0.98.2
pkgrel=0
pkgdesc="cairo-based gtk engine"
url="http://www.cimitan.com/murrine/"
arch="all"
license="LGPL"
depends=
makedepends="gtk+-dev cairo-dev intltool"
install=""
subpackages=""
source="http://ftp.acc.umu.se/pub/GNOME/sources/murrine/${pkgver%.*}/murrine-${pkgver}.tar.xz"

_builddir="${srcdir}/murrine-${pkgver}"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir" -name *.la -print | xargs rm
}

md5sums="bf01e0097b5f1e164dbcf807f4b9745e  murrine-0.98.2.tar.xz"
