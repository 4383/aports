# Contributor: Matt Smith <mcs@darkregion.net>
# Maintainer: Matt Smith <mcs@darkregion.net>
pkgname=speedometer
pkgver=2.6
pkgrel=0
pkgdesc="Measure and display the rate of data across a network connection or data being stored in a file"
url="http://excess.org/speedometer/"
license="LGPL"
depends="python urwid"
makedepends="python-dev"
install=
subpackages=
source="http://excess.org/$pkgname/$pkgname-$pkgver.tar.gz
	popen2-deprecated-speedometer-2.6.patch
	"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	patch -p1 -i "$startdir"/popen2-deprecated-speedometer-2.6.patch
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	install -m755 -D speedometer.py "$pkgdir"/usr/bin/speedometer
}

md5sums="e30c46e8bce8dcf26532c7c06ecee50c  speedometer-2.6.tar.gz
c60783e85e9ecf2560f5a79530687cb1  popen2-deprecated-speedometer-2.6.patch"
