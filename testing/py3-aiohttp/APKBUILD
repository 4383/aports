pkgname=py3-aiohttp
_pkgname=aiohttp
pkgver=0.22.1
pkgrel=0
pkgdesc="HTTP client/server for asyncio"
url="http://pypi.python.org/pypi/aiohttp"
arch="all"
license="ASL 2.0"
depends="python3 py-chardet py3-multidict"
depends_dev=""
makedepends="$depends_dev py-setuptools python3-dev"
install=""
subpackages="$pkgname-dev"
source="https://pypi.io/packages/source/a/$_pkgname/$_pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$_pkgname-$pkgver
build() {
	cd "$builddir"
	python3 setup.py build || return 
}

package() {
	cd "$builddir"
	python3 setup.py install --root="$pkgdir" --optimize=1 || return 1
}

