# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qttranslations
pkgver=5.3.0_beta0
pkgrel=0
pkgdesc="Qt5 - QtTranslations module"
url="http://qt-project.org/"
arch="noarch"
license="LGPLv2 with exceptions or GPLv3 with exceptions and GFDL"
depends=""
depends_dev=""
makedepends="$depends_dev qt5-qttools-dev"
install=""
subpackages=""

_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
case $pkgver in
*_beta*) _rel=development_releases;;
*) _rel=official_releases;;
esac

source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/qttranslations-opensource-src-$_ver.tar.xz"

_builddir="$srcdir"/qttranslations-opensource-src-$_ver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	qmake && make || return 1
}

package() {
	cd "$_builddir"
	make install INSTALL_ROOT="$pkgdir" || return 1
}

md5sums="bf28303e7355556610b2dbc1b171da37  qttranslations-opensource-src-5.3.0-beta.tar.xz"
sha256sums="10defa52ea892aca78d52910b5748948c3572243e15bff0ea39a491a98bfe747  qttranslations-opensource-src-5.3.0-beta.tar.xz"
sha512sums="e4b5b82b95d9f713327a2c9f241b2676d0b4afa6c20d52bfa97bed09a5af363a03e2bbfd87d67b2332a0264529a0bfc4573dd8e9b93ce3899bedf9cac2820d7b  qttranslations-opensource-src-5.3.0-beta.tar.xz"
