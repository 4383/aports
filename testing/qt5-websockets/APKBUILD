sha512sums="6b4adc5a2ba3403b6a733b84bb9bb7a696db50c264b26841f67b6cc20bff44bf9743d3fd2d95f94b3e68127be6f411c3398ed7e910480658c3065549302b1958  qtwebsockets-opensource-src-5.6.2.tar.xz"
