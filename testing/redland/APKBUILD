# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer:
pkgname=redland
pkgver=1.0.13
pkgrel=0
pkgdesc="high-level RDF library"
url="http://www.librdf.org/"
arch="all"
license="GPL"
depends=
depends_dev="raptor2-dev rasqal-dev sqlite-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://download.librdf.org/source/redland-$pkgver.tar.gz"

_builddir="$srcdir"/redland-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="96c15f36f842ad7e1c9d225e4ca97b68  redland-1.0.13.tar.gz"
