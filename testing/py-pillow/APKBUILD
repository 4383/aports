pkgname=py-pillow
_pkgname=Pillow
pkgver=2.1.0
pkgrel=0
pkgdesc="A Python Imaging Library"
url="http://python-imaging.github.io/"
arch="all"
license="PSF"
depends="python"
depends_dev=""
makedepends="python-dev py-setuptools freetype-dev jpeg-dev zlib-dev"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.zip"

_builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums="ec630d8ae15d4a3c4ae7b7efdeac8200  Pillow-2.1.0.zip"
sha256sums="c733088b9a6f856386d3fcff8c54b3c1bc623a69f7481348fe36320513d98076  Pillow-2.1.0.zip"
sha512sums="a81321ac7a5cc94c861e93ef0975a439044a1cbbb02a41815796dc73849fc233e11f38ca2b53e286ab46ab0d7c3ab2fc06140762df85e09fd64d0f1938e5ec4d  Pillow-2.1.0.zip"
