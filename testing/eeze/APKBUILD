# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=eeze
pkgver=1.0.1
pkgrel=1
pkgdesc="Enlightenment's device library"
url="http://trac.enlightenment.org/e/wiki/Eeze"
arch="all"
license="BSD"
depends=
depends_dev="eina-dev ecore-dev udev-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://download.enlightenment.org/releases/eeze-$pkgver.tar.gz"

_builddir="$srcdir"/eeze-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	"$pkgdir"/usr/lib/*.la
}

md5sums="e36b5e8ed444c8d13d27fd82d5f71659  eeze-1.0.1.tar.gz"
