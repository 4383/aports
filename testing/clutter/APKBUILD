# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer:
pkgname=clutter
pkgver=1.6.8
pkgrel=1
pkgdesc="library for creating fast, visually-appealing interfaces"
url="http://www.clutter-project.org/"
arch="all"
license="LGPL"
depends=
depends_dev="gdk-pixbuf-dev json-glib-dev atk-dev pango-dev mesa-dev libxcomposite-dev cairo-dev"
makedepends="$depends_dev gobject-introspection intltool"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.gnome.org/pub/GNOME/sources/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2"

_builddir="${srcdir}/${pkgname}-${pkgver}"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="9eedac4216f709a9f144940d24bfbb3e  clutter-1.6.8.tar.bz2"
