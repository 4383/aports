pkgname=py-importlib
_pkgname=importlib
pkgver=1.0.1
pkgrel=0
pkgdesc="Backport of importlib module from Python 2.7 and up"
url="http://pypi.python.org/pypi/importlib"
arch="noarch"
license="BSD"
depends=
depends_dev="python-dev py-setuptools"
makedepends="$depends_dev"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/i/${_pkgname}/${_pkgname}-$pkgver.tar.gz"
_builddir="$srcdir"/$_pkgname-$pkgver
package() {
	cd "$_builddir"
	python setup.py install --root=$pkgdir/ --optimize=1 || return 1
}

md5sums="1ea851d370b029ed1bfaeb224da210fb  importlib-1.0.1.tar.gz"
