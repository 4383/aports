sha512sums="8f914d8cc9314befb9096b069ec59eb01969775a87ff0700d36ca0b6816f2065fbc50c61aaeba5fca2e59d096c5a14adc50600b752cc1aa1771050e738fd0e8d  salt-api-0.8.3.tar.gz"
