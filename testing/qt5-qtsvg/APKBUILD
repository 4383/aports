# Contributor:
# Maintainer:
pkgname=qt5-qtsvg
pkgver=5.3.0_beta0
pkgrel=0
pkgdesc="Qt5 - Support for rendering and displaying SVG"
url="http://qt-project.org/"
arch="all"
license="LGPLv2 with exceptions or GPLv3 with exceptions"
depends=""
depends_dev="qt5-qtbase-dev"
makedepends="$depends_dev zlib-dev"
install=""
subpackages="$pkgname-dev"

_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
case $pkgver in
*_beta*) _rel=development_releases;;
*) _rel=official_releases;;
esac

source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/qtsvg-opensource-src-$_ver.tar.xz"

_builddir="$srcdir"/qtsvg-opensource-src-$_ver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	qmake && make || return 1
}

package() {
	cd "$_builddir"
	make install INSTALL_ROOT="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="1905a43dea03d08a33918c2d7e5aa342  qtsvg-opensource-src-5.3.0-beta.tar.xz"
sha256sums="348c2cb1c3d4841928cee4cd6c637ac214d56dc6d19c66ae3cce7fb5d27fde33  qtsvg-opensource-src-5.3.0-beta.tar.xz"
sha512sums="bb3367678386b55dd165288b314ef2317f541567039226d6443b485ff4edf3d245cba122cd707f3732510c10088b5582f755a8943c669278d4c14d294086e9ca  qtsvg-opensource-src-5.3.0-beta.tar.xz"
