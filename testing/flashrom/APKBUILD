_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	# apply patches here
}

build() {
	cd "$_builddir"
	make PREFIX=/usr/ || return 1
}

package() {
	cd "$_builddir"
	make PREFIX="$pkgdir/usr/" install  
}

