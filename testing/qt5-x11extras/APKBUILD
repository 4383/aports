sha512sums="52158b0de2d30ad629e066b34dff0665a70cb9ab895773f3bc129c15ca8072b82ec6759f4d7b9f5d893355e28f1a916a015c6726db289845d1854f9544336f31  qtx11extras-opensource-src-5.6.2.tar.xz"
