# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=wavemon
pkgver=0.7.6
pkgrel=0
pkgdesc="Ncurses-based monitoring application for wireless network devices"
url="http://eden-feed.erg.abdn.ac.uk/wavemon/"
arch="all"
license="GPL2+"
depends=""
depends_dev="ncurses-dev libcap-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="http://eden-feed.erg.abdn.ac.uk/wavemon/stable-releases/${pkgname}-${pkgver}.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make CFLAGS="-pthread" || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR=$pkgdir install || return 1
}

md5sums="c60e25feb8b1785cf14371556f0613f4  wavemon-0.7.6.tar.bz2"
sha256sums="de0c64fe5fa2d439417ca4fe0863c417ec59276a9c9aec5afac77f5edfa79ca1  wavemon-0.7.6.tar.bz2"
sha512sums="95f47204e50c1a44a2230e2d8cbed90d76e53f5e674f6f54f64ba6c99590c90213d9422e62951d55bcf4c8e2325e63e6a7c0c7d1b14a4120d5f0d291dc36cd68  wavemon-0.7.6.tar.bz2"
