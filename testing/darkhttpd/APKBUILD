sha512sums="dba843a5cdd1825666f1a4f2ae578e694c69f6f3d4e72586ab6cb96ef35e5581295ccbdff80bb8f58aba91f4c3342fe213604cb8eac5cbbd49d34bc8a0d795e4  darkhttpd-1.9.tar.bz2
