# Maintainer:
pkgname=raptor2
pkgver=2.0.2
pkgrel=0
pkgdesc="RDF parsing/storage backend"
url="http://www.librdf.org/"
arch="all"
license="GPL"
depends=
depends_dev="curl-dev libxml2-dev libxslt-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://download.librdf.org/source/raptor2-$pkgver.tar.gz"

_builddir="$srcdir"/raptor2-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="b0f874c200c4b3214b5bf4806ae82353  raptor2-2.0.2.tar.gz"
