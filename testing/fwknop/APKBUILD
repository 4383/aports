sha512sums="903866c646521f89307b817012bf89353ca5f2b858e34a8a6db5444e6c4cf3df31ff8ac8a08ec1a7d9e36a7fa71cfae9e231bb014499c237db19d4f8cf1ea9d7  fwknop-2.6.6.tar.gz
