sha256sums="0f75f4551357a19200d14aa4df69755291a9db1b6fd49ab7ac51fd795c0a87e2  xfce4-whiskermenu-plugin-1.4.0-src.tar.bz2"
sha512sums="1055e6d31ca6d2077a0d34524c5231f354a865e626ad2870af6a426dc368684b9a0e333d1476e2ae081553f4aff69581bfe1ce68948dc129c115806d82e62e70  xfce4-whiskermenu-plugin-1.4.0-src.tar.bz2"
