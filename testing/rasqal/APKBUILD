# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=rasqal
pkgver=0.9.20
pkgrel=2
pkgdesc="RDF query library"
url="http://www.librdf.org/"
arch="all"
license="GPL"
depends=
depends_dev="raptor-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://download.librdf.org/source/rasqal-$pkgver.tar.gz"

_builddir="$srcdir"/rasqal-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="c45b6cd784298e264e8757d14355ecce  rasqal-0.9.20.tar.gz"
