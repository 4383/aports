# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtmultimedia
pkgver=5.3.0_beta0
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
pkgrel=0
pkgdesc="Qt5 - Multimedia support"
url="http://qt-project.org/"
arch="all"
license="LGPLv2 with exceptions or GPLv3 with exceptions"
depends=""
depends_dev=""
makedepends="$depends_dev qt5-qtbase-dev qt5-qtdeclarative-dev
	alsa-lib-dev libxv-dev gstreamer-dev gst-plugins-base-dev"
install=""
subpackages="$pkgname-dev"
case $pkgver in
*_beta*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/qtmultimedia-opensource-src-$_ver.tar.xz"

_builddir="$srcdir"/qtmultimedia-opensource-src-$_ver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	qmake && make || return 1
}

package() {
	cd "$_builddir"
	make install INSTALL_ROOT="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="3f605ea5163a2452d3edbefa5b9b84f1  qtmultimedia-opensource-src-5.3.0-beta.tar.xz"
sha256sums="8d39a8381cf5061d5c5581f1577581f85f86b6d4d41aea0d4178a616c9db6946  qtmultimedia-opensource-src-5.3.0-beta.tar.xz"
sha512sums="2e3b66e86bc06ab582210c9d8652ab63066a6043fbe70e76dcb18ef2eccdce0186cb5f5f7855a0ad080f4aac67553ef6db6347c8caa6d28c7a4455d68f5b1aa9  qtmultimedia-opensource-src-5.3.0-beta.tar.xz"
