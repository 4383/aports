# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs-uglify-to-browserify
_pkgname=${pkgname#nodejs-}
pkgver=1.0.2
pkgrel=0
pkgdesc="A transform to make UglifyJS work in browserify"
url="https://github.com/ForbesLindesay/uglify-to-browserify"
arch="noarch"
license="MIT"
depends="nodejs"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json index.js "$pkgdir"/$_moduledir
}

