# Maintainer:
pkgname=py-gstreamer0.10
pkgver=0.10.22
pkgrel=0
pkgdesc="Python bindings for GStreamer 0.10"
url="http://gstreamer.freedesktop.org/"
arch="all"
license="LGPL"
depends="python"
depends_dev="gstreamer0.10-dev gst-plugins-base0.10-dev py-gtk-dev py-gobject-dev"
makedepends="python-dev $depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://gstreamer.freedesktop.org/src/gst-python/gst-python-$pkgver.tar.gz"

_builddir="$srcdir"/gst-python-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
        update_config_sub || return 1
	./configure \
                --build=$CBUILD \
                --host=$CHOST \
                --prefix=/usr \
                --sysconfdir=/etc \
                --mandir=/usr/share/man \
                --infodir=/usr/share/info \
                --localstatedir=/var \
                || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir" -name '*.la' -delete
}

md5sums="83cfa59d596bb876b6b576027f2d2b0e  gst-python-0.10.22.tar.gz"
sha256sums="27a445e010918a5c1a987e30f47093bd6914b4223a383f2cdeeaab107c1172ec  gst-python-0.10.22.tar.gz"
sha512sums="4b128503071f43bfafad66d70ca584b302a4fbad116d9996d74e8094e909dadc358f0dd82ca76b83940fb42fc7ae647d04b8cba06d18c5454b3749d964fb302f  gst-python-0.10.22.tar.gz"
