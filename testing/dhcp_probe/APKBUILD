# Maintainer: Francesco Colista <francesco.colista@gmail.com>
pkgname=dhcp_probe
pkgver=1.3.0
pkgrel=0
pkgdesc="Allows network administrators to make calculations that will assist in subnetting a network"
url="http://www.net.princeton.edu/software/dhcp_probe/"
arch="all"
license="GPL"
depends=""
depends_dev="libnet-dev libpcap-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="http://www.net.princeton.edu/software/dhcp_probe/$pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}
build() {
	cd "$_builddir"
	./configure --prefix=/usr
	make || return 1
}
package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}
md5sums="8067e696fbd88120bdcc2ffef4b64da2  dhcp_probe-1.3.0.tar.gz"
