# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=remmina-plugins
pkgver=0.8.4
pkgrel=0
pkgdesc="Remina plugins main."
url="http://sourceforge.net/projects/remmina/"
license="GPL"
depends=""
makedepends="perl remmina-dev freerdp-dev libxkbfile-dev gtk+-dev libssh-dev
	jpeg-dev"
install=
source="http://downloads.sourceforge.net/project/remmina/${pkgver%.*}/remmina-plugins-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
build () 
{ 
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr \
		--enable-ssh \
		--enable-rdp \
		--enable-vnc \
		--enable-xdmcp \
		--enable-nx \
		--disable-telepathy \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	# remove *.a and *.la
	rm "$pkgdir"/usr/lib/remmina/plugins/*.*a
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="873f1cf8afb46a911e1a4bd90d776f15  remmina-plugins-0.8.4.tar.gz"
