# Contributor:
# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
pkgname=virt-manager
pkgver=0.9.0
pkgrel=1
pkgdesc="GUI for managing virtual machines"
url="http://virt-manager.et.redhat.com/"
arch="noarch"
license="GPL"
depends="dbus gconf gtk-vnc librsvg libvirt libxml2 python rarian virtinst vte"
depends_dev="intltool"
makedepends="$depends_dev"
install=
subpackages="$pkgname-doc"
source="http://virt-manager.et.redhat.com/download/sources/$pkgname/$pkgname-$pkgver.tar.gz"


_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	# apply patches here
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install

	# remove the 2 lines below (and this) if there is no init.d script
	# install -m755 -D "$srcdir"/$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
	# install -m644 -D "$srcdir"/$pkgname.confd "$pkgdir"/etc/conf.d/$pkgname
}

md5sums="a10331b467f92f4134a39bf636e04adc  virt-manager-0.9.0.tar.gz"
