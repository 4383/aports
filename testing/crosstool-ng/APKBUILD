sha512sums="ca4d3dc4badce78ea440515f2ed949be76fd3b36268ca9177c9b0b8b470af28224a1c1a820b0ec4c320369abf9d237e612c0a4dd3eaf41a5054ecb5dd1a2c960  crosstool-ng-1.18.0.tar.bz2"
