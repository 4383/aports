# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=s6-rc
pkgver=0.0.1.2
pkgrel=0
pkgdesc="A service manager for s6-based systems"
url="http://skarnet.org/software/s6-rc/"
arch="all"
license="ISC"
depends="s6"
depends_dev="skalibs-dev execline-dev s6-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="3adacc04fcd783f83a5732224eb32632  s6-rc-0.0.1.2.tar.gz"
sha256sums="1ca0e494c4361c4717f61620e4dc8f9e60ba39b39a91c3b660a063f8d0e1aa0e  s6-rc-0.0.1.2.tar.gz"
sha512sums="83d7ca6a9819c4c4b7b1c394f9a995165fdbba6b4f58c4e39a47ec90c68610bea273f1b72901880076165f5bf736cfa1ec4223fd58dde048924a2810c3b1a1c8  s6-rc-0.0.1.2.tar.gz"
