# Maintainer: Francesco Colista <francesco.colista@gmail.com>
pkgname=diakonos
pkgver=0.9.1
pkgrel=0
pkgdesc="A Linux editor for the masses"
url="http://diakonos.pist0s.ca/download/"
arch="noarch"
license="MIT"
depends="ruby"
depends_dev=""
makedepends=""
subpackages="$pkgname-doc"
source="http://diakonos.pist0s.ca/archives/$pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	return 0
}

package() {
	cd "$_builddir"
	ruby install.rb --dest-dir $pkgdir --prefix /usr --lib-dir /usr/lib --conf-dir /etc
	install -D -m644 LICENCE $pkgdir/usr/share/licenses/diakonos/MIT
}

md5sums="2f85e2d39ceb51bd3ea4418fbb9da57e  diakonos-0.9.1.tar.gz"
sha256sums="7d0491ecab4be9b887cf3efe175c0547bd9ab97cd633c805b18ca0bd5b20a2ad  diakonos-0.9.1.tar.gz"
sha512sums="30aa1ec48c8404c7da835bdb359929c88f66c8604938228b88b2af8cad1ca2a1b0d3c718643eead13db2cad698e0fa6b9da5cea71459e567477893e35c9d371d  diakonos-0.9.1.tar.gz"
