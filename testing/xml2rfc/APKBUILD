# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=xml2rfc
pkgver=2.4.1
pkgrel=0
pkgdesc="a tool for converting XML documents into internet drafts and RFCs"
url="http://tools.ietf.org/"
arch="noarch"
license="BSD"
depends="python py-lxml"
depends_dev=""
makedepends="$depends_dev py-setuptools"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/x/xml2rfc/xml2rfc-$pkgver.tar.gz"

_builddir="$srcdir"/xml2rfc-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

package() {
	cd "$_builddir"
	python setup.py install --root="$pkgdir" || return 1
}

md5sums="abcca3da5ce2579e22bc6140edb0f484  xml2rfc-2.4.1.tar.gz"
