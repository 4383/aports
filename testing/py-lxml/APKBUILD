pkgname=py-lxml
_pkgname=lxml
pkgver=3.2.3
pkgrel=0
pkgdesc="Python LXML Library"
url="http://lxml.de/"
arch="all"
license="BSD"
depends=""
makedepends="libxml2-dev libxslt-dev py-setuptools"
install=""
source="http://pypi.python.org/packages/source/l/lxml/$_pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$_pkgname-$pkgver

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

