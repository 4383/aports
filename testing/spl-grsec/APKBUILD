# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
_flavor=${FLAVOR:-grsec}
_realname=spl
_name=$_realname-$_flavor

_kpkg=linux-$_flavor
_kver=3.6.11
_kpkgrel=13

_realver=0.6.0-rc11
_mypkgrel=0

# source the kernel version
if [ -f ../../main/linux-$_flavor/APKBUILD ]; then
        . ../../main/linux-$_flavor/APKBUILD
        [ "$_kver" != "$pkgver" ] && die "$_name: Please update _kver to $pkgver"
        [ "$_kpkgrel" != "$pkgrel" ] && die "$_name: Please update _kpkgrel to $pkgrel"
fi

_kernelver=$_kver-r$_kpkgrel
_abi_release=$_kver-${_flavor}

pkgname=$_name
pkgver=$_kver
pkgrel=$(($_kpkgrel + $_mypkgrel))
pkgdesc="Solaris Porting Layer"
url="http://zfsonlinux.org"
arch=""
license="GPL"
depends=""
depends_dev="linux-grsec-dev"
makedepends="$depends_dev perl automake autoconf libtool"
install=""
subpackages="$pkgname-dev"
source="http://github.com/downloads/zfsonlinux/spl/spl-$_realver.tar.gz"

_builddir="$srcdir"/spl-$_realver

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	export GCC_SPECS=/usr/share/gcc/hardenednopie.specs
	./autogen.sh || return 1
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-config=all \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev
}

md5sums="06d1421c005c2216baa759903c9322c3  spl-0.6.0-rc11.tar.gz"
