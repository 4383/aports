# Maintainer: Bart≈Çomiej Piotrowski <nospam@bpiotrowski.pl>

pkgname=calcurse
pkgver=3.0.0
pkgrel=1
pkgdesc='A text-based personal organizer.'
url='http://calcurse.org/'
license='BSD'
arch='all'
makedepends='libiconv-dev ncurses-dev'
subpackages="$pkgname-doc"
source="http://calcurse.org/files/${pkgname}-${pkgver}.tar.gz"

build() {
    cd "$srcdir"/$pkgname-$pkgver
    ./configure \
        --prefix=/usr \
        --mandir=/usr/share/man \
        --enable-docs \
        --without-asciidoc 
    make
}

package() {
    cd "$srcdir"/$pkgname-$pkgver
    make DESTDIR="$pkgdir" install
}

md5sums="3e25d04afeecd8f21e064e8b1db8f02b  calcurse-3.0.0.tar.gz"
