# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=py-appliancekit-ng
pkgver=0.3.4
pkgrel=0
pkgdesc="abstract appliance image builder"
url="http://bitbucket.org/tortoiselabs/appliancekit-ng"
arch="noarch"
license="ISC"
depends="python py-jinja2"
depends_dev=""
makedepends="python-dev"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/A/ApplianceKit-NG/ApplianceKit-NG-$pkgver.tar.gz"

_builddir="$srcdir"/ApplianceKit-NG-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums="411593e2a219e28b1b354977937812ea  ApplianceKit-NG-0.3.4.tar.gz"
sha256sums="cd7e8d5ce54a7721b3af31a0cd5ab574a35cbe4424a397d83feb2c935ae86d8b  ApplianceKit-NG-0.3.4.tar.gz"
sha512sums="60e2ff7f6c496c7e4d5dbed63454e9175cbbb886b84dee12a6e0e0c46d0ad8a6392e4a58b6681d4c7094fe3110faf2a01b048378301ad73356e823e3a6ae784f  ApplianceKit-NG-0.3.4.tar.gz"
