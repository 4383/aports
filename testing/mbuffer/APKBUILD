# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=mbuffer
pkgver=20130220
pkgrel=0
pkgdesc="Measuring Buffer is an enhanced version of buffer"
url="http://www.maier-komor.de/mbuffer.html"
arch="all"
license="GPL3+"
depends=""
depends_dev=""
makedepends="mt-st mhash-dev"
install=""
subpackages="$pkgname-doc"
source="http://www.maier-komor.de/software/mbuffer/$pkgname-$pkgver.tgz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="69674ee0a06dbd8fb26c8d5b3e8c8a2d  mbuffer-20130220.tgz"
sha256sums="1d549c3ac7e29c6064b63195141a61253095831cf5d16f419ae6cc342f12c512  mbuffer-20130220.tgz"
sha512sums="c7bc866fa465868ceced68c6089b4c666beee43ce5c79d1d712a0ef75559dc3e12c4809fc46bedfa0b44c4f75131c0770ece3cbb75356c860e441dbdd986b899  mbuffer-20130220.tgz"
