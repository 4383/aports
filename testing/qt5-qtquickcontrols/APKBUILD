sha256sums="dac6d50e8adc78c6108b89a68611b85fa70d0a661cc819d463ee5ceab8115183  qtquickcontrols-opensource-src-5.3.0-RC.tar.xz"
sha512sums="fee0e537f72575f89d01b292e111f130b6179fa3e9ac66fcd1e0d84af4e7d9546b89bb1232e77f6715ee94e7f6057666f90fc0ed6a6e2f4081695807b847e844  qtquickcontrols-opensource-src-5.3.0-RC.tar.xz"
