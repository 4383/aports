# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=slibtool
pkgver=0.5.14
pkgrel=0
pkgdesc="a surrogate libtool implementation, written in C"
url=" http://git.midipix.org/cgit.cgi/slibtool"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends=""
install=""
subpackages=""
source="http://midipix.org/dl/slibtool/slibtool-$pkgver.tar.xz"

builddir="$srcdir"/slibtool-$pkgver
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="46e1b80886aee8f5db2ba300e921cba45283b1b8f5382671411ca1ed5c9f478c87903725bf887be023218d5bde9fc87e29b921170753983c36eb3ee6d0caaf4e  slibtool-0.5.14.tar.xz"
