# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=slibtool
pkgver=0.5.16
pkgrel=0
pkgdesc="a surrogate libtool implementation, written in C"
url=" http://git.midipix.org/cgit.cgi/slibtool"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends=""
install=""
subpackages=""
source="http://midipix.org/dl/slibtool/slibtool-$pkgver.tar.xz"

builddir="$srcdir"/slibtool-$pkgver
build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$builddir"
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="9cf8cc9d73aad539b65029b5ea768bbd20bce07f30467351077283830bda5c55c5b92d48d0ac5229ec650646f58cd9c76f7e3f5bb5864fcb0de2034db1472871  slibtool-0.5.16.tar.xz"
