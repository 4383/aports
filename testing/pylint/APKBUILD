# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=pylint
pkgver=1.4.1
pkgrel=0
pkgdesc="Analyzes Python code looking for bugs and signs of poor quality"
url="http://pypi.python.org/pypi/pylint"
arch="noarch"
license="GPL2+"
depends="python py-astroid"
depends_dev=""
makedepends="python-dev py-setuptools py-astroid"
install=""
subpackages="$pkgname-doc"
source="http://pypi.python.org/packages/source/${pkgname:0:1}/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

doc() {
    # The man page is not picked-up automatically
	mkdir -p "$subpkgdir"/usr/share/man/man1 || return 1
    mv "$_builddir"/man/*.1 "$subpkgdir"/usr/share/man/man1/ || return 1
}

md5sums="df7c679bdcce5019389038847e4de622  pylint-1.4.1.tar.gz"
sha256sums="3e383060edd432cbbd0e8bd686f5facfe918047ffe1bb401ab5897cb6ee0f030  pylint-1.4.1.tar.gz"
sha512sums="019405c16ef731f83c12e2b0a7f4b3fc2e17f35df50a18dbbc084ed14450a070e689850b8d7761e2fba0d2a8f6c70ef06709de5b96e59af7da9cc6cc412bbf25  pylint-1.4.1.tar.gz"
