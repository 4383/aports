sha512sums="6b1243a29d94e6b26e92da04ce9d308d0957c46fcacb16711f5037f351bb48e9e80070a7e8d4f7e934698d4b394df982c81df489a8bb8b8f6021e2c99c0b0c19  xf86-input-libinput-0.16.0.tar.bz2"
