# Contributor: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
# Maintainer:
pkgname=acf2
pkgver=0.2.2
pkgrel=0
pkgdesc="Alpine Configuration Framework, 2nd generation"
url="http://git.alpinelinux.org/cgit/kunkku/acf2/"
arch="noarch"
license="BSD"
depends="lua5.2-augeas lua5.2-cjson lua5.2-crypto lua5.2-openrc lua5.2-posix \
         lua5.2-stringy uwsgi uwsgi-lua"
makedepends=""
source="${url}snapshot/${pkgname}-${pkgver}.tar.bz2 $pkgname.initd"

_builddir=$srcdir/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	make ROOT_DIR=$pkgdir install || return 1
	install -m755 -D "$srcdir"/$pkgname.initd \
		"$pkgdir"/etc/init.d/$pkgname || return 1
}

md5sums="4ae86bfe550f40df7f3fbcc1753abae2  acf2-0.2.2.tar.bz2
23fd4825db4365e646dbbf7a235db5f5  acf2.initd"
