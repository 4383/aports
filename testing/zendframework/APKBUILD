# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=zendframework
pkgver=2.1.1
pkgrel=0
pkgdesc="PHP web application framework"
url="http://framework.zend.com/"
arch="all"
license="PHP"
depends=""
depends_dev=""
makedepends=""
install=""
subpackages=""
source="https://packages.zendframework.com/releases/ZendFramework-$pkgver/ZendFramework-$pkgver.tgz"

_builddir="$srcdir"/ZendFramework-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/share/php/zend
	cp -a "$_builddir"/* "$pkgdir"/usr/share/php/zend/

}

md5sums="ae631b9774d69ce06cff4afbb395dd63  ZendFramework-2.1.1.tgz"
sha256sums="fd9bf9dcc2a53cae9f39bcea90686a23d4b766f77c7c8f545e15e06c5a4ff213  ZendFramework-2.1.1.tgz"
sha512sums="e67976ec7cfc8a354de70826e6a2ed28fa7280a28b8669ca1fa67d3c54ffcadae390f8fa324d46a055a38db3132e6959e92e026611365f92359e0c0d7253afdc  ZendFramework-2.1.1.tgz"
