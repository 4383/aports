# Maintainer: Francesco Colista <francesco.colista@gmail.com>
pkgname=xapian-core
pkgver=1.2.19
pkgrel=0
pkgdesc="Open source search engine library"
url="http://www.xapian.org/"
arch="all"
license="GPL2+"
depends=""
depends_dev="zlib-dev libgcc e2fsprogs-dev libtool"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://oligarchy.co.uk/xapian/$pkgver/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="54ec8333757eb94dbde76d31d185af91  xapian-core-1.2.19.tar.xz"
sha256sums="4a78260388ff1b042f0ab5d18afdd524a530ae609690d0339990ddc147a54785  xapian-core-1.2.19.tar.xz"
