# Maintainer: Francesco Colista <francesco.colista@gmail.com>
pkgname=xapian-core
pkgver=1.2.18
pkgrel=0
pkgdesc="Open source search engine library"
url="http://www.xapian.org/"
arch="all"
license="GPL2+"
depends=""
depends_dev="zlib-dev libgcc e2fsprogs-dev libtool"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://oligarchy.co.uk/xapian/$pkgver/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="0ccbf68ade12e7b1ead10c57f4447899  xapian-core-1.2.18.tar.xz"
sha256sums="762c62d905608b8e411511f43ede84c52c49a94822d32d86c7b975fefb30209a  xapian-core-1.2.18.tar.xz"
sha512sums="088284e628d834ed4d5365ca002b7885a5011b08c8b4e0d5805e3201110e9cb7acc2936b95fba0767c9f1d9c65da59a99cbc523ed145533695e484ab94764e62  xapian-core-1.2.18.tar.xz"
