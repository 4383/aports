# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=quvi
pkgver=0.2.15
pkgrel=1
pkgdesc="Command line tool for parsing video download links"
url="http://quvi.sourceforge.net/"
arch="all"
license="LGPLv2+"
depends=
depends_dev="curl-dev pcre-dev lua-dev zlib-dev openssl-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://downloads.sourceforge.net/project/quvi/${pkgver%.*}/quvi-$pkgver.tar.gz"

_builddir="$srcdir"/quvi-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="7cda6c6593c1281e89d91de3b0bed284  quvi-0.2.15.tar.gz"
