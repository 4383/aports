sha256sums="b829aa6009fbff919db903f8c6d7a80c3a77513a3dcd003aba0be5010cfd7d74  salt-cloud-0.8.9.tar.gz"
sha512sums="a514dd6c1294089278b109b4a24bba20409d8bd8dd190133f46f2f777d39812d4420a9e0754dd8e173cac4709584c178ebc40fdf3fac7201e6ad22b4cf7d65fd  salt-cloud-0.8.9.tar.gz"
