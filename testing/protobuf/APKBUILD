# Contributor: Kiyoshi Aman <kiyoshi.aman@gmail.com>
# Maintainer:
pkgname=protobuf
pkgver=2.4.0a
pkgrel=0
pkgdesc="Library for extensible, efficient structure packing"
url="http://code.google.com/p/protobuf/"
arch="all"
license="BSD"
depends=
depends_dev=
makedepends="zlib-dev"
install=""
subpackages="$pkgname-dev"
source="http://protobuf.googlecode.com/files/protobuf-$pkgver.tar.bz2"

_builddir="$srcdir"/protobuf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
	make check || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

py() {
	depends="python"
	cd "$_builddir"/python
	mkdir -p "$subpkgdir"/usr/lib/python2.6/site-packages/
	install -m644 google "$subpkgdir"/usr/lib/python2.6/site-packages
}

md5sums="61df3f63ec284fc6f57a68c67e4918c6  protobuf-2.4.0a.tar.bz2"
