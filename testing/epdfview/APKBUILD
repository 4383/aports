# Maintainer:
pkgname=epdfview
pkgver=0.1.8
pkgrel=0
pkgdesc="A free lightweight PDF document viewer using Poppler and GTK+ libraries"
url="http://trac.emma-soft.com/epdfview/"
arch="x86 x86_64"
license="GPL"
depends=""
makedepends="glib-dev gtk+2.0-dev poppler-dev poppler-gtk-dev"
install=""
subpackages="$pkgname-doc"
source="
	http://trac.emma-soft.com/$pkgname/chrome/site/releases/$pkgname-$pkgver.tar.bz2
"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="e50285b01612169b2594fea375f53ae4  epdfview-0.1.8.tar.bz2"
