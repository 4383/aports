# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=xf86-video-modesetting
pkgver=0.7.0
pkgrel=0
pkgdesc="X.org generic modesetting video drive"
url="http://cgit.freedesktop.org/xorg/driver/xf86-video-modesetting/"
arch="all"
license="custom"
depends=""
depends_dev="xorg-server-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="http://xorg.freedesktop.org/releases/individual/driver/xf86-video-modesetting-$pkgver.tar.bz2"

_builddir="$srcdir"/xf86-video-modesetting-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/xorg/modules/*/*.la || return 1
}

md5sums="38e64eb09cef9bdf1de400bbe9818321  xf86-video-modesetting-0.7.0.tar.bz2"
sha256sums="2bc55f776eaee7b4e13df13238d36c4facf1cdca095a11519baf2376f5c996ac  xf86-video-modesetting-0.7.0.tar.bz2"
sha512sums="7ef474e014ff73c3c202a035c5f3821cf2c49e3eb98af6e858c1b06faa340bd78dbbda6413617f2457f8b7b572ee306fb2b3191a8afb7601a7d49e4bdba8f7bd  xf86-video-modesetting-0.7.0.tar.bz2"
