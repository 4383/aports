#!/bin/sh
sed -i -e "s/daemon.*/daemon\ton/" /etc/yadifa/yadifad.conf  >&2
sed -i -e "s/logpath.*/logpath\t\t\"\/var\/log\/yadifa\"/" /etc/yadifa/yadifad.conf  >&2
sed -i -e "s/pidpath.*/pidpath\t\t\"\/var\/run\"/" /etc/yadifa/yadifad.conf  >&2
sed -i -e "s/chroot.*/chroot\ton/" /etc/yadifa/yadifad.conf  >&2
sed -i -e "s/uid.*/uid\tyadifa/" /etc/yadifa/yadifad.conf >&2
sed -i -e "s/gid.*/gid\tyadifa/" /etc/yadifa/yadifad.conf  >&2
exit 0
