pkgname=py-flask-wtf
_pkgname=Flask-WTF
pkgver=0.9.2
pkgrel=0
pkgdesc="Flask WTForms extension"
url="https://pypi.python.org/pypi/Flask-WTF"
arch="noarch"
license="BSD"
depends="python py-flask"
depends_dev=""
makedepends="python-dev py-setuptools py-wtforms"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums="a7a130ce5ecedef0b5579f5551e0ef52  Flask-WTF-0.9.2.tar.gz"
sha256sums="191a160bfeae0ee1210e9b79258f72eccd3f90b70ef841f59b7a3e3778ea909d  Flask-WTF-0.9.2.tar.gz"
sha512sums="5c103b1327a5ad5bdff5612a82dc302c7692a7343361b5305f08a90c28f7d481b8b4c39c2af016964172c4fa2e3dfc0590cbfc91e179edc595477444f639a084  Flask-WTF-0.9.2.tar.gz"
