pkgname=m4
pkgver=1.4.11
pkgrel=0
pkgdesc="GNU macro processor"
arch=i486
url="http://www.gnu.org/software/m4"
source=ftp://ftp.gnu.org/gnu/m4/$pkgname-$pkgver.tar.gz
depends=uclibc
makedepends="binutils gcc linux-headers make uclibc-dev"
license=GPL
subpackages="m4-doc"
splitfuncs="doc"
origin="core/$pkgname"

build() {
	cd $srcdir/$pkgname-$pkgver
	./configure --prefix=/usr
	make
	make install DESTDIR="$pkgdir"
}

md5sums="988aa098326d5f2b5b5aa4b3efe8d528  m4-1.4.11.tar.gz"
