pkgname=apk-tools
pkgver=0.15.2
pkgdesc="Alpine Package Keeper - package manager for alpine"
depends="uclibc"
source=http://downloads.sourceforge.net/apk-tools/$pkgname-$pkgver.tar.gz
url="http://apk-tools.sourceforge.net"
license=GPL-2

build() {
	cd $srcdir/$pkgname-$pkgver
	make
	make DESTDIR=$pkgdir install
}

md5sums="7d7ae35ba15741bca82fd5435dddc834  apk-tools-0.15.2.tar.gz"
