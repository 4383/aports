pkgname=apk-tools
pkgver=0.15.1
pkgdesc="Alpine Package Keeper - package manager for alpine"
depends="uclibc"
source=http://downloads.sourceforge.net/apk-tools/$pkgname-$pkgver.tar.gz
url="http://apk-tools.sourceforge.net"
license=GPL-2

build() {
	cd $srcdir/$pkgname-$pkgver
	make
	make DESTDIR=$pkgdir install
}

md5sums="5a1862baf791f52a2ad92f4120550d2b  apk-tools-0.15.1.tar.gz"
