# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=alpine-conf
pkgver=2.0_alpha6
pkgrel=0
pkgdesc="Alpine configuration management scripts"
url=http://git.alpinelinux.org/cgit/$pkgname
depends="openrc"
source=http://git.alpinelinux.org/cgit/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2
license="GPL-2"

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make PREFIX= || return 1
	
	# workaround. fixed in git so this needs to be removed next release
	sed -i -e 's:/usr/share/lbu/libalpine.sh:/lib/libalpine.sh:' lbu

	make install PREFIX= DESTDIR="$pkgdir"
	for i in commit exclude include status update; do
		ln -s lbu "$pkgdir"/sbin/lbu_$i
	done
}
md5sums="e17b7b2cf3aa1089c14eaef2e962b3be  alpine-conf-2.0_alpha6.tar.bz2"
