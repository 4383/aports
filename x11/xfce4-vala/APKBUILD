# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-vala
pkgver=0.1_rc0
_realver=0.1-rc
pkgrel=0
pkgdesc="Vala bindings for Xfce4"
url="http://wiki.xfce.org/vala-bindings"
license="LGPL"
depends="exo-dev libxfce4util-dev libxfce4menu-dev libxfcegui4-dev
	xfce4-panel-dev xfconf-dev vala"
makedepends=""
install=
subpackages=
source="http://goodies.xfce.org/releases/xfce4-vala/$pkgname-$_realver.tar.bz2"

build() {
	cd "$srcdir"/$pkgname-$_realver

	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make || return 1
	make DESTDIR="$pkgdir" install
}

md5sums="190a5846000b36c6a24171f783cfb496  xfce4-vala-0.1-rc.tar.bz2"
