# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=mkfontdir
pkgver=1.0.4
pkgrel=2
pkgdesc="create an index of X font files in a directory"
url="http://xorg.freedesktop.org/"
license="custom"
subpackages="$pkgname-doc"
depends="uclibc mkfontscale"
makedepends="pkgconfig"
install=
triggers="$pkgname.trigger:/usr/share/fonts/*"
source="http://xorg.freedesktop.org/releases/individual/app/$pkgname-$pkgver.tar.bz2"

build() { 
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr 
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
	chmod +x "$pkgdir"/usr/bin/mkfontdir
}
md5sums="35394bf3f746a57fba624dba52fdbba3  mkfontdir-1.0.4.tar.bz2"
