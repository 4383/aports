# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libXext
pkgver=1.0.5
pkgrel=0
pkgdesc="X11 miscellaneous extensions library"
url="http://xorg.freedesktop.org/"
license="custom"
depends="libX11"
makedepends="pkgconfig xproto xextproto libX11-dev libXau-dev"
subpackages="$pkgname-dev $pkgname-doc"
source="http://xorg.freedesktop.org//releases/individual/lib/libXext-$pkgver.tar.bz2"

build() {
	cd "$srcdir"/libXext-$pkgver
	./configure --prefix=/usr --sysconfdir=/etc
	make || return 1
	make DESTDIR="$pkgdir" install || return 1
}
md5sums="aa11d859cc8e9a0bad3bb55e1666547b  libXext-1.0.5.tar.bz2"
