# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=slim-alpinelinux
pkgver=1.0
pkgrel=0
pkgdesc="SLiM theme for Alpine Linux"
url="http://www.alpinelinux.org"
license="GPL"
depends=""
makedepends=""
install=
subpackages=
source="http://dev.alpinelinux.org/~ncopa/alpine/slim-alpinelinux.tar.gz"

build() {
	cd "$srcdir"/$pkgname
	install -d "$pkgdir"/usr/share/slim/themes/alpinelinux
	cp background.png panel.png slim.theme \
		"$pkgdir"/usr/share/slim/themes/alpinelinux/
}

md5sums="cd63232c7770b0e67a009a94c2a46b82  slim-alpinelinux.tar.gz"
