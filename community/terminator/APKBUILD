# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=terminator
pkgver=1.90
pkgrel=3
pkgdesc="Terminal emulator that supports tabs and grids"
url="http://gnometerminator.blogspot.fr/p/introduction.html"
arch="noarch"
license="GPL2"
depends="py-gtk xdg-utils vte dbus-glib gettext intltool keybinder3
	gconf gsettings-desktop-schemas"
subpackages="$pkgname-doc $pkgname-lang"
source="https://launchpad.net/$pkgname/gtk3/1.9/+download/$pkgname-$pkgver.tar.gz"

builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	python2 setup.py build
}

package() {
	cd "$builddir"
	python2 setup.py install --skip-build --root="${pkgdir}"
	rm -f "${pkgdir}/usr/share/icons/hicolor/icon-theme.cache"

}

