sha512sums="a6e69a57a02122501e0a6677d95d1bc95e0cce509f2b9ae2ce6e422d67b5dc1e9fae6be01cb745eaec0f51ba73447db943119748959c72879274d266adaa87e7  xf86-video-geode-2.11.15.tar.bz2"
