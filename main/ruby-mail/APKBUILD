# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=mail
pkgname=ruby-$_gemname
pkgver=2.5.3
pkgrel=0
pkgdesc="A really Ruby Mail handler"
url="http://github.com/mikel/mail"
arch="noarch"
license="MIT"
depends="ruby ruby-i18n ruby-mime-types ruby-treetop"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="5c56ec49a8d94e7c57e5933c0ab86e9d  mail-2.5.3.gem"
sha256sums="338dfc39e30665402aade821584970502e1e039fd972731fc95beff3991ad9a9  mail-2.5.3.gem"
sha512sums="bb72d1dfdeca693cbbbeb064a2051c87187c966033cb52dc487bda855af593c4dbc93ed176a01757978b052a15413d0701df5360fb0408a4ab35d8854c04c4d7  mail-2.5.3.gem"
