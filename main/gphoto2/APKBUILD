# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gphoto2
pkgver=2.5.5
pkgrel=0
pkgdesc="commandline utilities for accessing cameras"
url="http://www.gphoto.org/"
arch="all"
license="GPL"
depends=""
depends_dev="libgphoto2-dev popt-dev gettext-dev libjpeg-turbo-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-lang $pkgname-doc"
source="http://sourceforge.net/projects/gphoto/files/gphoto/$pkgver/gphoto2-$pkgver.tar.bz2"

_builddir="$srcdir"/gphoto2-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="eb2e57da2d2dddb14e377aa80dd21e5e  gphoto2-2.5.5.tar.bz2"
sha256sums="54e9aea97d926bfd7ffbe3b91fcf239ce58be0833df2938a385a67fdcadd14b4  gphoto2-2.5.5.tar.bz2"
sha512sums="542653b5285df2941b971e7f158c6fddebddbe42525f5f7dfcb9ad69007568e8c7f60e49f220823aaa0b93fd4ba35b47e3b81ac222a3e666b98f7f01d905ef19  gphoto2-2.5.5.tar.bz2"
