# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gphoto2
pkgver=2.5.1
pkgrel=0
pkgdesc="commandline utilities for accessing cameras"
url="http://www.gphoto.org/"
arch="all"
license="GPL"
depends=""
depends_dev="libgphoto2-dev popt-dev gettext-dev libjpeg-turbo-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-lang $pkgname-doc"
source="http://sourceforge.net/projects/gphoto/files/gphoto/$pkgver/gphoto2-$pkgver.tar.bz2"

_builddir="$srcdir"/gphoto2-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="03cda6d5b7c647ac4c90d0081f2cb7c7  gphoto2-2.5.1.tar.bz2"
sha256sums="4ddd48aa6db00e318de3f4f3d0e1f171eebcc5641bbc0b4eaf2bf0edce31f68b  gphoto2-2.5.1.tar.bz2"
sha512sums="46ebf18fa9630bf4502eeeac4dc4fb83d63801682c0855ca9e14aa3e3c2a87015f4656d4e6efa4e3468d153105c1b21532a4f1312b6e5960d8cc062115d05674  gphoto2-2.5.1.tar.bz2"
