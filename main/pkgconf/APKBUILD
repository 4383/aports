# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=pkgconf
pkgver=0.9.1
pkgrel=0
pkgdesc="development framework configuration tools"
url="https://github.com/pkgconf/pkgconf"
arch="all"
license="ISC"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
replaces="pkgconfig"
source="http://rabbit.dereferenced.org/~nenolod/distfiles/pkgconf-$pkgver.tar.bz2"

_builddir="$srcdir"/pkgconf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
	make check || return 1
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/bin
	make DESTDIR="$pkgdir" install || return 1
	ln -s pkgconf "$pkgdir"/usr/bin/pkg-config
}

md5sums="850c1abd5368da6d2b4355ab1b0967a6  pkgconf-0.9.1.tar.bz2"
sha256sums="8fafb60fab89b8f8c5407370bbb6b00ab70778d9f6336f388a37803a9907f936  pkgconf-0.9.1.tar.bz2"
