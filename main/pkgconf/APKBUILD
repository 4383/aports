# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=pkgconf
pkgver=0.9.4
pkgrel=0
pkgdesc="development framework configuration tools"
url="https://github.com/pkgconf/pkgconf"
arch="all"
license="ISC"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
replaces="pkgconfig"
source="http://rabbit.dereferenced.org/~nenolod/distfiles/pkgconf-$pkgver.tar.bz2"
subpackages="$pkgname-doc"

_builddir="$srcdir"/pkgconf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
	if [ "$CHOST" = "$CBUILD" ]; then
		make check || return 1
	fi
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/bin
	make DESTDIR="$pkgdir" install || return 1
	ln -s pkgconf "$pkgdir"/usr/bin/pkg-config
}

md5sums="88f34448e9c5c20b23c328824043a239  pkgconf-0.9.4.tar.bz2"
sha256sums="3d7d6ecbbb868145a04851c19a56dbf4ca0bf3ebcbb59f84cb440d95b6ca3cb5  pkgconf-0.9.4.tar.bz2"
sha512sums="3aee90c691c4a5f907b77f7c46e898c52b37f877c765d8dd396937811db0064a0c1e2b7552b29eb1a27d78fa8e046c022263d0ca17f25a4d8d15d1f2c079eddc  pkgconf-0.9.4.tar.bz2"
