# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=pkgconf
pkgver=0.9.5
pkgrel=0
pkgdesc="development framework configuration tools"
url="https://github.com/pkgconf/pkgconf"
arch="all"
license="ISC"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
replaces="pkgconfig"
source="http://rabbit.dereferenced.org/~nenolod/distfiles/pkgconf-$pkgver.tar.bz2"
subpackages="$pkgname-doc"

_builddir="$srcdir"/pkgconf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
	if [ "$CHOST" = "$CBUILD" ]; then
		make check || return 1
	fi
}

package() {
	cd "$_builddir"
	mkdir -p "$pkgdir"/usr/bin
	make DESTDIR="$pkgdir" install || return 1
	ln -s pkgconf "$pkgdir"/usr/bin/pkg-config
}

md5sums="27c1c89ef90c35bec3a633e8f28b1a8d  pkgconf-0.9.5.tar.bz2"
sha256sums="78dd81f5c0d89b65872bf887e9ee66927da1916796731a8d5183b43885e7029d  pkgconf-0.9.5.tar.bz2"
sha512sums="f2a9d0cc1b38637868095960a248d802d2830f6bf03874d9df6c9e68039220ae1996cd75af009f8d8851f773cb1064b7c00cfcca49eadbe41255872027029597  pkgconf-0.9.5.tar.bz2"
