pkgname=gitolite
pkgver=3.6.3
pkgrel=0
pkgdesc='Centralized git server, with very fine-grained access control and many powerful features'
url='http://github.com/sitaramc/gitolite'
arch='noarch'
license='GPL2'
depends='git perl'
install=$pkgname.pre-install
source="https://github.com/sitaramc/$pkgname/archive/v${pkgver}.tar.gz"

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	echo $pkgver > VERSION
}

package() {
	install -d "$pkgdir"/usr/bin || return 1
	install -d "$pkgdir"/usr/lib/gitolite || return 1

	cd "$srcdir"/$pkgname-$pkgver
	./install -to "$pkgdir"/usr/lib/gitolite || return 1
    ln -s /usr/lib/gitolite/gitolite "$pkgdir"/usr/bin/ || return 1
}

md5sums="4c6277cdae3dfd3eab2c37a0a90c97f1  v3.6.3.tar.gz"
sha256sums="9b20eb6ae84358c5f063b02da64e49bef4605c9bfc7fb3700a2766dba58b9d99  v3.6.3.tar.gz"
sha512sums="afb8bcf27052d46725c4b3a6dd483e98ac3e574651bfe2ee35b442f044791acae8a17cbbab4237992a9755367e37f5160514d67cd2d863d623d32ed5fdf39362  v3.6.3.tar.gz"
