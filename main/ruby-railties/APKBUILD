# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=railties
pkgname=ruby-$_gemname
pkgver=4.0.5
pkgrel=0
pkgdesc="Rails internals: application bootup, plugins, generators, and rake tasks"
url="http://www.rubyonrails.org/"
arch="noarch"
license="MIT"
depends="ruby ruby-actionpack ruby-activesupport ruby-rack-ssl ruby-rake
	ruby-rdoc ruby-thor"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="1eca06ebc2600e04ca71f2e1098a66f1  railties-4.0.5.gem"
sha256sums="7c507f1be68dd88612352e4add3f4d5f1de50288761058d6034bf99e5f88b2fe  railties-4.0.5.gem"
sha512sums="24f33ff7bba38f9f51beadaab02b785bd0a9dc709bb33658b4bac2d834d840f98010b3b38c0f8d4fe8c0d1e3af2c34a10b23878b10e13ca2add36ac19fd8c68e  railties-4.0.5.gem"
