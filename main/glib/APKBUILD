sha256sums="01906c62ac666d2ab3183cc07261b2536fab7b211c6129ab66b119c2af56d159  glib-2.38.1.tar.xz"
sha512sums="8471d8d3468040d551e0f34f6818f5839c7109be25d8b62d9b3c789940a7b1fd4fe903fa755cb6b2700509aa791ba9cbce3d80f36c40c9a99f270dcdcc55e79b  glib-2.38.1.tar.xz"
