sha256sums="056a9854c0966a0945e16146b3345b7a82562a5ba4d5516fd10398732aea5734  glib-2.38.2.tar.xz"
sha512sums="f31531060d898dbe05e71ffc4d057f5a703106674e68c28ad2346d227304ef9454736beaf653f27553ed5397caac8baf3d76d3b31b062898762e5cf4e24ff0e0  glib-2.38.2.tar.xz"
