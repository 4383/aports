sha256sums="7513a7de5e814ccb48206340a8773ea523d6a7bf04dc74565de69b899bc2ff32  glib-2.38.0.tar.xz"
sha512sums="0764bc6dad4141a0fccb79fe55fff29c1553c4d8f5d34a4a2c04baacb4e8c6a953c55d387c230fc0b2b8ceefa8aa702920ecb66c8a2b978ea32336d568401831  glib-2.38.0.tar.xz"
