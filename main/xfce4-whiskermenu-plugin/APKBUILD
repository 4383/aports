sha256sums="7266d7a16df4bffe6f00d3d4711b8b8fd972491bac70f13a9d7edd9f0472d311  xfce4-whiskermenu-plugin-1.4.2-src.tar.bz2"
sha512sums="adae26275183cb69ea73afc806aa54e00c144dde379d29b70f3447230190ae336832de7fe46cc59c031709d8cce42da6afac608852c5b62e8b39267314e76849  xfce4-whiskermenu-plugin-1.4.2-src.tar.bz2"
