sha256sums="b541adef6e6683f44e291d21e089e5583a95f4387dabc3f512c7773bdbe17d3e  xfce4-whiskermenu-plugin-1.4.1-src.tar.bz2"
sha512sums="6227074efb66b6f10a38142b09ef92fdec73155f4ce8474e66ab6b563a773dc0fc4a9d2b6a9436b787da34c5bde9651dee1bc1623b3ad6157ca2f5d5de2e1385  xfce4-whiskermenu-plugin-1.4.1-src.tar.bz2"
