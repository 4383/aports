# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=serf
pkgver=1.3.7
pkgrel=0
pkgdesc="High-Performance Asynchronous HTTP Client Library"
url="http://code.google.com/p/serf"
arch="all"
license="ASL 2.0"
depends=""
depends_dev=""
makedepends="$depends_dev apr-util-dev apr-dev openssl-dev zlib-dev scons
	chrpath"
install=""
subpackages="$pkgname-dev"
source="http://serf.googlecode.com/svn/src_releases/$pkgname-$pkgver.zip"

_builddir="$srcdir"/serf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons PREFIX=/usr || return 1
}

package() {
	cd "$_builddir"
	install -d "${pkgdir}/usr"
	scons PREFIX="${pkgdir}/usr" install	
	rm -f "$pkgdir"/usr/lib/*.la
	chrpath -d "$pkgdir"/usr/lib/libserf-1.so*
}

md5sums="123ee11e5877d2f31f81965e60f83bb2  serf-1.3.7.zip"
sha256sums="1f15f212660ec1c8f00096650979c14deef3a4a4d4290f6da173ec6c767cbd01  serf-1.3.7.zip"
sha512sums="0f7ce55dc9f01cc14337f28b1ada8978b2b6f8d10f8a992fc686da1f13452bb42654021ae2eb4f86a54af8b71ff6e638a2a6089aa99e93259d580b240dab6070  serf-1.3.7.zip"
