# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=serf
pkgver=1.3.0
pkgrel=0
pkgdesc="High-Performance Asynchronous HTTP Client Library"
url="http://code.google.com/p/serf"
arch="all"
license="ASL 2.0"
depends=""
depends_dev=""
makedepends="$depends_dev apr-util-dev apr-dev openssl-dev zlib-dev scons"
install=""
subpackages="$pkgname-dev"
source="https://serf.googlecode.com/files/serf-$pkgver.tar.bz2"

_builddir="$srcdir"/serf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons PREFIX=/usr || return 1
}

package() {
	cd "$_builddir"
	install -d "${pkgdir}/usr"
	scons PREFIX="${pkgdir}/usr" install	
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="bb0dbf9494495db7e8b34eac99b2dc3a  serf-1.3.0.tar.bz2"
sha256sums="174a46866907c54309c0ccac5efa34304e21979f365b30bdfea6c4ad330ec01c  serf-1.3.0.tar.bz2"
sha512sums="9396b7ffe0fd4fa23fd8cba2f81bf12ea1151d92fc5486b7396aa76ee77c3ed020507aec9f6be427c57248cac12457080b08bb5837b4b2b49cf1dc13ebf3d222  serf-1.3.0.tar.bz2"
