# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=serf
pkgver=1.3.1
pkgrel=1
pkgdesc="High-Performance Asynchronous HTTP Client Library"
url="http://code.google.com/p/serf"
arch="all"
license="ASL 2.0"
depends=""
depends_dev=""
makedepends="$depends_dev apr-util-dev apr-dev openssl-dev zlib-dev scons"
install=""
subpackages="$pkgname-dev"
source="https://serf.googlecode.com/files/serf-$pkgver.tar.bz2"

_builddir="$srcdir"/serf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons PREFIX=/usr || return 1
}

package() {
	cd "$_builddir"
	install -d "${pkgdir}/usr"
	scons PREFIX="${pkgdir}/usr" install	
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="da5aca0cad19fd9c19129c3f8f7393dd  serf-1.3.1.tar.bz2"
sha256sums="fc785d0df9c0f4debadae19a3549542d173ca62a1f3f36668b3b1251209f5d9a  serf-1.3.1.tar.bz2"
sha512sums="26d188eeb8c05fdfa4654d5af1cee876755beef509baed3fd5adcbbdf597ee7df3b1df0ea13aa0870a99ee0f7eab7761049ff21d1c19230b93c83a8e079c7823  serf-1.3.1.tar.bz2"
