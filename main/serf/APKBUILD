# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=serf
pkgver=1.3.6
pkgrel=0
pkgdesc="High-Performance Asynchronous HTTP Client Library"
url="http://code.google.com/p/serf"
arch="all"
license="ASL 2.0"
depends=""
depends_dev=""
makedepends="$depends_dev apr-util-dev apr-dev openssl-dev zlib-dev scons
	chrpath"
install=""
subpackages="$pkgname-dev"
source="http://serf.googlecode.com/svn/src_releases/$pkgname-$pkgver.zip"

_builddir="$srcdir"/serf-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	scons PREFIX=/usr || return 1
}

package() {
	cd "$_builddir"
	install -d "${pkgdir}/usr"
	scons PREFIX="${pkgdir}/usr" install	
	rm -f "$pkgdir"/usr/lib/*.la
	chrpath -d "$pkgdir"/usr/lib/libserf-1.so*
}

md5sums="a9f7445530ea7e2755b6df1225b25a4a  serf-1.3.6.zip"
sha256sums="23168cd7eec5162300fdf87d8e26250b4555aaa06fe08da3ac80fe39286fc6e3  serf-1.3.6.zip"
sha512sums="9cc6cc396757b7ab070b4c0cd3f4657b76d663d2f11c351c71d5cdc1a8fe3fd5dbbb0d15bc39f1cc22387b23bf1015c23c04b3a2cafa92d4d6a7ae48bd314f81  serf-1.3.6.zip"
