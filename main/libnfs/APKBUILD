# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer:
pkgname=libnfs
pkgver=1.7.0
pkgrel=0
pkgdesc="client library for accessing NFS shares"
url="https://github.com/sahlberg/libnfs"
arch="all"
license="GPL"
depends=""
depends_dev=""
makedepends="$depends_dev autoconf automake m4 libtool"
install=""
subpackages="$pkgname-dev"
source="https://github.com/sahlberg/libnfs/archive/libnfs-$pkgver.tar.gz"

_builddir="$srcdir"/libnfs-libnfs-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./bootstrap || return 1
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
        make || return 1
}

package() {
	cd "$_builddir"
        make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="5c75e0da267256e809cfbf6986402af3  libnfs-1.7.0.tar.gz"
sha256sums="724e0b15cb2099ab3bbdb8456eaab54bc6d1de76da4b4f3251323471523e2114  libnfs-1.7.0.tar.gz"
sha512sums="49489c867556659a4eac7b27ff381efe17e90fe4c5759c10891ed8de0cca7118435ab74fb3ce29567d62f119b5638b9b3dbf0cf9dc76acbad48f7e35a356b475  libnfs-1.7.0.tar.gz"
