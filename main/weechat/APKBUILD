sha256sums="3bb9964ef776183adab9513b7e3662170039aaccab21eb71cfbeac494694d70f  weechat-0.4.2.tar.gz"
sha512sums="4a40e9de5d510f6fb181581763fccea10c4bbda26eeec3f6cda47f0864b3c01f180b004e0b7613d472f24ee246de585be0164212ddcc6271983718aa2a7be6a4  weechat-0.4.2.tar.gz"
