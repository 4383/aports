sha256sums="3c110a1397ab1f1e2a7cf80b8900e2c02ea01f80e4b09ef7954706916e05563f  weechat-0.4.1.tar.gz"
sha512sums="6e29dd3f8f4710df393cb0d883b6355b2db455ffa9d061d1e5122a56198a420a8e85d1e0727179606e5c169dca3cc1abdc99c935191d005040c47be654bc586a  weechat-0.4.1.tar.gz"
