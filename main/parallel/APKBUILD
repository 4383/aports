# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
# Contributor: Bart≈Çomiej Piotrowski <bpiotrowski@alpinelinux.org>
pkgname=parallel
pkgver=20170722
pkgrel=0
pkgdesc="Shell tool for executing jobs in parallel"
arch="noarch"
url="http://www.gnu.org/software/parallel/"
license="GPL3"
depends="perl"
subpackages="$pkgname-doc"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.bz2"
builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
}

sha512sums="f2a790fc0ddd8cfe568b75208a13ecb1fb8f1eac94ed948b94c69fdf067967d9fba43435b204474c0cb7f09b0420b21bec2d23436e8638ecf293b189fc247105  parallel-20170722.tar.bz2"
