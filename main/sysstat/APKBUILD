sha256sums="1772c9c7431376458f3e7ba252c2dda88bbdc4b1cfc6f94f3d810e23e5fdac77  sysstat-10.1.7.tar.gz"
sha512sums="641967af0104ef6cf9f52c381fa0a909cebfbc9c1f08814f3197c83284454146e8ca72e2f406edf781eee968f1ad6edc683249126a51db563b8079ce3fd3cb48  sysstat-10.1.7.tar.gz"
