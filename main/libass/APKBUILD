# Contributor: Carlo Landmeter
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libass
pkgver=0.10.2
pkgrel=1
pkgdesc="A portable library for SSA/ASS subtitles rendering"
url="http://code.google.com/p/libass/"
arch="all"
license="GPL"
depends=""
depends_dev="enca-dev fontconfig-dev fribidi-dev freetype-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev"
source="http://libass.googlecode.com/files/${pkgname}-${pkgver}.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
	# apply patches here
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="ce672ed5629c9708b3401b976f516744  libass-0.10.2.tar.xz"
sha256sums="f02afcc6410b800f0007dc7c282e897dab64f817c23b37d171fd6ff7fc4ca1d8  libass-0.10.2.tar.xz"
sha512sums="50e77a488bc47d03a8cfca49cd7d26b702f88f649640cc63b40eb288c0f2771a6db5656e77fb8ab072a2a0b10dadf4a21e375ed831605c6de37466003f36bfd7  libass-0.10.2.tar.xz"
