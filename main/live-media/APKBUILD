sha256sums="33892797fb3a01d453f09c25be4408435211c6996e84c69e7d5b82031e1955af  live.2014.12.17.tar.gz"
sha512sums="b4ae5b1ac01e3ac4399eec48e13d9089eb7d33d6d97d08b505e7b0b98031340b4a8f310dfaaa5b8b43c2058a9155bb9c071db21d34de2e16130fe0c5e82285f6  live.2014.12.17.tar.gz"
