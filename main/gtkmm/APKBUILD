# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gtkmm
pkgver=2.24.3
pkgrel=0
pkgdesc="C++ wrappers for GTK+"
url="http://gtkmm.sourceforge.net/"
arch="all"
license="LGPL"
depends=""
makedepends="gtk+-dev intltool glibmm-dev pangomm-dev atkmm-dev"
depends_dev="atkmm-dev gtk+-dev glibmm-dev pangomm-dev"
subpackages="$pkgname-dev"
source="http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/gtkmm-$pkgver
	./configure --prefix=/usr || return 1
	make || return 1
}

package() {
	cd "$srcdir"/gtkmm-$pkgver
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="42fc5a3feeb33ea59b7660200e2a5465  gtkmm-2.24.3.tar.xz"
sha256sums="c564a438677174b97d69dd70467cb03c933481006398dc9377417aa6abe02a39  gtkmm-2.24.3.tar.xz"
sha512sums="7b4686f4ebc0aefa459d557799521381f6f9008e268b7ac433be5d0c155c7ca4650ea527bd54d0ce70eb61c51f1a990cb8c63d30d5417b7c6e5549baf1500206  gtkmm-2.24.3.tar.xz"
