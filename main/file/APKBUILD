# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=file
pkgver=5.21
pkgrel=0
pkgdesc="File type identification utility"
url="http://www.darwinsys.com/file/"
arch="all"
license="BSD"
depends=""
source="ftp://ftp.astron.com/pub/file/file-$pkgver.tar.gz
	"
subpackages="$pkgname-dev $pkgname-doc"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--datadir=/usr/share \
		|| return 1
	make || return 1
	make tests || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="549fe96e09041eabece9de2bb28ef923  file-5.21.tar.gz"
sha256sums="1a48741d3923c4cc73267109b8a396c0ce3aebe004181f3efb1b0a228d230bb6  file-5.21.tar.gz"
sha512sums="ec88ffd1dc911ccf3e52aeb6ddc2e416c1b46c02f7260dffe01f032e029e2c9f4e99605a4388bcad1d3700e4825b5d56aec1c5f998521c76f21c4c18eb13d34f  file-5.21.tar.gz"
