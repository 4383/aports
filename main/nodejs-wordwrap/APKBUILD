sha256sums="66a2fa688509738922c3ad62a6159fe3c93268bd3bca2bff24df4bc02cc31582  wordwrap-0.0.2.tgz"
sha512sums="c5206c09e87e83e7629e806fdc600e58ce0b71554eebcc0b5d16a789bb4149d52f906590446784f4fec8c14f449830e2e2303a2f8e25cf5e4218cc1dc3d379f9  wordwrap-0.0.2.tgz"
