# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=gmime
pkgver=2.6.18
pkgrel=0
pkgdesc="glib mime library"
url="http://spruce.sourceforge.net/gmime/"
arch="all"
license="LGPL"
depends=
depends_dev="glib-dev gpgme-dev"
makedepends="$depends_dev intltool"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.acc.umu.se/pub/GNOME/sources/gmime/${pkgver%.*}/gmime-$pkgver.tar.xz"

_builddir="${srcdir}/${pkgname}-${pkgver}"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="0495f54779cd2813efc3326ffd63f02f  gmime-2.6.18.tar.xz"
sha256sums="783fc14190459c568a31c2fd6dba1e8afa0431e2931aa46f652aa486ad881ae6  gmime-2.6.18.tar.xz"
sha512sums="33d323fd19cc7c1ea23f78c994944aeffa5464c45aaf53a5042fe1a597f4c4e8479f8178c0a26ed25ce03a0e2d0049c40b96a6ef6157c0784662a47b13ccefdb  gmime-2.6.18.tar.xz"
