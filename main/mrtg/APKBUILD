# Contributor: Carlo Landmeter 
# Maintainer: 
pkgname=mrtg
pkgver=2.16.4
pkgrel=0
pkgdesc="The Multi Router Traffic Grapher"
url="http://oss.oetiker.ch/mrtg"
license="GPL"
depends="perl"
makedepends="gd-dev"
install=
subpackages="$pkgname-doc"
source="http://oss.oetiker.ch/$pkgname/pub/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="ec298200d239832ff1648fba488e1a9e  mrtg-2.16.4.tar.gz"
