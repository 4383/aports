# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_luaversions="5.1 5.2 5.3"
pkgname=lua-curl
pkgver=0.3.5
pkgrel=0
pkgdesc="Lua bindings to cURL library"
url="https://github.com/Lua-cURL/Lua-cURLv3"
arch="all"
license="MIT/X11"
depends=
makedepends="curl-dev"
install=
subpackages=""

for _i in $_luaversions; do
	makedepends="$makedepends lua${_i}-dev"
	subpackages="$subpackages lua${_i}-curl:_split${_i/./}"
done

source="lua-curl-$pkgver.tar.gz::https://github.com/Lua-cURL/Lua-cURLv3/archive/v$pkgver.tar.gz"

_builddir="$srcdir"/Lua-cURLv3-$pkgver
build() {
	cd "$srcdir"
	for _i in $_luaversions; do
		cp -r "$_builddir" build-$_i || return 1

		cd build-$_i
		echo LUA_IMPL=lua$_i >> .config
		make LUA_VERSION=$_i || return 1
		cd ..
	done
}

package() {
	cd "$srcdir"
	for _i in $_luaversions; do
		(cd "$srcdir"/build-$_i && make install LUA_VERSION=$_i \
			DESTDIR="$pkgdir") \
			|| return 1
	done
}

_split() {
	local d= _ver=$1
	pkgdesc="$pkgdesc for Lua $_ver"
	install_if="lua$_ver $pkgname=$pkgver-r$pkgrel"
	depends=
	for d in usr/lib/lua usr/share/lua; do
		if [ -d "$pkgdir"/$d/$_ver ]; then
			mkdir -p "$subpkgdir"/$d
			mv "$pkgdir"/$d/$_ver "$subpkgdir"/$d/ || return 1
		fi
	done
}

for _i in $_luaversions; do
	eval "_split${_i/./}() { _split $_i; }"
done

md5sums="7353a52c51162d81ba5ecdb4147161fb  lua-curl-0.3.5.tar.gz"
sha256sums="9ad2c38d676fedfac6883da0e7c2dc3a19af6f8be1417440c3141ff56463ea2a  lua-curl-0.3.5.tar.gz"
sha512sums="28cc9c43beebc2595f5da17a1811a92c4926344f2da280d3416fe8552cab8ca6e477f0f38325765c8fcbc124ade585afe8b6f31bf634a30612355fe9d25a2be1  lua-curl-0.3.5.tar.gz"
