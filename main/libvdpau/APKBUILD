# Contributor: Carlo Landmeter
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libvdpau
pkgver=0.7
pkgrel=2
pkgdesc="Nvidia VDPAU library"
url="http://cgit.freedesktop.org/~aplattner/libvdpau"
arch="all"
license="custom"
depends=
makedepends="libx11-dev dri2proto libxext-dev"
install=
subpackages="$pkgname-dev $pkgname-doc"
source="http://people.freedesktop.org/~aplattner/vdpau/${pkgname}-${pkgver}.tar.gz
	CVE-2015-5200.patch
	"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done	
}

build() {
	cd "$_builddir"
	LIBS="-lX11" \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/vdpau/*.la \
		"$pkgdir"/usr/lib/*.la || return 1
	install -d -m755 "${pkgdir}/usr/share/licenses/${pkgname}"
	install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/" || return 1
}

md5sums="cb81b0c3b7d32b2b2a51894ef05b95ce  libvdpau-0.7.tar.gz
ae0313f4c0fdf84ab05ed0d0681d2ec1  CVE-2015-5200.patch"
sha256sums="24dc08467ce8c59d6cfbf0d34d2dd1f86b4ff62e90777e0a8f513c5c9de9bce0  libvdpau-0.7.tar.gz
593b9a5ddf4bc5f2d9c22308fa1079f1afe26dce038a0d90b0ce71588397cccd  CVE-2015-5200.patch"
sha512sums="c0ebb124956372a59eaa7e5c9330b6d4f32acd924aa620c4c037f3917623860887231b9b9f4c0a375a300c82a3e0b7284afbe9139d8562f6a74a85848d362286  libvdpau-0.7.tar.gz
