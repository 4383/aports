sha256sums="96230ca9859a2a3e347b7f37597b7b344e80b83f378d3a8463ab1ceb69df76d9  xf86-video-ati-7.4.0.tar.bz2"
sha512sums="94f3620972f21dab3c4ead8d18dcd0333903fe820b647f86a0e6efe4edb712ec0450a1cfd32b1ff51ab803ae76aaa889fc8c8cad7b6c52a3b51462c780111458  xf86-video-ati-7.4.0.tar.bz2"
