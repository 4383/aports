# Contributor:
# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
pkgname="geoip"
_realname="GeoIP"
pkgver=1.5.0
pkgrel=0
pkgdesc="Lookup countries by IP addresses"
url="http://www.maxmind.com/app/ip-location"
arch="all"
license="GPL"
depends=
makedepends="zlib-dev"
install=
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.maxmind.com/download/geoip/api/c/$_realname-$pkgver.tar.gz"

_builddir="$srcdir"/$_realname-$pkgver

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
	return 0
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc/geoip \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
	make check || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	install -m755 -D ../../geoip.cron "$pkgdir"/etc/periodic/monthly/geoip
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="57bc400b5c11057a4cab00e1c5cf3f00  GeoIP-1.5.0.tar.gz"
sha256sums="d1dbd4f27bcf0e760329f0f9c67a5fc81b4c56efbe0666159934c2bcd38caea2  GeoIP-1.5.0.tar.gz"
sha512sums="87bc4972ae438f3f37a1f05e55377862a72437195e0241b7fa1ddf4ebaeb1da50a07a387ae13481dd1ff2a5ec39b9830a808618bb8c825417d25068684540b3f  GeoIP-1.5.0.tar.gz"
