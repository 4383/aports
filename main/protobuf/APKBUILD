# Contributor: Kiyoshi Aman <kiyoshi.aman@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=protobuf
pkgver=2.6.0
pkgrel=0
pkgdesc="Library for extensible, efficient structure packing"
url="http://code.google.com/p/protobuf/"
arch="all"
license="BSD"
depends=
depends_dev="zlib-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="https://protobuf.googlecode.com/svn/rc/protobuf-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
	make check || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

py() {
	depends="python"
	cd "$_builddir"/python
	mkdir -p "$subpkgdir"/usr/lib/python2.6/site-packages/
	install -m644 google "$subpkgdir"/usr/lib/python2.6/site-packages
}

md5sums="78253c509a055dab316a21e754cb278a  protobuf-2.6.0.tar.bz2"
sha256sums="0a2f8533b2e0587a2b4efce0c4c8aea21bbfae1c41c466634d958dedf580f6aa  protobuf-2.6.0.tar.bz2"
sha512sums="a59a6d28d1653335fee42eff074f54b317d79d50361ed27d16502012ebb68bf7932ff80be4ce1588829940d6fdf77d113536ee3b27b72959577527ca488eddab  protobuf-2.6.0.tar.bz2"
