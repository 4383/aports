sha512sums="8e1e7b6e0919e6042c20b8354125868929a8426e06af0580cc0fb2f292730d7bc996828da8ea0bfcbb25efa36266615d8d4dacd12d8e56a13d2879d0aefa53b2  owncloud-6.0.0.tar.bz2
