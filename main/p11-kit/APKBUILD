# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=p11-kit
pkgver=0.18.1
pkgrel=0
pkgdesc="Library for loading and sharing PKCS#11 modules"
url="http://p11-glue.freedesktop.org/"
arch="all"
license="BSD"
depends=""
depends_dev=""
makedepends="libtasn1-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-trust"
source="http://p11-glue.freedesktop.org/releases/$pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--sysconfdir=/etc \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la \
		"$pkgdir"/usr/lib/pkcs11/*.la
}

trust() {
	pkgdesc="System trust module from $pkgname"
	mkdir -p "$subpkgdir"/usr/share/p11-kit/modules \
		"$subpkgdir"/usr/lib/p11-kit \
		"$subpkgdir"/usr/lib/pkcs11

	mv "$pkgdir"/usr/lib/p11-kit/p11-kit-extract-trust \
		"$subpkgdir"/usr/lib/p11-kit/ || return 1
	mv "$pkgdir"/usr/share/p11-kit/modules/p11-kit-trust.module \
		"$subpkgdir"/usr/share/p11-kit/modules/ || return 1
	mv "$pkgdir"/usr/lib/pkcs11/p11-kit-trust.so \
		"$subpkgdir"/usr/lib/pkcs11/ || return 1
}

md5sums="e4ef21592dbd126b62e1a6d4ad65ce5c  p11-kit-0.18.1.tar.gz"
sha256sums="6e87e72b7768288384de2ca1929b3cb45502e9e944fc075a8ce5df8f08f1ab29  p11-kit-0.18.1.tar.gz"
sha512sums="a6fbf85ed06f8401285bc083b2b203889ba076538e775fa7c456941b441338fd392b0adff3b3a07e5fc09e03cbee366a433e29e82e22857d541d9b2a12c033ce  p11-kit-0.18.1.tar.gz"
