# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=d-feet
pkgver=0.3.6
_v=${pkgver%.*}
pkgrel=0
pkgdesc="A powerful D-Bus Debugger"
url="http://live.gnome.org/DFeet/"
arch="noarch"
license="GPLv2+"
depends="python py-gobject3"
makedepends="py-gobject3-dev itstool gtk+3.0-dev gobject-introspection-dev"
install=""
subpackages=""
source="http://download.gnome.org/sources/d-feet/$_v/d-feet-$pkgver.tar.xz"

_builddir="$srcdir"/d-feet-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-tests \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir"
}

md5sums="615373a596993956cdd8966c56a16094  d-feet-0.3.6.tar.xz"
sha256sums="d2b9416b33333c984252091482e96108ed4212b54df8454c0a99bba970616c60  d-feet-0.3.6.tar.xz"
sha512sums="96c106ff23b6269ae08bb931342b2278aaa72d667c174ff3ba9f24561034c1ea2c77f5acc46857db0a719a6a303c32b962f2f53a91e5775cd0777d0c72e09b29  d-feet-0.3.6.tar.xz"
