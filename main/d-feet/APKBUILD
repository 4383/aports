# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=d-feet
pkgver=0.3.8
_v=${pkgver%.*}
pkgrel=0
pkgdesc="A powerful D-Bus Debugger"
url="http://live.gnome.org/DFeet/"
arch="noarch"
license="GPLv2+"
depends="python py-gobject3"
makedepends="py-gobject3-dev itstool gtk+3.0-dev gobject-introspection-dev"
install=""
subpackages=""
source="http://download.gnome.org/sources/d-feet/$_v/d-feet-$pkgver.tar.xz"

_builddir="$srcdir"/d-feet-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-tests \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir"
}

md5sums="873095f7f97392dea0e8b0c381a7983a  d-feet-0.3.8.tar.xz"
sha256sums="e8423feb18fdff9b1465bf8442b78994ba13c12f8fa3b08e6a2f05768b4feee5  d-feet-0.3.8.tar.xz"
sha512sums="d8f300d1dd1bbb90a53f33d50749336260e6291a5113921489400385cc9439603c191b775ff148f8a9cf0dfd9d2dd91ae634523452c6ecf0d581742d98043ed5  d-feet-0.3.8.tar.xz"
