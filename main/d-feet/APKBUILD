# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=d-feet
pkgver=0.3.7
_v=${pkgver%.*}
pkgrel=0
pkgdesc="A powerful D-Bus Debugger"
url="http://live.gnome.org/DFeet/"
arch="noarch"
license="GPLv2+"
depends="python py-gobject3"
makedepends="py-gobject3-dev itstool gtk+3.0-dev gobject-introspection-dev"
install=""
subpackages=""
source="http://download.gnome.org/sources/d-feet/$_v/d-feet-$pkgver.tar.xz"

_builddir="$srcdir"/d-feet-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-tests \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir"
}

md5sums="9eb90cf4be7ed89fe4c306216ae3f1c9  d-feet-0.3.7.tar.xz"
sha256sums="159792a699f4cee6ee18eb03c15fd44bffc6249fb5227c67b6e2bc3f48081912  d-feet-0.3.7.tar.xz"
sha512sums="34f7a56d144cfb10d4609fc4c224666f092352e38a4f6bf24c758beae165c873429693f9d227a15a0ae98bc1b4c2772b933156d97e658b060d0c6ee387a689f5  d-feet-0.3.7.tar.xz"
