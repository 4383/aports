# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=e2fsprogs
pkgver=1.42.11
pkgrel=0
pkgdesc="Standard Ext2/3/4 filesystem utilities"
url="http://e2fsprogs.sourceforge.net"
arch="all"
license="GPL LGPL MIT"
depends=
install=
depends_dev="util-linux-dev"
makedepends="$depends_dev"
subpackages="$pkgname-dev $pkgname-doc libcom_err"
source="http://downloads.sourceforge.net/sourceforge/e2fsprogs/e2fsprogs-$pkgver.tar.gz"


_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--mandir=/usr/share/man \
		--enable-elf-shlibs \
		--disable-fsck \
		--disable-uuidd \
		--disable-libuuid \
		--disable-libblkid \
		--disable-tls \
		--disable-nls \
		|| return 1

	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 LDCONFIG=: DESTDIR="${pkgdir}" install install-libs || return 1
}

libcom_err() {
	depends=
	replaces="e2fsprogs"
	mkdir -p "$subpkgdir"/lib
	mv "$pkgdir"/lib/libcom_err* "$subpkgdir"/lib/
}

md5sums="412acbbd64a866c2ed1c729deaf4ae7c  e2fsprogs-1.42.11.tar.gz"
sha256sums="4bd8a770b6925c3f4ec5dce82c55774e4566cd6f3ffb5805177e3c92c8910b76  e2fsprogs-1.42.11.tar.gz"
sha512sums="633e686d5bc8d8d195c4522bfa206ef751ba6ab01117338523998caadfecba7fbc47ecb231d0d5518b0deef2fd587c021ad2d8fdb0eeede1ab6c90e28a709615  e2fsprogs-1.42.11.tar.gz"
