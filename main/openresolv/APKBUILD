# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=openresolv
pkgver=3.6.0
pkgrel=0
pkgdesc="A framework for managing DNS information"
url="http://roy.marples.name/projects/openresolv"
arch="noarch"
license="BSD"
depends=""
subpackages="$pkgname-doc"
source="http://roy.marples.name/downloads/openresolv/openresolv-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--sysconfdir=/etc \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="f29d6fa9c2c6848d3963e7f60783ff28  openresolv-3.6.0.tar.bz2"
sha256sums="e9c63e4a294459891c64832e50fca6d2a3729e3f113efa1ca9439e4a25144cbe  openresolv-3.6.0.tar.bz2"
sha512sums="f591bfb0cbef67433c3f86d4a1abc7e10b59f4465fcedf6f5348480018a229db3d973302573146b97947683685a1411a99e1b6527a75ef4133b80af0c986e874  openresolv-3.6.0.tar.bz2"
