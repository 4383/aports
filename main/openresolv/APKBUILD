sha512sums="202d12224627a4f88bad114c1f48b3d9a9a0008f2bd672c355d2f80db44c4d07b12fe2b757715d7f88fdfb7c39d05a20782d3fa80df695f03a251af823705bb1  openresolv-3.5.6.tar.bz2"
