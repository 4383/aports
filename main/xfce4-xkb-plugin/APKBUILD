# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-xkb-plugin
pkgver=0.5.5
_maj=${pkgver%%.*}
_min=${pkgver#${_maj}.}
_min=${_min%%.*}
_ver=${_maj}.${_min}
pkgrel=0
pkgdesc="plugin to switch keyboard layouts for the Xfce4 panel"
url="http://goodies.xfce.org/projects/panel-plugins/xfce4-xkb-plugin"
arch="all"
license="custom"
subpackages="$pkgname-doc $pkgname-lang"
depends=
makedepends="xfce4-panel-dev libxklavier-dev librsvg-dev intltool libwnck-dev
	libxi-dev libxkbfile-dev libsm-dev libgsf-dev e2fsprogs-dev bzip2-dev libxfce4ui-dev"
source="http://archive.xfce.org/src/panel-plugins/xfce4-xkb-plugin/$_ver/xfce4-xkb-plugin-$pkgver.tar.bz2"

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
}

build () {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
md5sums="8c73875a7a14d53759a0c51c7d5ec356  xfce4-xkb-plugin-0.5.5.tar.bz2"
sha256sums="c97306298b0c804d4797c431bb9b698f123c0437ec845930bf938dc5d24ea8c9  xfce4-xkb-plugin-0.5.5.tar.bz2"
sha512sums="6fe1d3b27dde7e64e26d8872ca2920f64def80be03089ed6e13b13df9dc5b605e4a57bf75125083aacfa5c0cf1c651f42ded0dfb383981cd1ec815b0414a6484  xfce4-xkb-plugin-0.5.5.tar.bz2"
