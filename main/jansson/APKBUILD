# Maintainer: Natanel Copa <ncopa@alpinelinux.org>
pkgname=jansson
pkgver=2.4
pkgrel=1
pkgdesc="lightweight JSON library"
url="http://www.digip.org/jansson/"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://www.digip.org/jansson/releases/jansson-$pkgver.tar.bz2"

_builddir="$srcdir"/jansson-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	LIBS=-lm \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="3aaa1bb1195d705fac602b7504c9b945  jansson-2.4.tar.bz2"
