# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=jansson
pkgver=2.5
pkgrel=0
pkgdesc="lightweight JSON library"
url="http://www.digip.org/jansson/"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://www.digip.org/jansson/releases/jansson-$pkgver.tar.bz2"

_builddir="$srcdir"/jansson-$pkgver
prepare() {
	local i
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	LIBS=-lm \
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="ab239be8c08871c8463b27cf7610947c  jansson-2.5.tar.bz2"
sha256sums="262f5a3e9ad8f5d8b3c8683e8c57b5148ff0ad97cfe3d6f10b8b15ece126e4c7  jansson-2.5.tar.bz2"
sha512sums="0ab7c17682f06859ce51cfa5ce0018297d6540b8ebc2316aabbbd59f2c89c465108fa61b1185746db48c05fb08166925521635835d881b512aab85c7ccd59e03  jansson-2.5.tar.bz2"
