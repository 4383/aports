pkgname=acf-postfix
pkgver=0.2.3
pkgrel=0
pkgdesc="A web-based system administration interface for postfix"
url="http://git.alpinelinux.org/cgit/acf-postfix"
license="GPL-2"
depends="acf-core lua postfix"
makedepends=""
install=
subpackages=""
