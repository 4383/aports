# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gnats
pkgver=4.1.0
pkgrel=5
pkgdesc="The GNU Bug Tracking System"
url="http://www.gnu.org/software/gnats/"
arch="all"
license="GPL-2"
depends="postfix"
makedepends="texinfo"
install=
source="http://ftp.gnu.org/pub/gnu/$pkgname/$pkgname-$pkgver.tar.gz
	gnats.pre-install"
subpackages="$pkgname-doc"
options=suid

build() {
	cd "$srcdir/$pkgname-$pkgver"

	# make install needs gnats user
	sudo sh $srcdir/gnats.pre-install pre_install || return 1

	AWK=awk ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--sharedstatedir=/var/lib \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1

	make || return 1
}
package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir/" install
	rm -f "$pkgdir"/gnats.el
}

md5sums="2add3df79336f2e193c8a9a513aefe22  gnats-4.1.0.tar.gz
4ccae685ca8d5ed857c2a26f1e2fbc7c  gnats.pre-install"
