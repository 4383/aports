# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-net-ssleay
_realname=Net-SSLeay
pkgver=1.66
pkgrel=0
pkgdesc="Perl extension for using OpenSSL"
url="http://search.cpan.org/dist/Net-SSLeay/"
arch="all"
license="GPL"
depends="perl"
makedepends="perl-dev openssl-dev zlib-dev"
install=
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-$pkgver.tar.gz"

build() {
	cd "$srcdir/$_realname-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir" install
        # creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="d18646abb41011607cbb0046c4fb0426  Net-SSLeay-1.66.tar.gz"
sha256sums="5bf8fd536d900da9d38a985417302fbb1ce4a8723e445f89028479273e6cae57  Net-SSLeay-1.66.tar.gz"
sha512sums="fccc89e7691406b725342ec1922c11d5c168490664682ff76e56b266f7ae513426403138866e1f13b7611c2109c1b30c9910f2d86aeed3c72379a57cf304ad28  Net-SSLeay-1.66.tar.gz"
