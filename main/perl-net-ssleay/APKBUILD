# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-net-ssleay
_realname=Net-SSLeay
pkgver=1.56
pkgrel=0
pkgdesc="Perl extension for using OpenSSL"
url="http://search.cpan.org/dist/Net-SSLeay/"
arch="all"
license="GPL"
depends="perl"
makedepends="perl-dev openssl-dev zlib-dev"
install=
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-$pkgver.tar.gz"

build() {
	cd "$srcdir/$_realname-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir" install
        # creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="1a5258167ad0ac6a2b695a6fdc0c6e60  Net-SSLeay-1.56.tar.gz"
sha256sums="9f65cf3836d559c849a8a5608d98a4c823619874f3916fd8860417d1090da9c5  Net-SSLeay-1.56.tar.gz"
sha512sums="f221eabe9037a5a0c57aa584e7b53c861204a917ff585d5db4a0d95c508d9110b00e5e34f53eb198d55cc5e629bf74586f6b756ead07c9007736dc64df2cfb2b  Net-SSLeay-1.56.tar.gz"
