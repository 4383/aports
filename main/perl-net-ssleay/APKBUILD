# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-net-ssleay
_realname=Net-SSLeay
pkgver=1.54
pkgrel=1
pkgdesc="Perl extension for using OpenSSL"
url="http://search.cpan.org/dist/Net-SSLeay/"
arch="all"
license="GPL"
depends="perl"
makedepends="perl-dev openssl-dev zlib-dev"
install=
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-$pkgver.tar.gz"

build() {
	cd "$srcdir/$_realname-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir" install
        # creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="26e758fff1c90cb00e9358fea7e1e22f  Net-SSLeay-1.54.tar.gz"
sha256sums="e163c550dd57d0fde6ebf5b05abcc1edeb7fe054984dc35d8bcd20e13c367dd7  Net-SSLeay-1.54.tar.gz"
sha512sums="470eaa2817221203a190a9b926b88c922910b8a85ad9fde0f7baa943abf9510615b60e374bcefd87a11a2f351fcbc691a564493e39e80c0f4dce4efe833aed4f  Net-SSLeay-1.54.tar.gz"
