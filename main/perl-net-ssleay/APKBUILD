# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-net-ssleay
_realname=Net-SSLeay
pkgver=1.58
pkgrel=0
pkgdesc="Perl extension for using OpenSSL"
url="http://search.cpan.org/dist/Net-SSLeay/"
arch="all"
license="GPL"
depends="perl"
makedepends="perl-dev openssl-dev zlib-dev"
install=
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-$pkgver.tar.gz"

build() {
	cd "$srcdir/$_realname-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir" install
        # creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="fdd09b065e46aa3482f80d7ed7044e38  Net-SSLeay-1.58.tar.gz"
sha256sums="0bdc50c19df545eb2f9e434458ee2b54e97b109315dafb476044b9039e783f56  Net-SSLeay-1.58.tar.gz"
sha512sums="88d768ac5b8dc3dbbfe2715ed91fc4dd887febcc31316e06e40a875de98db95ca87452ad02df7ee74063c0ba9a171bbef02679577e4d219fcea1b21cf0399761  Net-SSLeay-1.58.tar.gz"
