# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-net-ssleay
_realname=Net-SSLeay
pkgver=1.55
pkgrel=1
pkgdesc="Perl extension for using OpenSSL"
url="http://search.cpan.org/dist/Net-SSLeay/"
arch="all"
license="GPL"
depends="perl"
makedepends="perl-dev openssl-dev zlib-dev"
install=
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKEM/Net-SSLeay-$pkgver.tar.gz"

build() {
	cd "$srcdir/$_realname-$pkgver"

	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd "$srcdir/$_realname-$pkgver"
	make DESTDIR="$pkgdir" install
        # creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="473b8d66ca69d5784bb0e428721f58e0  Net-SSLeay-1.55.tar.gz"
sha256sums="8cd5f09722e07b4e436102cb3a4b93623d753c171665ca9752c3b39a62ea3a79  Net-SSLeay-1.55.tar.gz"
sha512sums="204928a95937b31216008986692ef96370ab6623c9238b69a10452db40ce0b1d50d97813c53eca6debb5f605afa946fd4a468fd32fa63572c275ce0ad33ab855  Net-SSLeay-1.55.tar.gz"
