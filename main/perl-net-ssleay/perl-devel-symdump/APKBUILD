# Maintainer: Mika Havela <mika.havela@gmail.com>
pkgname=perl-devel-symdump
_realname=Devel-Symdump
pkgver=2.10
pkgrel=0
pkgdesc="Perl - Dump symbol names or the symbol table"
url="http://search.cpan.org/~andk/$_realname-$pkgver/"
arch="noarch"
license="Artistic GPL"
depends="perl perl-test-pod"
makedepends="perl-dev"
install=
#subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/A/AN/ANDK/$_realname-$pkgver.tar.gz"

_builddir="$srcdir/$_realname-$pkgver"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
	make test || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	# creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="762386076eebe92b41c31da56eb9bd06  Devel-Symdump-2.10.tar.gz"
sha256sums="6b362910e8e8f6cd4d0c45550c21842875a6addaec642b7cb172fd0340859b0d  Devel-Symdump-2.10.tar.gz"
sha512sums="80eed26e4004946ad3449af3782631659ff705c31d36658377496c863d342a6b9d9a6540d2440eee1c28782166443cd25aa7fa49505d911f0c3e7a00a190c9f6  Devel-Symdump-2.10.tar.gz"
