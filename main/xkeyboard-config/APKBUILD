# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xkeyboard-config
pkgver=2.9
pkgrel=0
pkgdesc="X keyboard configuration files"
url="http://www.freedesktop.org/wiki/Software/XKeyboardConfig"
arch="noarch"
license="custom"
depends=
subpackages=
makedepends="xkbcomp intltool libx11-dev"
source="http://xorg.freedesktop.org/archive/individual/data/xkeyboard-config/xkeyboard-config-$pkgver.tar.bz2
	"

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () {
	cd "$srcdir"/$pkgname-$pkgver

	./configure --prefix=/usr \
		--with-xkb-base=/usr/share/X11/xkb \
		--with-xkb-rules-symlink=xorg \
		--enable-compat-rules=yes || return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/share/X11/xkb/compiled || return 1
	install -m755 -d "$pkgdir"/var/lib/xkb
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
md5sums="9b1280d8ba40274a0f1567c94fca7501  xkeyboard-config-2.9.tar.bz2"
sha256sums="5e89bc182a10d53c3e83efc6c3546de0fe5504d91c3dbc80d55cc64ddab5643a  xkeyboard-config-2.9.tar.bz2"
sha512sums="24daa9735a6ce4a565df9f3cc33f679b52cc8ca0bf493cb1ca93e2fadb862792a719d55b54ffb93dd32ca7856ddeeb0138687c11b3dce8f547bd22325329cb1b  xkeyboard-config-2.9.tar.bz2"
