# Contributor: Fabian Affolter <fabian@affolter-engineering.ch>
# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=tig
pkgver=1.2
pkgrel=0
pkgdesc="Text-mode interface for the git revision control system"
url="http://jonas.nitro.dk/tig"
arch="all"
license="GPL2"
depends="git"
depends_dev=""
makedepends="ncurses-dev xmlto asciidoc git libiconv-dev"
install=""
subpackages="$pkgname-doc"
source="http://jonas.nitro.dk/tig/releases/$pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make all doc-man || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install install-doc-man || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="9821525564aa3f4aa51ad2b6c11b3a91  tig-1.2.tar.gz"
sha256sums="9bf8a8b83761634d8431cb38ef5a133371a5e09460750706e6de3813f06242a4  tig-1.2.tar.gz"
sha512sums="4c769c2aca5d8957f322beb41f340a439315587194106e8f18cba75cbe3b61f8beda8d5de85699bbd93306ec8caceeb342bb1861556d50f46a955710e81f920f  tig-1.2.tar.gz"
