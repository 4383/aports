# Maintainer: Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=tig
pkgver=1.2.1
pkgrel=0
pkgdesc="Text-mode interface for the git revision control system"
url="http://jonas.nitro.dk/tig"
arch="all"
license="GPL2"
depends="git"
depends_dev=""
makedepends="ncurses-dev xmlto asciidoc git libiconv-dev"
install=""
subpackages="$pkgname-doc"
source="http://jonas.nitro.dk/tig/releases/$pkgname-$pkgver.tar.gz"
_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		|| return 1
	make all doc-man || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install install-doc-man || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="d5c1dd1d829f8e515f59c96a5d419323  tig-1.2.1.tar.gz"
sha256sums="b708d205f2a0432f03daaa945779bcac122662ec0760d4dabc6d8fd60ca32944  tig-1.2.1.tar.gz"
sha512sums="6e58aab9970731454c264793f7c4ace1f04dc4a7bd3387e6ea23a58138ad176827050441530b45a7a9a877d89fd45b5a6a45d5bdd18605664b8bbd2876c5ab17  tig-1.2.1.tar.gz"
