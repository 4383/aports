sha256sums="f191dc51144e7ea0e7f116118d0ee7a5fe50d1ce330257e1ae5ee4c9d35d86ef  less-470.tar.gz"
sha512sums="4892c41f7146cad0f5bfb10ef96adf4814ab41401e64252f4b3ef8cf447b4036960925ae76651b5a81b55988fc3065c06af7393b923455173266d15170cfcc77  less-470.tar.gz"
