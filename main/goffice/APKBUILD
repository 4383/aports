sha512sums="74fb3ea950b72b52061fe5fdb0d7d2b65eb38128358be4d37c4a03361839f60cbe0989d31e0fe2300466b058cb5a83e4d28b4e75f83739a9dc46e2d4816046e1  goffice-0.10.3.tar.xz
