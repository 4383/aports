# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gtk-xfce-engine
pkgver=3.0.1
pkgrel=0
pkgdesc="Xfce theme engine"
url="http://www.xfce.org/"
arch="all"
license="GPL-2"
depends=
makedepends="gtk+2.0-dev gtk+3.0-dev"
source="http://archive.xfce.org/src/xfce/gtk-xfce-engine/${pkgver%.*}/gtk-xfce-engine-$pkgver.tar.bz2
	"
subpackages="gtk2-xfce-engine:_gtk2 gtk3-xfce-engine:_gtk3"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir"/ -name '*.la' -delete
}

_split() {
	local _ver=${1%.*}
	pkgdesc="$pkgdesc - ${_ver/-/ }"
	install_if="$pkgname=$pkgver-r$pkgrel ${1/-/+}"
	cd "$pkgdir"
	for dir in usr/lib/$1 usr/share/themes/*/$1; do
		mkdir -p "$subpkgdir"/${dir%/*} || return 1
		mv $dir "$subpkgdir"/${dir%/*} || return 1
	done
}

_gtk2() { _split gtk-2.0; }
_gtk3() { _split gtk-3.0; }

md5sums="174e774d0debb052ec457640275f065d  gtk-xfce-engine-3.0.1.tar.bz2"
sha256sums="eb03cf81da1a91e426a2141c092ed7a1634cab29ea2f3546480e901290a7a06d  gtk-xfce-engine-3.0.1.tar.bz2"
sha512sums="0cd701cc485fcf7e112221c550f58078ca63773b0dd8c22d052b55564ad7954c721398735fbcf85b72f2b56ac5c65c1648522c1238fe97c274093d90f80af058  gtk-xfce-engine-3.0.1.tar.bz2"
