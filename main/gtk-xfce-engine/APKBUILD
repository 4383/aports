# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gtk-xfce-engine
pkgver=2.7.0
pkgrel=0
pkgdesc="A port of Xfce engine to GTK+-2.0"
url="http://www.xfce.org/"
arch="all"
license="GPL-2"
depends=
makedepends="pkgconfig gtk+-dev libiconv-dev gettext-dev expat-dev"
source="http://archive.xfce.org/src/xfce/gtk-xfce-engine/${pkgver%.*}/gtk-xfce-engine-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}
md5sums="431eb5ac006f31c75a5fe7fbecbe5cee  gtk-xfce-engine-2.7.0.tar.bz2"
