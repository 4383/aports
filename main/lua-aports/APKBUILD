# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=lua-aports
pkgver=0.1
pkgrel=1
pkgdesc="Lua modules for parsing aports tree"
url="http://dev.alpinelinux.org/archive/lua-aports/"
arch="noarch"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev lua5.2-filesystem lua5.2"
install=""
replaces="abuild"
subpackages=""
source="http://dev.alpinelinux.org/archive/lua-aports/lua-aports-$pkgver.tar.xz
	0001-buildrepo-show-pkgversion-of-packages.patch
	"

_builddir="$srcdir"/lua-aports-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

