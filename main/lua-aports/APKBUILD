# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=lua-aports
pkgver=0.1
pkgrel=0
pkgdesc="Lua modules for parsing aports tree"
url="http://dev.alpinelinux.org/archive/lua-aports/"
arch="noarch"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev lua5.2-filesystem lua5.2"
install=""
replaces="abuild"
subpackages=""
source="http://dev.alpinelinux.org/archive/lua-aports/lua-aports-$pkgver.tar.xz"

_builddir="$srcdir"/lua-aports-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	return 0
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="d2b71fee354a721d49637a366648817e  lua-aports-0.1.tar.xz"
sha256sums="ac7a17a3190959f5840ffe47cb101053298ecf2de04b284835360e19f840db27  lua-aports-0.1.tar.xz"
sha512sums="765b51b37e9e47725752b1e236ef8355282ee738f306e1e7870ae888146214cf886663cd16fa746ee8a91cccf901712cfe43ed449987988cf83b8024148bfcfe  lua-aports-0.1.tar.xz"
