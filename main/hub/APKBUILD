# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=hub
pkgver=1.11.1
pkgrel=1
pkgdesc="Extends git with extra features for GitHub"
url="http://hub.github.com/"
arch="noarch"
license="MIT"
depends="git ruby"
makedepends="ruby-rake"
install=""
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/github/hub/archive/v$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

build() {
	cd "$_builddir"
	rake standalone
}

package() {
	cd "$_builddir"

	install -Dm755 $pkgname "$pkgdir/usr/bin/$pkgname"
	install -D -m644 man/$pkgname.1 "$pkgdir"/usr/share/man/man1/$pkgname.1
	install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}
md5sums="8e885a7a3d3985e96308dd00b841d7e9  hub-1.11.1.tar.gz"
sha256sums="96346e3a44849cb1b31bb2446ab9c32485a1665919ae61c7359dbdfc7eef9827  hub-1.11.1.tar.gz"
sha512sums="76a9dd8a443851a5e619039917c6a4d305b7ce7a7050e740bb5bced8377efbc8bc21c7a0bf161ac25d1cee855e4b8c47f35d7cd650b37d88637ef8db20e14aa3  hub-1.11.1.tar.gz"
