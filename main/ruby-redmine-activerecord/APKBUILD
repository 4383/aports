_gemname=activerecord
pkgname=ruby-redmine-$_gemname
pkgver=3.2.17
pkgrel=0
pkgdesc="Ruby ActiveRecord pattern (Fowler, PoEAA) for ORM"
url="http://rubygems.org/gems/activerecord"
arch="noarch"
license="GPL"
depends="ruby ruby-redmine-activemodel ruby-redmine-activesupport ruby-redmine-arel ruby-redmine-tzinfo"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="d5aaa8bdef279093a199b04a0857bd76  activerecord-3.2.17.gem"
sha256sums="ad544500826264c523082f9533fbb5b9306277f09e53824b9bb176ff53ad59e4  activerecord-3.2.17.gem"
sha512sums="2afbc1858c364288ea1f2a47ea5cfc145cfc7a3f34fd9b4aa5709bfc79e287f05a9e19939d6435849ea6ce8eb90a84c1c3f1e6685a7763ff7fb3df61f849dd58  activerecord-3.2.17.gem"
