# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=cloog
pkgver=0.18.0
pkgrel=1
pkgdesc="The Chunky Loop Generator"
url="http://www.cloog.org/"
arch="all"
license="GPLv2+"
depends=
depends_dev="gmp-dev isl-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://www.bastoul.net/cloog/pages/download/cloog-$pkgver.tar.gz"

_builddir="$srcdir"/cloog-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--build=${CBUILD} \
		--host=${CHOST} \
		--with-sysroot=${CBUILDROOT} \
		--with-isl=system \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" INSTALL="install -D" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="be78a47bd82523250eb3e91646db5b3d  cloog-0.18.0.tar.gz"
