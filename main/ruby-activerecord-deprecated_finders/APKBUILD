# Maintainer: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
_gemname=activerecord-deprecated_finders
pkgname=ruby-$_gemname
pkgver=1.0.3
pkgrel=0
pkgdesc="Deprecated finder APIs extracted from Active Record"
url=http://rubyonrails.org/
arch=noarch
license=MIT
depends=ruby
depends_dev=
makedepends="$depends_dev ruby"
install=
subpackages=
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="ecd016c4746149e6e7b33d1bc353a3d8  activerecord-deprecated_finders-1.0.3.gem"
sha256sums="97ea365c348857818894bc5d8f644efa04f7543009419da5cef442ee053c4ffc  activerecord-deprecated_finders-1.0.3.gem"
sha512sums="0dc3225980db16bc17a0beb6f84a8a448c3e35ade298b8866f6513d39d898fe7edd695389387007dc6956bfe5616dc6f9f122cfea7b3bdb29fc5bec9beb1fa13  activerecord-deprecated_finders-1.0.3.gem"
