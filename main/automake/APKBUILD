# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=automake
pkgver=1.13.3
pkgrel=0
pkgdesc="A GNU tool for automatically creating Makefiles"
arch="noarch"
license=GPL
url="http://www.gnu.org/software/automake"
source=ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz
depends="perl"
makedepends="autoconf"
subpackages="$pkgname-doc"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
        make DESTDIR=$pkgdir install
}

md5sums="a28633b69c68bb91fb080224e20e785f  automake-1.13.3.tar.gz"
sha256sums="883c91fb7eff735cd426d7ecf4279693e2f58442d5695760f3f66090a6758dbc  automake-1.13.3.tar.gz"
sha512sums="b17ef189a850e38568267fd359db356ecfa552d0fa00666026adbe75d3d5fa8e900b858687891357782c5d8691b37b900da8b1e77f972b114a08b8603ad0d28e  automake-1.13.3.tar.gz"
