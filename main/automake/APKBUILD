# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=automake
pkgver=1.14
pkgrel=0
pkgdesc="A GNU tool for automatically creating Makefiles"
arch="noarch"
license=GPL
url="http://www.gnu.org/software/automake"
source=ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz
depends="perl"
makedepends="autoconf"
subpackages="$pkgname-doc"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
        make DESTDIR=$pkgdir install
}

md5sums="a3c0d9298c6112f5f2c26c639ccaaed7  automake-1.14.tar.gz"
sha256sums="7847424d4204d1627c129e9c15b81e145836afa2a1bf9003ffe10aa26ea75755  automake-1.14.tar.gz"
sha512sums="4f862556a292d77f9514d1edfa8a5586d6aa96cca416d7d7eb5bd7e6e36995956f8b59e213936d82ee8e7ca10b4d0fa6c056beab52a907a9713f87a168fbd818  automake-1.14.tar.gz"
