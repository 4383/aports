# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=automake
pkgver=1.13.4
pkgrel=0
pkgdesc="A GNU tool for automatically creating Makefiles"
arch="noarch"
license=GPL
url="http://www.gnu.org/software/automake"
source=ftp://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.gz
depends="perl"
makedepends="autoconf"
subpackages="$pkgname-doc"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
        make DESTDIR=$pkgdir install
}

md5sums="9199e266993a5bbdc914923349d51e3e  automake-1.13.4.tar.gz"
sha256sums="4c93abc0bff54b296f41f92dd3aa1e73e554265a6f719df465574983ef6f878c  automake-1.13.4.tar.gz"
sha512sums="dc53a638d9b0833f1a22002aac47c095c92432ed11bf232e3222c14e5011ccbfcf09e90f89cd9b4735bdefe00725621b586318a317c2f64c1bbd656e36757364  automake-1.13.4.tar.gz"
