# Maintainer:  Fabian Affolter <fabian@affolter-engineering.ch>
pkgname=py-setuptools
_pkgname=${pkgname#py-}
pkgver=18.8
pkgrel=0
pkgdesc="A collection of enhancements to the Python distutils"
url="http://pypi.python.org/pypi/setuptools"
arch="noarch"
license="PSF"
depends="python"
makedepends="python-dev"
install=""
subpackages=""
source="http://pypi.python.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$_pkgname-$pkgver
build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
	# we don't provide a non-suffixed easy_install
	echo "Removing non-suffixed easy_install ( $pkgdir/usr/bin/easy_install)"
	rm "$pkgdir"/usr/bin/easy_install
}

md5sums="4b046c271a02adf4c42dc60cbfe3f5ba  setuptools-18.8.tar.gz"
sha256sums="04180e33a40a114ff9b458f31786d885964612af2b2111c3d0efdc9a1ac76c4d  setuptools-18.8.tar.gz"
sha512sums="718f8ef19e639450f62e1751715bac65ce2bd218b81614d07c9283a01be3a085ec5422ff9d96a54e74c05135a1a4bb167ece6d4ecece588716d05982c9f25811  setuptools-18.8.tar.gz"
