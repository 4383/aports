# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gdk-pixbuf
pkgver=2.22.0
pkgrel=0
pkgdesc="GDK Pixbuf library"
url="http://www.gtk.org/"
license="LGPL"
depends=
depends_dev=
makedepends="tiff-dev libpng-dev glib-dev jpeg-dev gobject-introspection"
install=
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnome.org/pub/gnome/sources/gdk-pixbuf/2.22/gdk-pixbuf-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="0447e70f7bada542182d12e6459442b0  gdk-pixbuf-2.22.0.tar.bz2"
