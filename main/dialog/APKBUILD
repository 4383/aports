sha256sums="c8d114b7698022bcbd6c88f3c0b2296b0e846c60c5ed6bd28f86dd72b94fd36d  dialog-1.2-20130523.tgz"
sha512sums="9388828aa452d245063b17751b800aa257edf1420a12463f6fc28cf4c2758a01ddfd9ae214662eeb7b9d6a2066fab33189d2d168d82fe497dfaf20288797bf6e  dialog-1.2-20130523.tgz"
