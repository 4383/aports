# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxcb
pkgver=1.8.1
pkgrel=0
pkgdesc="X11 client-side library"
url="http://xcb.freedesktop.org/"
arch="all"
license="custom"
depends=
subpackages="$pkgname-dev $pkgname-doc"
makedepends="xcb-proto libxdmcp-dev libxau-dev libxslt libpthread-stubs python"
source="http://xcb.freedesktop.org/dist/$pkgname-$pkgver.tar.bz2
	CVE-2013-2064.patch
	"
depends_dev="libpthread-stubs libxau-dev libxdmcp-dev"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--enable-xinput || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
md5sums="9da03df9e2f4c048202920d9f6a7e123  libxcb-1.8.1.tar.bz2
343285a0a015ef099e33fe8fb9615760  CVE-2013-2064.patch"
