# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=apk-tools
pkgver=2.0.3
pkgrel=0
pkgdesc="Alpine Package Keeper - package manager for alpine"
subpackages="$pkgname-static"
depends=
makedepends="zlib-dev openssl-dev pkgconfig"
source="http://git.alpinelinux.org/cgit/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2
	"


url="http://git.alpinelinux.org/cgit/apk-tools/"
license=GPL-2

prepare() {
	cd "$srcdir/$pkgname-$pkgver"
	sed -i -e 's:-Werror::' Make.rules
	for i in ../*.patch; do
		[ -f $i ] || continue
		patch -p1 -i $i || return 1
	done
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make || return 1
	make static || return 1
	make DESTDIR="$pkgdir" install
	cd "$pkgdir/sbin"
	ln -s apk apk_add
	ln -s apk apk_audit
	ln -s apk apk_del
	ln -s apk apk_index
	ln -s apk apk_info
	ln -s apk apk_version
	install -d "$pkgdir"/var/lib/apk "$pkgdir"/var/cache/misc
}

static() {
	pkgdesc="Alpine Package Keeper - static binary"
	install -Dm755 "$srcdir"/$pkgname-$pkgver/src/apk.static \
		"$subpkgdir"/sbin/apk.static
}

md5sums="191938ff9433745a1e24dfab6f8f7249  apk-tools-2.0.3.tar.bz2"
