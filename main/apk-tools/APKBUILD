# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=apk-tools
pkgver=2.0.2
pkgrel=2
pkgdesc="Alpine Package Keeper - package manager for alpine"
subpackages="$pkgname-static"
depends=
makedepends="zlib-dev openssl-dev pkgconfig"
source="http://git.alpinelinux.org/cgit/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2
	info-segfault.patch
	0001-package-don-t-leak-signing-key-file-fd.patch
	"


url="http://git.alpinelinux.org/cgit/apk-tools/"
license=GPL-2

prepare() {
	cd "$srcdir/$pkgname-$pkgver"
	sed -i -e 's:-Werror::' Make.rules
	for i in ../*.patch; do
		[ -f $i ] || continue
		patch -p1 -i $i || return 1
	done
}

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make || return 1
	make static || return 1
	make DESTDIR="$pkgdir" install
	cd "$pkgdir/sbin"
	ln -s apk apk_add
	ln -s apk apk_audit
	ln -s apk apk_del
	ln -s apk apk_index
	ln -s apk apk_info
	ln -s apk apk_version
	install -d "$pkgdir"/var/lib/apk "$pkgdir"/var/cache/misc
}

static() {
	pkgdesc="Alpine Package Keeper - static binary"
	install -Dm755 "$srcdir"/$pkgname-$pkgver/src/apk.static \
		"$subpkgdir"/sbin/apk.static
}

md5sums="c87cb88f90eb8d7021d37e3b5386863d  apk-tools-2.0.2.tar.bz2
aeab86a00119f9945edd6d3c3a8bb9c1  info-segfault.patch
ac2ddef3f82f700c9eb536a54050cca6  0001-package-don-t-leak-signing-key-file-fd.patch"
