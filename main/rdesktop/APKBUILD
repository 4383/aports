# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=rdesktop
pkgver=1.8.1
pkgrel=0
pkgdesc="rdesktop is used to connect to windows terminal servers"
url="http://www.rdesktop.org/"
arch="all"
license="GPL"
subpackages="$pkgname-doc"
depends=
makedepends="libx11-dev libao-dev openssl-dev libsamplerate-dev libgssglue-dev
	libxrandr-dev"
source="http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	update_config_sub || return 1
}

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-sound=ao \
		--disable-smartcard \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}
md5sums="f5382c5c85b0d2cc88b9b1aa9bbf1356  rdesktop-1.8.1.tar.gz"
sha256sums="76cc834b89c34d8332f3cb3889483b2ae4d4e8118eeb45a8967c77dd18228246  rdesktop-1.8.1.tar.gz"
sha512sums="31f13bf644ef16939a8c6c12709b89f59b0de276cc113c5e43ba505c5a352f515fdd1302c32f3095caca66796c9a15d574374391b4a67745fa505512499ed071  rdesktop-1.8.1.tar.gz"
