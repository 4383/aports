# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=iso-codes
pkgver=3.60
pkgrel=0
pkgdesc="Lists of the country, language, and currency names"
url="http://pkg-isocodes.alioth.debian.org/"
arch="noarch"
license="LGPL2+"
depends=""
subpackages="$pkgname-lang $pkgname-dev"
makedepends="python gettext"
source="http://pkg-isocodes.alioth.debian.org/downloads/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" pkgconfigdir=/usr/lib/pkgconfig install || return 1
}

md5sums="875cc8e1b7e89150b0ade59a988980ea  iso-codes-3.60.tar.xz"
sha256sums="231b6da93a0649905c048fb210b4b4567a09bd2458910426a6a37f05358a2da9  iso-codes-3.60.tar.xz"
sha512sums="1bdf9f7abd35fe07987ced63b437d466ebce01d16cafc3aff5cf0c8acdeb6e558fe1521b7084956148a0e1844faab198fd82870db99f82a11a7cb735fa1d6f03  iso-codes-3.60.tar.xz"
