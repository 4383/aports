# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=dosfstools
pkgver=3.0.17
pkgrel=0
pkgdesc="DOS filesystem utilities"
url="http://www.daniel-baumann.ch/software/dosfstools/"
arch="all"
license="GPL3+"
depends=""
makedepends="libiconv-dev"
subpackages="$pkgname-doc"
source="http://daniel-baumann.ch/files/software/dosfstools/dosfstools-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
build() { 
	cd "$_builddir"
	make OPTFLAGS="$CFLAGS" LDFLAGS="-liconv $LDFLAGS" || return 1
}

package() {
	cd "$_builddir"
	make PREFIX="$pkgdir" \
		MANDIR="$pkgdir"/usr/share/man \
		DOCDIR="$pkgdir"/usr/share/doc \
		install  || return 1
}

md5sums="468b953ddc8baf66e9881d1a5eae03e2  dosfstools-3.0.17.tar.xz"
sha256sums="9dade6b7c8ef06f7d679fcdc4524aa332ec7929837874b51c9bd490fbd4cb29f  dosfstools-3.0.17.tar.xz"
sha512sums="a6e4b6dd4803470fda28ab4f21409ee687718fbf53643283b1eeb665e11c86ab9ef9c704961611582254da6ba0d9b0776b58ed331d1b1f65b20af8d49ba11168  dosfstools-3.0.17.tar.xz"
