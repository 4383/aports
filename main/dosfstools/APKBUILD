# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=dosfstools
pkgver=3.0.22
pkgrel=0
pkgdesc="DOS filesystem utilities"
url="http://www.daniel-baumann.ch/software/dosfstools/"
arch="all"
license="GPL3+"
depends=""
makedepends="libiconv-dev"
subpackages="$pkgname-doc"
source="http://daniel-baumann.ch/files/software/dosfstools/dosfstools-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
build() { 
	cd "$_builddir"
	make OPTFLAGS="$CFLAGS" LDFLAGS="-liconv $LDFLAGS" || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" \
		PREFIX=/usr \
		MANDIR=/usr/share/man \
		DOCDIR=/usr/share/doc \
		install  || return 1
}

md5sums="301f01ca8a734011c0257134bcf475c8  dosfstools-3.0.22.tar.xz"
sha256sums="7e8390c290d144e1315523097159ed0dbb42b8f9b3ae1a5501d33b5e4b8a732f  dosfstools-3.0.22.tar.xz"
sha512sums="2840bb8a0b1bd047e03e2d2b46bbce9ad4af58d719ad15d45d306ae2b0800aac2578974474543ff30aa7f01dbd9fc6ebddf34f2a23746da98b1341f3627e2d67  dosfstools-3.0.22.tar.xz"
