# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=apr-util
pkgver=1.3.8
pkgrel=0
pkgdesc="The Apache Portable Runtime"
url="http://apr.apache.org/"
license="APACHE"
depends=
subpackages="$pkgname-dev"
makedepends="apr-dev expat-dev e2fsprogs-dev"
source="http://www.apache.org/dist/apr/$pkgname-$pkgver.tar.bz2"

build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure --prefix=/usr \
		--with-apr=/usr \
		--without-pgsql \
		--without-mysql \
		--without-sqlite2 \
		--without-sqlite3 \
		--without-berkeley-db \
		--without-gdbm \
		--without-ldap-lib

	make || return 1
	make DESTDIR="$pkgdir" install

	# we dont need this one
	rm "$pkgdir"/usr/lib/*.exp
}

md5sums="34a0e815cdc2b79bf561468b84ff1aa3  apr-util-1.3.8.tar.bz2"
