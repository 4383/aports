# Maintainer: Ted Trask <ttrask01@yahoo.com>
pkgname=acf-db
pkgver=0.2.0
pkgrel=0
pkgdesc="A web-based system administration interface for databases"
url="http://git.alpinelinux.org/cgit/acf-db"
arch="noarch"
license="GPL-2"
depends="acf-core lua acf-db-lib"
makedepends=""
install=
subpackages="$pkgname-lib"
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install

}

lib() {
	pkgdesc="ACF database support library"
	depends="acf-core lua acf-lib"
	mkdir -p "$subpkgdir"/usr/share/acf/lib/ \
		|| return 1
	mv "$pkgdir"/usr/share/acf/lib/* \
		"$subpkgdir"/usr/share/acf/lib/ || return 1
}

md5sums="d5b7ec28ef008e9508f48970fe97adf3  acf-db-0.2.0.tar.xz"
sha256sums="3bbda15fb54b0e498273d1736d251bff43c6107b838679d9597fc56bcc8cbd1e  acf-db-0.2.0.tar.xz"
sha512sums="1cbe4e56fe6a134faedd9c7ace9c914a192502cc3ff4a4353d00198de9d6aab4c70cc73f7f82d9363c9864011c206756fa5c7a6d2930d86895fad78ed256f37b  acf-db-0.2.0.tar.xz"
