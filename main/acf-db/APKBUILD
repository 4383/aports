# Contributor: Ted Trask <ttrask01@yahoo.com>
# Maintainer: Ted Trask <ttrask01@yahoo.com>
pkgname=acf-db
pkgver=0.1.1
pkgrel=0
pkgdesc="A web-based system administration interface for databases"
url="http://git.alpinelinux.org/cgit/acf-db"
arch="noarch"
license="GPL-2"
depends="acf-core lua acf-db-lib"
makedepends=""
install=
subpackages="$pkgname-lib"
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install

}

lib() {
	pkgdesc="ACF database support library"
	depends="acf-core lua acf-lib"
	mkdir -p "$subpkgdir"/usr/share/acf/lib/ \
		|| return 1
	mv "$pkgdir"/usr/share/acf/lib/* \
		"$subpkgdir"/usr/share/acf/lib/ || return 1
}

md5sums="7dbf8dd4885d38f5fcb4919b99748cc8  acf-db-0.1.1.tar.xz"
sha256sums="9f6dc2352728aa0ebb213d688966f8cc64bf8313a88d4d125eeca63251300252  acf-db-0.1.1.tar.xz"
sha512sums="93243fe84c415a02adc79f673af47c2c4a88e998935373c23665872dcdeeeda8e0f4b17330f1c48c1a07c4bb6ad0028d3bc353c43b0e1912baa3fcb628d1702e  acf-db-0.1.1.tar.xz"
