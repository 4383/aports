# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=shared-mime-info
pkgver=1.1
pkgrel=0
pkgdesc="Freedesktop.org Shared MIME Info"
url="http://freedesktop.org/Software/shared-mime-info"
arch="all"
license="GPL"
makedepends="libxml2-dev glib-dev intltool"
depends=
install="$pkgname.post-deinstall"
triggers="$pkgname.trigger=/usr/share/mime"
subpackages="$pkgname-doc $pkgname-lang"
source="http://freedesktop.org/~hadess/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-update-mimedb \
		|| return 1
	make -j1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make -j1 DESTDIR="$pkgdir" install
}
md5sums="12ba00bf1cb2e69bfba73127e708e833  shared-mime-info-1.1.tar.xz"
sha256sums="184d094b157a9ec2607ad26a1a1837e6e07f3fcbeb38d8b6d412906156f9e06c  shared-mime-info-1.1.tar.xz"
sha512sums="16aab85d30bc6ec10cbc92667e64a9d4c30f30ab1bcb652cc93387f0f3bf342af9ba318db19325c5e26eacf7caeaa77c496d2aa7fabd3e99dae6ef8d4a57d841  shared-mime-info-1.1.tar.xz"
