# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=shared-mime-info
pkgver=1.3
pkgrel=0
pkgdesc="Freedesktop.org Shared MIME Info"
url="http://freedesktop.org/Software/shared-mime-info"
arch="all"
license="GPL"
makedepends="libxml2-dev glib-dev intltool"
depends=
install="$pkgname.post-deinstall"
triggers="$pkgname.trigger=/usr/share/mime"
subpackages="$pkgname-doc $pkgname-lang"
source="http://freedesktop.org/~hadess/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	ac_cv_func_fdatasync=no ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-update-mimedb \
		|| return 1
	make -j1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make -j1 DESTDIR="$pkgdir" install
}
md5sums="743720bc4803dd69f55449013d350f31  shared-mime-info-1.3.tar.xz"
sha256sums="4fd49c8c7ca9ecb10c59845094a18dbb73b69c72b4bad3db5e864f2111cb323a  shared-mime-info-1.3.tar.xz"
sha512sums="ef74f71e877a9117ca796e0425ffdc0a47200b543c9989c9952d59d5a4c8ed9d086c1f5b73af343b7e59d8080d1813b5c2fe2896fe619f753af315460136fb5d  shared-mime-info-1.3.tar.xz"
