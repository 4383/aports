# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-datetime
pkgver=0.78
pkgrel=0
pkgdesc="DateTime perl module"
url="http://search.cpan.org/dist/DateTime/"
arch="all"
license="GPLv2 or Artistic"
depends="perl perl-datetime-locale perl-test-exception perl-math-round
	perl-datetime-timezone"
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/DateTime-$pkgver.tar.gz"

_builddir="$srcdir"/DateTime-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	unset CFLAGS
	perl Build.PL installdirs=vendor || return 1
	./Build
}

package() {
	cd "$_builddir"
	./Build install destdir="$pkgdir"
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

md5sums="9d71a13933e3afc55c2c54202d40ae13  DateTime-0.78.tar.gz"
sha256sums="85f59b555bf594b57077afc636555d8393ab4b2c9e779a50524b0ab2e2602c3e  DateTime-0.78.tar.gz"
sha512sums="58886f9050f0b4517816695519f9b9b95a920e219fa7c4374b07e2c641442c20cf428362e1bcc53d424e5ac9a74bd5d194a54897409b4f7cc8312588871db79a  DateTime-0.78.tar.gz"
