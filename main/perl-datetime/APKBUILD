# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-datetime
pkgver=1.07
pkgrel=0
pkgdesc="DateTime perl module"
url="http://search.cpan.org/dist/DateTime/"
arch="all"
license="GPLv2 or Artistic"
depends="perl perl-datetime-locale perl-test-exception perl-math-round
	perl-datetime-timezone"
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/D/DR/DROLSKY/DateTime-$pkgver.tar.gz"

_builddir="$srcdir"/DateTime-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	unset CFLAGS
	perl Build.PL installdirs=vendor || return 1
	./Build
}

package() {
	cd "$_builddir"
	./Build install destdir="$pkgdir"
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

md5sums="2b1745e4f7c0777c02545033588f6394  DateTime-1.07.tar.gz"
sha256sums="61605fc9c130b4819a4c6bb939d28778ee600c45645930d58bf092ff9ffea4b2  DateTime-1.07.tar.gz"
sha512sums="3807ac1a5e382813d1c1ac3a3e95a8b87caa02e04842d4f4c2b4b155b7f03b5f2cae3ccb7e7a3214f7d1cc2af37f51fe4e7fab1876b8f6772ba6aa396d6edcd0  DateTime-1.07.tar.gz"
