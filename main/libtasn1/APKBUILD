sha256sums="3462fc25e2d2536878c39a8825f5e36ba2e2611b27ef535e064f4c56258e508b  libtasn1-4.6.tar.gz"
sha512sums="865215b21ff13cd3998e1dbc893a0c9897e08611549a22e0aa42e068e8531c4b28226fe16bc27e1018cf3e0d481f86fa70d15a29a68b1aad155c4fa4f84a3d81  libtasn1-4.6.tar.gz"
