# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gnumeric
pkgver=1.12.1
pkgrel=0
pkgdesc="A GNOME Spreadsheet Program"
url="http://www.gnome.org/projects/gnumeric/"
arch="all"
license="GPL"
makedepends="gtk+3.0-dev intltool desktop-file-utils libglade-dev goffice-dev
	rarian" 
install=
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/1.12/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-schemas-install \
		--disable-static \
		--enable-ssindex || return 1
	make itlocaledir="/usr/share/locale" || return 1
}

package() {
	cd "$_builddir"
	make -j1 itlocaledir="/usr/share/locale" \
		DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la \
		"$pkgdir"/usr/lib/*/*/plugins/*/*.la
}

md5sums="b6b56865113678a6f59b7f9f43be737d  gnumeric-1.12.1.tar.xz"
sha256sums="0f5a7af3acae7db643eb00e8b4fca6a9e90162259c6a73e4214cfa8c96cc3901  gnumeric-1.12.1.tar.xz"
sha512sums="641d8ac9e57f397a84c0112c325482093ef0c5172fec2027788cb53193e065ebf093ffa91949da10907c1cd9150d73d84fb96096df8e7f4f7ad3cd9d2bb7ca29  gnumeric-1.12.1.tar.xz"
