# devleoper package
dev() {
	default_dev
	mkdir -p "$subpkgdir"/usr/lib/php/ "$subpkgdir"/usr/bin/
	mv "$pkgdir"/usr/lib/php/build "$subpkgdir"/usr/lib/php/
	mv "$pkgdir"/usr/bin/phpize "$subpkgdir"/usr/bin/
}

