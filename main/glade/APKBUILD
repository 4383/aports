# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=glade
pkgver=3.16.1
pkgrel=0
pkgdesc="User Interface Designer for GTK+ and GNOME"
url="http://glade.gnome.org/"
arch="all"
license="GPL"
depends=
makedepends="gtk+3.0-dev libxml2-dev itstool gtk-doc"
install=
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnome.org/pub/GNOME/sources/glade/${pkgver%.*}/glade-$pkgver.tar.xz
	"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
        local i
        cd "$_builddir"
        for i in $source; do
                case $i in
                *.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
                esac
        done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--enable-compile-warnings=no \
		--enable-gtk-doc \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir" -name '*.la' -delete
}

md5sums="1b60003e91a19cc0f1acae24d30269fc  glade-3.16.1.tar.xz"
sha256sums="994ac258bc100d3907ed40a2880c3144f13997b324477253e812d59f2716523f  glade-3.16.1.tar.xz"
sha512sums="daa67dd44a6e0ab1e2ed2fd8e389de40c0d6f516765b564563422e0210fe50185e485d2ed7d3e79b96589dccdfc089c8ee058cfc52a79ba1d478e61098af334e  glade-3.16.1.tar.xz"
