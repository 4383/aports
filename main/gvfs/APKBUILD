sha512sums="d6c266ccff098d6f00af2f14980e26513b1ce98864d7345c502c69619bc3683eca67c8463fb77ec5480801fdf43f4c09786e8c17dbf8a37d4059f4094e8dbc90  gvfs-1.20.1.tar.xz"
