# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=icu
pkgver=4.4.2

# convert x.y.z to x_y_z
_x=${pkgver%%.*}
_ver=${pkgver%.*} # _ver=x.y
_y=${_ver#*.}
_z=${pkgver##*.}
_ver=${_x}_${_y}_${_z}

pkgrel=2
pkgdesc="International Components for Unicode library"
url="http://www.icu-project.org/"
license="custom:icu"
subpackages="$pkgname-dev $pkgname-doc"
depends=
makedepends=
source="http://download.icu-project.org/files/icu4c/${pkgver}/${pkgname}4c-$_ver-src.tgz
	icu-ccache.patch
	cve-2011-4599.patch
	"

_builddir="$srcdir"/icu/source

prepare() {
	cd "$_builddir"
	local x
	# https://bugs.icu-project.org/trac/ticket/6102
	for x in ARFLAGS CFLAGS CPPFLAGS CXXFLAGS FFLAGS LDFLAGS; do
		sed -i -e "/^${x} =.*/s:@${x}@::" "config/Makefile.inc.in" \
			|| return 1
	done

	for i in $source; do
		case "$i" in
		*.patch)
			msg "Applying $i"
			patch -p1 -i "$srcdir"/$i || return 1
			;;
		esac
	done
}

build() { 
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	chmod +x "$pkgdir"/usr/bin/icu-config
	install -Dm644 "$srcdir"/icu/license.html \
		"$pkgdir"/usr/share/licenses/icu/license.html
}
md5sums="314e582264c36b3735466c522899aa07  icu4c-4_4_2-src.tgz
e729eb08687b042e40df572932cbf9ce  icu-ccache.patch
f6798a48ee00015e2d5351a3c7a3bafe  cve-2011-4599.patch"
