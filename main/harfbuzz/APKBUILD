# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=0.9.17
pkgrel=0
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev cairo-dev icu-dev"
install=""
subpackages="$pkgname-dev"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

md5sums="c48827713e93539dc7285f9e86ffbdc5  harfbuzz-0.9.17.tar.bz2"
sha256sums="a4773003512035cb5c559de23e1d53f292bcb0212f023b540c4dc695b39690ed  harfbuzz-0.9.17.tar.bz2"
sha512sums="0d10ba7075338b912f19a1a26d64502b772f5574a45fb43d92eaa56434cf5d2a844f23897ecb0abbdd26e1a0aec5f6ded7e533451ee6e4a03725f42aed7f9bcd  harfbuzz-0.9.17.tar.bz2"
