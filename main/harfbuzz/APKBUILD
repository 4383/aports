# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=0.9.19
pkgrel=0
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev cairo-dev icu-dev"
install=""
subpackages="$pkgname-dev $pkgname-icu"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

icu() {
	pkgdesc="Harfbuzz ICU support library"
	replaces="harfbuzz"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/lib*icu.so.* "$subpkgdir"/usr/lib/
}

md5sums="9782581ee6ef972554772e84ca448131  harfbuzz-0.9.19.tar.bz2"
sha256sums="d2da0f060d47f6ad9de8c8781bb21fa4b9eae8ea1cd1e956b814095baa002f35  harfbuzz-0.9.19.tar.bz2"
sha512sums="8df19497485acef4febc71bf908d4c983e6963766210bc400a79f6d59b8f405c53fe5a88c21683fa9c37a9e6befefe2efb0434f774d7f37924c522eae3b4ddd4  harfbuzz-0.9.19.tar.bz2"
