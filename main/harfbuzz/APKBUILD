# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=0.9.15
pkgrel=0
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev cairo-dev"
install=""
subpackages="$pkgname-dev"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="f6075024947eb445dd3bec587b1753d1  harfbuzz-0.9.15.tar.bz2"
sha256sums="214f919c2c998eb1316dd1a14a13adf27460e706a709488777076babf7fbbf1d  harfbuzz-0.9.15.tar.bz2"
sha512sums="e8797d9def04cf910a3322958d3dc2912c54c3f300272a86e5138e586cb52b415eed82b2e632d0273c55d26ca0125133cd468777ee03e8bd909ffc189d8f16ac  harfbuzz-0.9.15.tar.bz2"
