# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=0.9.16
pkgrel=1
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev cairo-dev icu-dev"
install=""
subpackages="$pkgname-dev"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

md5sums="90855e670c790c1fec4592908be3c0b8  harfbuzz-0.9.16.tar.bz2"
sha256sums="6da7e032f705d8a5c91487cd296628d64975672a5b0c1704829cf2285072c92b  harfbuzz-0.9.16.tar.bz2"
sha512sums="7a9d96220a6c4f92eb2eb4b75b0a5d2ca6b81150d688c4604cbb6903edcbb11cae80ba3a86c0822d1b88dcf20081e9bf4487faf1284cd3aa47bd476993b07d3a  harfbuzz-0.9.16.tar.bz2"
