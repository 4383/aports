# Contributor:
# Maintainer:
pkgname=harfbuzz
pkgver=0.9.5
pkgrel=0
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev icu-dev cairo-dev"
install=""
subpackages="$pkgname-dev"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="4a1356c5c5dbfdc661f1cf6600df6265  harfbuzz-0.9.5.tar.bz2"
