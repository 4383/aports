# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=harfbuzz
pkgver=0.9.35
pkgrel=0
pkgdesc="Text shaping library"
url="http://freedesktop.org/wiki/Software/HarfBuzz"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev freetype-dev glib-dev cairo-dev icu-dev"
install=""
subpackages="$pkgname-dev $pkgname-icu"
source="http://www.freedesktop.org/software/harfbuzz/release/harfbuzz-$pkgver.tar.bz2"

_builddir="$srcdir"/harfbuzz-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

dev() {
	default_dev
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

icu() {
	pkgdesc="Harfbuzz ICU support library"
	replaces="harfbuzz"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/lib*icu.so.* "$subpkgdir"/usr/lib/
}

md5sums="531ee8650626ecddcd90b2a4637e31d4  harfbuzz-0.9.35.tar.bz2"
sha256sums="0aa1a8aba6f502321cf6fef3c9d2c73dde48389c5ed1d3615a7691944c2a06ed  harfbuzz-0.9.35.tar.bz2"
sha512sums="843555b33a5cfb96a909f14a558818a10fa59b70e5284e749c96ec0273fc17b59d535fba314992e8b6713fddfcf3cb96826e5420e88a251e5d39802fd07aadc1  harfbuzz-0.9.35.tar.bz2"
