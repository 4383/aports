# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gparted
pkgver=0.16.0
pkgrel=0
pkgdesc="a graphical partition editor for creating, reorganizing, and deleting disk partitions"
url="http://gparted.sourceforge.net/"
arch="all"
license="GPL"
depends="e2fsprogs"
makedepends="gtkmm-dev parted-dev util-linux-dev"
install=
subpackages="$pkgname-doc $pkgname-lang"
source="http://sourceforge.net/projects/gparted/files/gparted/gparted-$pkgver/gparted-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-doc \
		--disable-scrollkeeper
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="b18393ec3a8524333b02234c3d3a531f  gparted-0.15.0.tar.bz2"
sha256sums="9cb75ac51af9a8149a808bfc01946864361311832acd27dd9c342081c56d490f  gparted-0.15.0.tar.bz2"
sha512sums="e0ac43a6f6457c34caae8f7e4072d17391d3ce83a537e15d0a822b813545970aff1370bac3f4d78202d175e3e3e867fc5f97bd4ce2133162a34d2f2f88a9f6e7  gparted-0.15.0.tar.bz2"
