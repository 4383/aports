# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gparted
pkgver=0.16.0
pkgrel=0
pkgdesc="a graphical partition editor for creating, reorganizing, and deleting disk partitions"
url="http://gparted.sourceforge.net/"
arch="all"
license="GPL"
depends="e2fsprogs"
makedepends="gtkmm-dev parted-dev util-linux-dev"
install=
subpackages="$pkgname-doc $pkgname-lang"
source="http://sourceforge.net/projects/gparted/files/gparted/gparted-$pkgver/gparted-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-doc \
		--disable-scrollkeeper
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="880e58673c9ef195181c0d721717a601  gparted-0.16.0.tar.bz2"
sha256sums="9d5848ae5350dd35d2ea188bf180d5b14eba1751fffb82cd9b5eec2fc5b7d118  gparted-0.16.0.tar.bz2"
sha512sums="9f0d628cb572992f8df42d145d49e57fee9dabfc23d1e43631fce5d728351ac5f217ce67a5a093463a6427039136d2ea4ed9962a48a7c514a57cd2f2d9b7edf4  gparted-0.16.0.tar.bz2"
