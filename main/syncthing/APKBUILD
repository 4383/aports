sha512sums="f0eb42e9a0641ab00637e00b858b295ddfb8a72c170254db3ebaa2453ff2e0f71a035df14656d08bd4d28a4ea05e341fae3ab228dab08f918230ddf2d37b94d3  syncthing-0.9.8.tar.bz2
