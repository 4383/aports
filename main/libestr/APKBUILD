# Contributor: Uros
# Maintainer: Cameron Banta <cbanta@gmail.com>
pkgname=libestr
pkgver=0.1.5
pkgrel=0
pkgdesc="essentials for string handling (and a bit more)"
url="http://libestr.adiscon.com"
arch="all"
license="LGPL2.1"
subpackages="$pkgname-dev"
source="http://libestr.adiscon.com/files/download/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	./configure --prefix=/usr || return 1
}

build() {
	cd "$_builddir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -rf "$pkgdir"/usr/lib/libestr.la
}

md5sums="f180c0cdc82883d161eba3f2e8a34eb4  libestr-0.1.5.tar.gz"
sha256sums="ff9734663c8e7384835e12c65313efe14b1d7ec310f48c977d35f66b1050659e  libestr-0.1.5.tar.gz"
sha512sums="b31986738dd1264ef3a3f5bcfd91131ad100b416d87725859a78e1c5a6cb6666db08597f534a14200bb222f3e17847e7ecf94cb07c39fba3b91ac6ee20d1d67a  libestr-0.1.5.tar.gz"
