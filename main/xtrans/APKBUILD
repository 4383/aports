# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xtrans
pkgver=1.3.2
pkgrel=0
pkgdesc="X transport library"
url="http://xorg.freedesktop.org/"
arch="noarch"
license="custom"
depends=""
makedepends=""
source="http://xorg.freedesktop.org/releases/individual/lib/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
md5sums="050eb8f1d41e254f508bab72f1c10d6e  xtrans-1.3.2.tar.bz2"
sha256sums="94177c89b74f594bcddc6a12825e9b464e17ab1977de671d25f67a4ea922cb87  xtrans-1.3.2.tar.bz2"
sha512sums="f1519231504389dc96b6bff2cf68dcff966ba2dc72a250f1ae68de9ed2c90e38963be07318e5a054fbf21b8c03792de4d9502def3d0cf3e9482de431c8b2ebff  xtrans-1.3.2.tar.bz2"
