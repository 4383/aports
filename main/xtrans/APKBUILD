# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xtrans
pkgver=1.3.3
pkgrel=0
pkgdesc="X transport library"
url="http://xorg.freedesktop.org/"
arch="noarch"
license="custom"
depends=""
makedepends=""
source="http://xorg.freedesktop.org/releases/individual/lib/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}
md5sums="2f14c31ab556fc91039f51a113b38aa2  xtrans-1.3.3.tar.bz2"
sha256sums="622db4adce224581a44fbe41321bbb0bdc0c78aec586ba83548f1f1c6e8a09bf  xtrans-1.3.3.tar.bz2"
sha512sums="9db9464f8e9f1b48e5b8953e764fce7dc0e454c50c794c7871023380f6881b7e9d2e754831c906000c18467a7946d67c86eb4574f11175f8dc27b53599af01b5  xtrans-1.3.3.tar.bz2"
