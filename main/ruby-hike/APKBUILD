# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=hike
pkgname=ruby-$_gemname
pkgver=1.2.2
pkgrel=0
pkgdesc="A Ruby library for finding files in a set of paths"
url="http://github.com/sstephenson/hike"
arch="noarch"
license="MIT"
depends="ruby"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="50ee79bbc3477ee4ee5bc4d7ba1d4120  hike-1.2.2.gem"
sha256sums="47bbad59c32996a571848f8288816d6444e17cacabaf5e34174120cb7e95b888  hike-1.2.2.gem"
sha512sums="39a401bfb3083338135e046195a986ffc06fd290a7fed5504cbe6e1bbc7a68b5b6d5b26ceabea366005b476e1cd633082edf0cb96e7715bd5a87a1ee2cee0cd2  hike-1.2.2.gem"
