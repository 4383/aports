# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=fakeroot
pkgver=1.14.4
pkgrel=1
pkgdesc="Gives a fake root environment, useful for building packages as a non-privileged user"
license='GPL'
url="http://packages.debian.org/fakeroot"
depends=
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.debian.org/debian/pool/main/f/$pkgname/${pkgname}_${pkgver}.orig.tar.bz2
	busybox-compat.patch"

prepare() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p1 < ../busybox-compat.patch
}

build() {
	cd $startdir/src/$pkgname-$pkgver
	CONFIG_SHELL=/bin/sh ./configure --prefix=/usr
	make || return 1
}

package() {
	cd $startdir/src/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
}

md5sums="bea628be77838aaa7323a2f7601c2d7e  fakeroot_1.14.4.orig.tar.bz2
ea7b7e3065090d72804cdf4719dd5832  busybox-compat.patch"
