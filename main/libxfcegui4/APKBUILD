# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxfcegui4
pkgver=4.8.0
pkgrel=0
pkgdesc="Basic GUI functions for Xfce"
url="http://www.xfce.org/"
arch="all"
license="GPL2"
subpackages="$pkgname-dev $pkgname-doc"
depends=
makedepends="gtk+-dev xfconf-dev libxfce4util-dev startup-notification-dev
	libglade-dev"
source="http://archive.xfce.org/src/xfce/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2"

depends_dev="gtk+-dev libxfce4util-dev xfconf-dev startup-notification-dev"
build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="74fe7b81051450785fa8270aed1e6e5c  libxfcegui4-4.8.0.tar.bz2"
