# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs-minimist
_pkgname=${pkgname#nodejs-}
pkgver=1.1.0
pkgrel=0
pkgdesc="Parse argument options"
url="https://github.com/substack/minimist"
arch="noarch"
license="MIT"
depends="nodejs"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json index.js "$pkgdir"/$_moduledir
}

md5sums="c5f7525a855976d6d08f952540296553  minimist-1.1.0.tgz"
sha256sums="b2cc2c2a5fefd8621fbe4f15096489351941c058e46a6d7be7e7548cf807fbec  minimist-1.1.0.tgz"
sha512sums="a339653b26226b2cc480709028c3d72a43a7f5045d7957b44eb2312e9f92257300d173422fec9fe0eb723e407626d873cd878f60e4d19e2a418b7a0e39af36b3  minimist-1.1.0.tgz"
