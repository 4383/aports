# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs-minimist
_pkgname=${pkgname#nodejs-}
pkgver=0.2.0
pkgrel=0
pkgdesc="Parse argument options"
url="https://github.com/substack/minimist"
arch="noarch"
license="MIT"
depends="nodejs"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json index.js "$pkgdir"/$_moduledir
}

md5sums="f87392079b067aa68e49c0cf258aad16  minimist-0.2.0.tgz"
sha256sums="8eb7d09f488e7c162a88ebce0fa361cb0894d0d1da13a8b30cd48abdfbbefbc1  minimist-0.2.0.tgz"
sha512sums="044487ae62450888815bf3d1d3c243edb76d06179540c77d19cbcb12adc00ac654e97dc8aefbab6703b4c60eeecbf5379eddcccba1f30e3356713ea23b282a5c  minimist-0.2.0.tgz"
