sha256sums="8a5ed44fc42e7a1f136db9eebb67d4cdc22ba3ba7a675f7af756bb2b550b4dad  v2.1.fb50.tar.gz"
sha512sums="ca05821ae3351fccd5b7e956918b5d59e7b18e03fa9ad86e877740317382d818e692184225291fe5b9ae992007cb0da2d150d4d0cc62bab27bfb73b3e0a7d6cf  v2.1.fb50.tar.gz"
