# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=lua-optarg
pkgver=0.1
pkgrel=0
pkgdesc="Simple command line option parser for Lua"
url="https://github.com/ncopa/lua-optarg"
arch="noarch"
license="MIT"
subpackages=""
source="$pkgname-$pkgver.tar.gz::https://github.com/ncopa/$pkgname/archive/v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-$pkgver"

_luaversions="5.1 5.2 5.3"
for _v in $_luaversions; do
	subpackages="$subpackages lua$_v-${pkgname#lua-}:_package"
done

package() {
	mkdir -p "$pkgdir"
}

_package() {
	local lver="${subpkgname:3:3}"
	pkgdesc="$pkgdesc $lver"
	depends="lua$lver"
	install_if="$pkgname=$pkgver-r$pkgrel lua$lver"

	install -Dm644 "$builddir"/optarg.lua \
		"$subpkgdir"/usr/share/lua/$lver/optarg.lua
}

sha512sums="d110b0a9bee079c48c234c6e77a56951c809b5c924a81975607d68cde432a63b76353800c2fc6a04f6b29503d19f65cd3b7bbd50cd1ce612f4c18e775b5c27a8  lua-optarg-0.1.tar.gz"
