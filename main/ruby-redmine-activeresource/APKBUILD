_gemname=activeresource
pkgname=ruby-redmine-$_gemname
pkgver=3.2.19
pkgrel=0
pkgdesc="REST on Rails"
url="http://rubygems.org/gems/activeresource"
arch="noarch"
license="GPL"
depends="ruby ruby-redmine-activemodel ruby-redmine-activesupport"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="3e28dbff0e0ad92ec026abe23bfbec17  activeresource-3.2.19.gem"
sha256sums="8617d24537ca937cc67aac46aaa29782510d66136605426d0a23a3585a839daf  activeresource-3.2.19.gem"
sha512sums="640074fe1a9ad98f8166d24f96f9094933b6065492cf7fe5c94e2a845c36832099a341bbed88a69be498ecf43631c24490168a5477ddb978d14eff07b8855809  activeresource-3.2.19.gem"
