# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libgee
pkgver=0.16.0
_rest=${pkgver#*.*.}
_xy=${pkgver%.$_rest}
pkgrel=1
pkgdesc="GObject collection library"
url="http://live.gnome.org/Libgee"
arch="all"
license="LGPL2.1"
depends=""
makedepends="glib-dev gobject-introspection-dev"
subpackages="$pkgname-dev"
source="http://ftp.gnome.org/pub/GNOME/sources/libgee/${_xy}/libgee-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$srcdir/$pkgname-$pkgver"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="12ab75a06a145a48406b2c135a3be191  libgee-0.16.0.tar.xz"
sha256sums="a26243eac4280f2d2ebd34b377fc5dc7a73633bcc4c339af6162031943d76aae  libgee-0.16.0.tar.xz"
sha512sums="1ba6da152d14c987ac44fa840f6121e47b7f4f1d7af8fb8002527cadaf77336c51767f51a05c52941ff335434d864b26741d0fde99590fe72cc7ef2aa01c84cf  libgee-0.16.0.tar.xz"
