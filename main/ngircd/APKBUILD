sha512sums="944332fabfb3ea98a789939c52ee0dd9b7eb9283ddf38a588012af5118f04cbdb0a768d7fcaab06aec9b5db40cd47ab125654ee652bebf350d6c8c809deadfe8  ngircd-21.tar.gz
f74c9064aaef9957dcd6acd45bf107a6f74ffe618b96373308ba151dcbffb62ec9062ed956e5d57c7b46bca1dd22a7486f182640cc5ab607f3f8b39600d6506f  ngircd.initd"
