# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-session-manager
pkgver=1.10.1
pkgrel=0
pkgdesc="The MATE session manager"
url="https://github.com/mate-desktop/mate-session-manager"
arch="all"
license="GPL2"
depends="mate-common mate-desktop"
depends_dev=""
makedepends="$depends_dev intltool libtool dconf-dev dbus-glib-dev gtk+2.0-dev
	libsm-dev mate-desktop-dev"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="d4b54724532af2bd0fd93bcf047934f5  mate-session-manager-1.10.1.tar.xz"
sha256sums="8b46a5223e3bb6b12c418e8b2f6cf7b9eea397c6e0859fc65ea52999d3908dfe  mate-session-manager-1.10.1.tar.xz"
sha512sums="c297b6d72b0bdf7bdeb26c32a4fc5e8f8f7bf72d7635fb7827748510114486a1b7a3ab09cdc07bf17c67a4cae6cc66560dea1e207953c63a4d8e797b67db67ee  mate-session-manager-1.10.1.tar.xz"
