# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfce4-dev-tools
pkgver=4.7.4
pkgrel=0
pkgdesc="Xfce developer tools"
url="http://www.xfce.org/"
arch="all"
license="GPL2"
depends="automake autoconf make intltool pkgconfig gtk-doc"
makedepends=
source="http://archive.xfce.org/src/xfce/xfce4-dev-tools/${pkgver%.*}/xfce4-dev-tools-$pkgver.tar.bz2"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="fcd0fadb39b20500c873c2f5d5a6913c  xfce4-dev-tools-4.7.4.tar.bz2"
