# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfconf
pkgver=4.10.0
pkgrel=1
pkgdesc="Hierarchical configuration system for Xfce"
url="http://www.xfce.org/"
arch="all"
license="GPL-2"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
depends=
depends_dev="glib-dev dbus-dev dbus-glib-dev"
makedepends="$depends_dev libxfce4util-dev intltool gtk-doc"
source="http://archive.xfce.org/src/xfce/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2"


_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		--enable-gtk-doc \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="4ed48150a03fb5f42b455494307b7f28  xfconf-4.10.0.tar.bz2"
