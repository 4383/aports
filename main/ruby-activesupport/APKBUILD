# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=ruby-activesupport
_gemname=activesupport
pkgver=4.0.12
pkgrel=0
pkgdesc="Utility classes and extension to the standard library"
url="http://rubygems.org/gems/activesupport"
arch="noarch"
license="GPL"
depends="ruby ruby-i18n ruby-minitest ruby-multi_json ruby-thread_safe
         ruby-rails-tzinfo"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="8ccb342e1971d05246ce8b73b486d962  activesupport-4.0.12.gem"
sha256sums="9eea3fcb65220f46053d007f8326239a991bb98586756f7ed586a3346adb676a  activesupport-4.0.12.gem"
sha512sums="68f6049dfe0957e3d53b0d95b668cb3e7c57cae155c8c3458ec8dfdd13e493235f1ad7d3063c353f0549828b27cc4e89694d1563c7fee312c97affcbbaa7d034  activesupport-4.0.12.gem"
