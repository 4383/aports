pkgname=alpine-mirrors
pkgver=2.1.0_git20111203
pkgrel=0
pkgdesc="List of Alpine Linux Mirrors"
url="http://alpinelinux.org/"
arch="noarch"
license="GPL"
depends=
makedepends=
install=
subpackages=
source="MIRRORS.txt
	RELEASES.txt
	"

build() {
	return 0
}

package() {
	install -D -m644 "$srcdir"/MIRRORS.txt \
		"$pkgdir"/usr/share/alpine-mirrors/MIRRORS.txt
	install -D -m644 "$srcdir"/RELEASES.txt \
		"$pkgdir"/usr/share/alpine-mirrors/RELEASES.txt
}

md5sums="052304b2ce9186a89d6de05a41a0e274  MIRRORS.txt
2d261c2947ccf35000ae3128d33da04a  RELEASES.txt"
