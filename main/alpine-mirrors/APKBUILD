# Contributor: Matt Smith <mcs@darkregion.net>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=alpine-mirrors
pkgver=2.4
pkgrel=0
pkgdesc="List of Alpine Linux Mirrors"
url="http://alpinelinux.org/"
arch="noarch"
license="GPL"
depends=
makedepends=
install=
subpackages=
source="MIRRORS.txt
	RELEASES.txt
	"

build() {
	return 0
}

package() {
	install -D -m644 "$srcdir"/MIRRORS.txt \
		"$pkgdir"/usr/share/alpine-mirrors/MIRRORS.txt
	install -D -m644 "$srcdir"/RELEASES.txt \
		"$pkgdir"/usr/share/alpine-mirrors/RELEASES.txt
}

md5sums="1ebf90aea05f9facf9bdc91fca7620ed  MIRRORS.txt
1128da8c6a25232ebbfa28d74520f9af  RELEASES.txt"
