sha512sums="78983de76b617131175c2b3e7c0eaeca6494bd1a7a0191658b78aff200d3c2460c84d64bc410d5b2110d947ce8a08caff21fb2f6ce3ee80f1ee2570dbcca0c1d  mosquitto-1.2.3.tar.gz
