sha512sums="07e1a25579b156d9dd6ecf13ee85b40f7bdaa5a48d49566666fc5aa1a9cc23da6e9059e240241bff98e7b3c9ff8e92979cb553a3c3a6e38209501c92dc8394cf  man-pages-3.63.tar.xz
