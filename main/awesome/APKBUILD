# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=awesome
pkgver=3.5
pkgrel=0
pkgdesc="lua-configurable window manager framework"
url="http://awesome.naquadah.org/"
arch="x86"
license="GPL"
depends="imagemagick lua-lgi"
makedepends="lua-dev libxcb-dev pango-dev cairo-dev cmake gperf glib-dev
	imlib2-dev libxdg-basedir-dev libev-dev startup-notification-dev
	xcb-util-keysyms-dev xcb-util-image-dev xcb-util-dev xcb-util-wm-dev
	dbus-dev lua-doc gdk-pixbuf-dev libxcursor-dev"
install=""
subpackages="$pkgname-doc"
source="http://awesome.naquadah.org/download/${pkgname}-${pkgver}.tar.xz
	"

_srcdir="${srcdir}/${pkgname}-${pkgver}"
_builddir="${srcdir}/build"
prepare() {
	local i
	cd "$_srcdir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	mkdir "$_builddir"
	cd "$_builddir"
	[ "$ALPINE_LIBC" != "eglibc" ] && local _iconv="-liconv"
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DAWESOME_OPTIONAL_LDFLAGS=$_iconv \
		"$_srcdir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="ce998f19c80bd98f8d119a91f53526df  awesome-3.5.tar.xz"
