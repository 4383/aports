# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=awesome
pkgver=3.5.3
pkgrel=0
pkgdesc="lua-configurable window manager framework"
url="http://awesome.naquadah.org/"
arch="x86 x86_64"
license="GPL2+"
depends="imagemagick lua-lgi"
makedepends="lua lua-dev libxcb-dev pango-dev cairo-dev cmake gperf glib-dev
	imlib2-dev libxdg-basedir-dev libev-dev startup-notification-dev
	xcb-util-keysyms-dev xcb-util-image-dev xcb-util-dev xcb-util-wm-dev
	dbus-dev lua-doc gdk-pixbuf-dev xcb-util-cursor-dev"
install=""
subpackages="$pkgname-doc"
source="http://awesome.naquadah.org/download/${pkgname}-${pkgver}.tar.xz
	"

_srcdir="${srcdir}/${pkgname}-${pkgver}"
_builddir="${srcdir}/build"
prepare() {
	local i
	cd "$_srcdir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	mkdir "$_builddir"
	cd "$_builddir"
	[ "$ALPINE_LIBC" != "eglibc" ] && local _iconv="-liconv"
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DAWESOME_OPTIONAL_LDFLAGS=$_iconv \
		"$_srcdir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="730a5852cc61f5561588a1b788ec861e  awesome-3.5.3.tar.xz"
sha256sums="544eb343a4a059ebe405ae907bda205e7c63a550417c8ee49f9eeee6870c9253  awesome-3.5.3.tar.xz"
sha512sums="7d3e75ddf72a28a29b3031419485072719fe552508e450faee9e58a365827187c6de50dd11b5a8f0b41a3330456b46a7e6f67018b52891e22d4455e999137d2e  awesome-3.5.3.tar.xz"
