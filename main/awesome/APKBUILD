# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=awesome
pkgver=3.5.2
pkgrel=1
pkgdesc="lua-configurable window manager framework"
url="http://awesome.naquadah.org/"
arch="x86 x86_64"
license="GPL2+"
depends="imagemagick lua-lgi"
makedepends="lua lua-dev libxcb-dev pango-dev cairo-dev cmake gperf glib-dev
	imlib2-dev libxdg-basedir-dev libev-dev startup-notification-dev
	xcb-util-keysyms-dev xcb-util-image-dev xcb-util-dev xcb-util-wm-dev
	dbus-dev lua-doc gdk-pixbuf-dev xcb-util-cursor-dev"
install=""
subpackages="$pkgname-doc"
source="http://awesome.naquadah.org/download/${pkgname}-${pkgver}.tar.xz
	"

_srcdir="${srcdir}/${pkgname}-${pkgver}"
_builddir="${srcdir}/build"
prepare() {
	local i
	cd "$_srcdir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	mkdir "$_builddir"
	cd "$_builddir"
	[ "$ALPINE_LIBC" != "eglibc" ] && local _iconv="-liconv"
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DAWESOME_OPTIONAL_LDFLAGS=$_iconv \
		"$_srcdir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="c16eaaaddf6f56b4e041007952e2a4fe  awesome-3.5.2.tar.xz"
sha256sums="188d65b02a8ef905be43f126e2591b0d3caf84e094fb6af5501ae5ef07503e86  awesome-3.5.2.tar.xz"
sha512sums="e1c661dfa64e1747a15c149c445877f36380f30f20a4a39ccf1a02df95b1dc5b38337567dd7e401592b2906627716e72673772fe131189c763dc846978bafd48  awesome-3.5.2.tar.xz"
