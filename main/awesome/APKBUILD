# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=awesome
pkgver=3.5.4
pkgrel=0
pkgdesc="lua-configurable window manager framework"
url="http://awesome.naquadah.org/"
arch="x86 x86_64"
license="GPL2+"
depends="imagemagick lua-lgi"
makedepends="lua lua-dev libxcb-dev pango-dev cairo-dev cmake gperf glib-dev
	imlib2-dev libxdg-basedir-dev libev-dev startup-notification-dev
	xcb-util-keysyms-dev xcb-util-image-dev xcb-util-dev xcb-util-wm-dev
	dbus-dev lua-doc gdk-pixbuf-dev xcb-util-cursor-dev"
install=""
subpackages="$pkgname-doc"
source="http://awesome.naquadah.org/download/${pkgname}-${pkgver}.tar.xz
	"

_srcdir="${srcdir}/${pkgname}-${pkgver}"
_builddir="${srcdir}/build"
prepare() {
	local i
	cd "$_srcdir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	mkdir "$_builddir"
	cd "$_builddir"
	[ "$ALPINE_LIBC" != "eglibc" ] && local _iconv="-liconv"
	cmake -DCMAKE_INSTALL_PREFIX=/usr \
		-DSYSCONFDIR=/etc \
		-DCMAKE_BUILD_TYPE=Release \
		-DAWESOME_OPTIONAL_LDFLAGS=$_iconv \
		"$_srcdir"
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="9d52a26bfbc142ace5427bfb55010359  awesome-3.5.4.tar.xz"
sha256sums="b48bce31e14345f260075d528263385564eaeb204c4b673c893f77e884a24ea8  awesome-3.5.4.tar.xz"
sha512sums="afc221931759e56c24f89bdbf6aab9eb9059a44acaea6345567f3f77eb4663354ca7a266e9395f0b6a3068cd7f15e824a6c938987eac915ddba420050c265235  awesome-3.5.4.tar.xz"
