# Contributor:
# Maintainer: Nathan Angelacos <nangel@alpinelinux.org>
pkgname=libunistring
pkgver=0.9.3
pkgrel=0
pkgdesc="GNU Unicode string library"
url="http://www.gnu.org/software/libunistring/"
arch="all"
license="LGPLv3+"
depends=""
depends_dev="libiconv-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://ftp.gnu.org/gnu/libunistring/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	 ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make all || return 1
}

package() {
	cd "$_builddir"
    make DESTDIR="$pkgdir" install || return 1
    rm "$pkgdir"/usr/lib/*.la
}

md5sums="db8eca3b64163abadf8c40e5cecc261f  libunistring-0.9.3.tar.gz"
sha256sums="610d3ec724fbdaa654afe3cff20b9f4d504be3fd296fded2e0f7f764041006a3  libunistring-0.9.3.tar.gz"
sha512sums="351c0c94c4a31efbed932978ff8afae4defd7c28771d2d877b5ead5383a4f1b53200ece72b6908a9bafb7836775b2af3465e051226e43520ada2b8c583314d12  libunistring-0.9.3.tar.gz"
