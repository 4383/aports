# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=usbutils
pkgver=0.84
pkgrel=0
pkgdesc="USB Device Utilities"
url="http://linux-usb.sourceforge.net/"
license="GPL"
subpackags="$pkgname-doc"
depends=
makedepends="pkgconfig libusb-compat-dev"
source="http://downloads.sourceforge.net/sourceforge/linux-usb/$pkgname-$pkgver.tar.gz"

build () 
{ 
	cd "$srcdir"/$pkgname-$pkgver
	rm usb.ids
	wget http://www.linux-usb.org/usb.ids
	./configure --prefix=/usr \
		--datadir=/usr/share/hwdata \
		--disable-zlib
	make || return 1
	make DESTDIR="$pkgdir" install
}
md5sums="87612c82e66393a395db91361d168c1b  usbutils-0.84.tar.gz"
