# Contributor: Jeff Bilyk <jbilyk@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=aria2
pkgver=1.18.4
pkgrel=0
pkgdesc="Download utility for HTTP(S), FTP, Bittorrent, and Metalink"
url="http://aria2.sourceforge.net"
arch="all"
license="GPL2+"
depends="ca-certificates"
depends_dev="gnutls-dev expat-dev sqlite-dev c-ares-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-doc"
source="http://downloads.sourceforge.net/aria2/aria2-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-nls \
		--with-ca-bundle=/etc/ssl/certs/ca-certificates.crt \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="32292e721b0767c30e92084949ed7f98  aria2-1.18.4.tar.xz"
sha256sums="bc6b9d1eb215bba1948ebb7725301658f7125c7345d2a25f971cb8e11204c88d  aria2-1.18.4.tar.xz"
sha512sums="eb58528a390ebecbf6ee9cab32ebb8c7e655e622e15157e415c30764db5ec7edd98cb18ffee9bb4d3677e5454dab67f1b4a75be72108c53857959351083caa00  aria2-1.18.4.tar.xz"
