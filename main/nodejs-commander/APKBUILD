sha256sums="7d8a726755f1c6900aa9511350866a5dd9a3f91a87fe08efde14c89b4880109b  commander-2.3.0.tgz"
sha512sums="083e39d9f9e4d2343293735f9caf8a911fe150fa07b79a5568a1e882dcb2bf737453841f01a97d5b4feb5cb3a0fef55981029aee376d5f2a4ab356008a9d75b9  commander-2.3.0.tgz"
