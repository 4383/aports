pkgname=scons
pkgver=2.3.2
pkgrel=0
pkgdesc="scons software construction system"
url="http://www.scons.org/"
arch="noarch"
license="MIT"
depends="python"
makedepends="python-dev"
install=""
source="http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
}

md5sums="bbd428da35ec176575a2b0be1f8d7162  scons-2.3.2.tar.gz"
sha256sums="f993320c5e9515e6567fcce73df0a7a8808414bf1223c69123d3dcf339a449d4  scons-2.3.2.tar.gz"
sha512sums="90e6fb38cb39e030f0b77cf46f76a4ffef141d991087bd22a9bd0d012d568375b32084437e408c22bda54fa5517f294522ddd718838fef2598d892576cc2ae38  scons-2.3.2.tar.gz"
