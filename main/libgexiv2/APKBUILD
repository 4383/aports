# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libgexiv2
pkgver=0.6.1
pkgrel=0
pkgdesc="a GObject-based wrapper around the  Exiv2 library"
url="http://trac.yorba.org/wiki/gexiv2"
arch="all"
license="GPL"
depends=
depends_dev="glib-dev exiv2-dev"
makedepends="exiv2-dev glib-dev libtool m4"
install=
subpackages="$pkgname-dev"
source="http://yorba.org/download/gexiv2/${pkgver%.*}/${pkgname}_$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	# apply patches here
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="5bd2ba92b765a2b3721874ebd2647734  libgexiv2_0.6.1.tar.xz"
sha256sums="72ee2fcc6a98c9e83467adea45b10d1b61c55654c204dcce9c2463615389a9e3  libgexiv2_0.6.1.tar.xz"
sha512sums="76aecd20ffac202badb51eab4e40fee563c3073892beec716bcf24e285df42f2498594a9e0bf487e198e8c955047d55e5b49b506bbf8b67c64956c0b99a84b1b  libgexiv2_0.6.1.tar.xz"
