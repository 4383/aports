sha256sums="d303cbceb73774edc0cfdbde6b97b0e41077e242ff6520710890f81bea40e2d4  qtimageformats-opensource-src-5.3.2.tar.xz"
sha512sums="a3bae5b5ff651b88c268855d21894447681efcd357f9ba5e863db0e7dec949123405cdc5e22a8949c386157d34952621e7a14cb01d04c36ad3d761fac2e77f60  qtimageformats-opensource-src-5.3.2.tar.xz"
