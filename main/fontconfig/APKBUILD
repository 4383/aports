# Contributor: Mika Havela <mika.havela@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=fontconfig
pkgver=2.11.1
pkgrel=2
pkgdesc="The Fontconfig package is a library for configuring and customizing font access."
url="http://fontconfig.org"
arch="all"
license="GPL"
depends=
depends_dev="freetype-dev expat-dev"
makedepends="$depends_dev zlib-dev autoconf automake libtool py-lxml gperf"
install=
triggers="$pkgname.trigger=/usr/share/fonts/*"
subpackages="$pkgname-doc $pkgname-dev infinality-presets:infinality_presets"
# fontconfig-ultimate https://github.com/bohoomil/fontconfig-ultimate
_ultver="2015-06-09"
source="http://fontconfig.org/release/${pkgname}-${pkgver}.tar.gz
	fontconfig-ultimate-$_ultver.tar.gz::https://github.com/bohoomil/fontconfig-ultimate/archive/$_ultver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
        # infinality
        for j in "$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/*.patch; do
                msg "Applying ${j}"
                patch -p1 -i $j || return 1
        done
	cp -r "$srcdir"/fontconfig-ultimate-$_ultver/conf.d.infinality . || return 1
}

build() {
	cd "$_builddir"

	autoreconf -vif || return 1
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-docs \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la

	install -m644 -D COPYING \
		"$pkgdir"/usr/share/licenses/"${pkgname}"/COPYING || return 1

	# infinality
	mkdir -p "$pkgdir"/etc/fonts/conf.avail.infinality || return 1
	cp -r "$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/combi \
		"$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/free \
		"$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/ms \
		"$pkgdir"/etc/fonts/conf.avail.infinality/ || return 1
	mkdir -p "$pkgdir"/usr/share/doc/fontconfig/fonts-settings
	cp -r "$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/fonts-settings \
		"$pkgdir"/usr/share/doc/fontconfig/ || return 1
}

infinality_presets() {
	pkgdesc="infinality presets script"
	depends="bash"
	arch="noarch"
	install -Dm755 "$srcdir"/fontconfig-ultimate-$_ultver/fontconfig_patches/fc-presets \
		"$subpkgdir"/usr/bin/fc-presets || return 1
}

