# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=fontconfig
pkgver=2.10.95
pkgrel=0
pkgdesc="The Fontconfig package is a library for configuring and customizing font access."
url="http://fontconfig.org"
arch="all"
license="GPL"
depends=
depends_dev="freetype-dev expat-dev"
makedepends="$depends_dev zlib-dev"
install=
triggers="$pkgname.trigger=/usr/share/fonts/*"
subpackages="$pkgname-doc $pkgname-dev"
source="http://fontconfig.org/release/${pkgname}-${pkgver}.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-docs \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la

	install -m644 -D COPYING "$pkgdir"/usr/share/licenses/"${pkgname}"/COPYING
}

md5sums="09bb3c3469c3453d4d5c39f66f8a8aac  fontconfig-2.10.95.tar.gz"
sha256sums="cc7ff3b61c99ec1ab19e3656fd9b90bb9824036b3361031435c45f19b91a80c6  fontconfig-2.10.95.tar.gz"
sha512sums="29b73eeb9bc645b8aa1cf589db52ec460fc342066f2bfd36fde4e2885e77a0c3fa8ea58aa04a62bb90b3873fae517ad0958ebccaa24beff05e9f71b90b4b6cad  fontconfig-2.10.95.tar.gz"
