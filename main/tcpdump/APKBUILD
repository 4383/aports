# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=tcpdump
pkgver=4.4.0
pkgrel=0
pkgdesc="A tool for network monitoring and data acquisition"
url="http://www.tcpdump.org"
arch="all"
license="BSD"
depends=""
makedepends="libpcap-dev openssl-dev"
subpackages="$pkgname-doc"
source="http://www.$pkgname.org/release/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
build () { 
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--enable-ipv6 \
		|| return 1
	make check || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/sbin/tcpdump.4*
}

md5sums="6f75aabcffd012f73bd7c331bb5d8232  tcpdump-4.4.0.tar.gz"
sha256sums="12274bed2cb89098dadf00a022b4d40853c5108369f3b3117aedf21ec61530bd  tcpdump-4.4.0.tar.gz"
sha512sums="cf31eb2f878e7e448533172241d57071e105b40265b943ebad8d25867384658016676a528f399fb38b0a2ec09d4986d99e4862fd8a09d9a491eeca75ae69d754  tcpdump-4.4.0.tar.gz"
