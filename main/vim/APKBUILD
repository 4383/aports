# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=vim
pkgver=7.4
_srcver=${pkgver%.*}
_patchver=${pkgver##*.}
pkgrel=1
pkgdesc="advanced text editor"
url="http://www.vim.org"
arch="all"
license='GPL'
depends=
makedepends="ncurses-dev lua5.2-dev"
subpackages="$pkgname-doc"
#source="http://dev.alpinelinux.org/archive/vim/vim-$pkgver.tar.xz
source="ftp://ftp.vim.org/pub/vim/unix/vim-$pkgver.tar.bz2
	vim-gcc47.patch
	vimrc
	"
_builddir="$srcdir"/${pkgname}${pkgver/./}

prepare() {
	cd "$_builddir"
	patch -p0 -i "$srcdir"/vim-gcc47.patch || return 1

	# Read vimrc from /etc/vim
	echo '#define SYS_VIMRC_FILE "/etc/vim/vimrc"' >> src/feature.h
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-luainterp \
		--without-x \
		--disable-nls \
		--enable-multibyte \
		--enable-gui=no \
		--with-lua-prefix=/usr/lua5.2 \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir/" install
	install -D "$srcdir"/vimrc "$pkgdir"/etc/vim/vimrc
}

