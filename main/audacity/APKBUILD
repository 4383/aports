# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=audacity
pkgver=2.0.5
pkgrel=0
pkgdesc="Multitrack audio editor"
url="http://audacity.sourceforge.net"
arch="all"
license="GPLv2"
depends=""
depends_dev=""
makedepends="$depends_dev wxgtk-dev alsa-lib-dev libsndfile-dev flac-dev
	libogg-dev libvorbis-dev libsamplerate-dev expat-dev libmad-dev
	libid3tag-dev taglib-dev"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="http://audacity.googlecode.com/files/audacity-minsrc-$pkgver.tar.xz"

_builddir="$srcdir"/audacity-src-$pkgver
prepare() {
	local i
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--with-libsndfile=system \
		--with-libsamplerate=system \
		--without-libresample \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

