pkgname=acf-openssl
pkgver=0.3.0
pkgrel=0
pkgdesc="A web-based system administration interface for openssl"
url="http://git.alpinelinux.org/cgit/acf-openssl"
license="GPL-2"
depends="acf-core lua openssl"
makedepends=""
install=
subpackages=""
source="http://git.alpinelinux.org/cgit/$pkgname/snapshot/$pkgname-$pkgver.tar.bz2"

build() {
	cd "$srcdir/$pkgname-$pkgver"

	make DESTDIR="$pkgdir" install

}

md5sums="1f49e3c4c5dfe3e50f1b55cb495b354e  acf-openssl-0.3.0.tar.bz2"
