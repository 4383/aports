pkgver=4.2.2
pkgrel=0
pkgdesc="Request Tracker - issue and bug tracker"
pkgusers="rt4"
pkggroups="rt4"
url="http://www.bestpractical.com/rt"
arch="noarch"
license="GPLv2+"
depends="perl
	perl-term-readkey
	perl-cache-simple-timedexpiry
