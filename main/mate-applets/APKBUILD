# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer:
pkgname=mate-applets
pkgver=1.10.2
pkgrel=0
pkgdesc="Applets for use with the MATE panel"
url="https://github.com/mate-desktop/mate-applets"
arch="all"
license="GPLv2"
depends="mate-icon-theme"
depends_dev=""
makedepends="$depends_dev intltool gtk+2.0-dev mate-panel-dev libwnck-dev
	mate-desktop-dev dconf-dev itstool linux-headers libxml2-utils"
install=""
subpackages="$pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"
options="suid"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
                --build=$CBUILD \
                --host=$CHOST \
                --sysconfdir=/etc \
                --prefix=/usr \
		--disable-stickynotes || return 1

        make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="bafafb058082b4bb9f4d13bbe86dc5e2  mate-applets-1.10.2.tar.xz"
sha256sums="07495e44a3716a36f41a32de29c7b2b671e2873b6578bb7f7b5120b43d6c088c  mate-applets-1.10.2.tar.xz"
sha512sums="2528440e2dae3fd6df9c646ee7f81a5bd0f6c9b9100449df7872c7ddb0af60b101cb8a05b173253aea9b8574e35dbd9fbc30b2fcf6718cab885f8310855cc682  mate-applets-1.10.2.tar.xz"
