sha512sums="0db370f0634d499ef2a4c69a6f6ae1e0ad1ce06851b07f70cf374abae6ddb7a42102d002343de5fbfe1cc14bcb1af0b26dd8a1fff09e4eb7f696088f12e2266c  bmd-tools-0.20150306.tar.gz
