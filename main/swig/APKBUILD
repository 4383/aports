# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=swig
pkgver=2.0.10
pkgrel=0
pkgdesc="SWIG is a compiler that makes it easy to integrate C and C++ code with scripting languages"
url="http://www.swig.org/"
arch="all"
license="custom"
depends="guile"
makedepends="zlib-dev pcre-dev"
source="http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver.tar.gz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install
	install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

md5sums="6d5e7ad05b4a404e5e85db9befb70c9a  swig-2.0.10.tar.gz"
sha256sums="d1eef329e867124ce60838b5ad07c763146b6c8f250dd22a861ead7406f78e63  swig-2.0.10.tar.gz"
sha512sums="98bb7ee9a59b858ba191537c65a0e12e571fda13f7b269f8380ed32be670824a33ca2dbc61da876ca97fe73d34e1d93504fc3145e0e56bc7a4323ff9ca72685c  swig-2.0.10.tar.gz"
