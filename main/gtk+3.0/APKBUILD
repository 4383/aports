sha256sums="9f9716a8c7f8dc149f767718e25fed41984b504a00fd0919b1a4969ca2e4db31  gtk+-3.16.1.tar.xz"
sha512sums="bcc5495d5f83d58f71fb2f21c6489b7f039f226679259cb6617ebf5a8994631a600c9aac67d63dc304fe0c4d784c114ede0811778cca8e670101ed83214e9b80  gtk+-3.16.1.tar.xz"
