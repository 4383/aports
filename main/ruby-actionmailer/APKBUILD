# Contributor: Carlo Landmeter <clandmeter@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=ruby-actionmailer
_gemname=actionmailer
pkgver=4.0.10
pkgrel=0
pkgdesc="Email on Rails"
url="http://rubygems.org/gems/actionmailer"
arch="noarch"
license="GPL"
depends="ruby ruby-actionpack ruby-mail"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="8e732bd43ae18cb74bfe07d2fbd5469b  actionmailer-4.0.10.gem"
sha256sums="02b390a6d7b1e75a162a01fda877db21150af38221446b0c499f173eb700f9e7  actionmailer-4.0.10.gem"
sha512sums="2b60dd970b8a2c1bbb1d2c5dc9ab463862c2013c134553f1255d16dde4cbbb4164c31329252888dab15722981a883a0ad1d1bceef6a5b13358aacfa8d074f6c7  actionmailer-4.0.10.gem"
