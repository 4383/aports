# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libcap
pkgver=2.22
pkgrel=2
pkgdesc="POSIX 1003.1e capabilities"
arch="all"
license="GPL"
url="http://www.friedhoff.org/posixfilecaps.html"
depends=
makedepends="perl attr-dev"
source=" http://mirror.switch.ch/ftp/mirror/gentoo/distfiles/$pkgname-$pkgver.tar.bz2"
subpackages="$pkgname-doc $pkgname-dev"
_builddir="$srcdir"/$pkgname-$pkgver
build ()
{
	cd "$_builddir"
	make lib=/lib prefix=/usr DESTDIR="$pkgdir"
}

package() {
	cd "$_builddir"
	make lib=/lib prefix=/usr RAISE_SETFCAP=no DESTDIR="$pkgdir" install
}
md5sums="ce64058bdb3f086ddbfca8ce6c919845  libcap-2.22.tar.bz2"
