# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=sprockets
pkgname=ruby-$_gemname
pkgver=2.2.2
pkgrel=0
pkgdesc="Rack-based asset packaging system"
url="http://rubygems.org/gems/rack-test"
arch="noarch"
license="MIT"
depends="ruby ruby-hike ruby-multi_json ruby-rack ruby-tilt"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="9d3c57814c21111357ff5c933ae0901c  sprockets-2.2.2.gem"
sha256sums="fae893b7e86e83c1936f6f2a64db3550510f86eabdd5fa9f0f23fb25d7e0cf96  sprockets-2.2.2.gem"
sha512sums="0e7e83a8a8af12aa1c92495e5654c06b4963f2fba337e80ed7fcfe03fb2cf8fcef0118f0ae93393b43d4d816af5ac567e16946a04f01a82f892a218526eff4d4  sprockets-2.2.2.gem"
