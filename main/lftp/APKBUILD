sha256sums="a25d768aa78e0a8d0a2e89eeeae9185793d94ccd9e998a50f79ee8f9d69411d3  lftp-4.5.5.tar.xz"
sha512sums="3f107809e6b0947b1c2545f3fad46aff9d62b8a4dc39a7ea01d9af02b38472d967ba1952a00dbe1faf45649d11babcae2e395d35647bcd2a4b0eeb48d6b3deca  lftp-4.5.5.tar.xz"
