sha256sums="3f60f5a97a3a12fce6c06afcb1a47e6c474a24b6d97d41c2f17c0e9a5c650c4f  lftp-4.5.4.tar.xz"
sha512sums="3220ff29004c0d9869fe86fc9be24fa049f3aeab608b44663e516ce037977dc17954ec47f8d0b0f2f4bdfde1a3c9027344ff38a4be6703e3dea045781d0450a1  lftp-4.5.4.tar.xz"
