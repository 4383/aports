sha256sums="3ad874cea247380d3037931fe60876a7d5e2c5be05e2faca9f22af7dfeca5b93  lftp-4.6.0.tar.xz"
sha512sums="5e92158334cd91b39f677467791ba7bfbe72aff7443a6ca2255c9e1daa85d8a284090d2286ad179fe2d54475dcf7cc35afce1cd8fab36db42f3c0a64efccf5a7  lftp-4.6.0.tar.xz"
