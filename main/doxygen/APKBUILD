# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=doxygen
pkgver=1.8.5
pkgrel=0
pkgdesc="A documentation system for C++, C, Java, IDL and PHP"
url="http://www.doxygen.org/"
arch="all"
license="GPL"
depends=""
makedepends="flex bison coreutils perl libiconv-dev"
subpackages="$pkgname-doc"
source="ftp://ftp.stack.nl/pub/users/dimitri/doxygen-$pkgver.src.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"

        sed -i -e 's:^\(TMAKE_CFLAGS_RELEASE\t*\)= .*$:\1= $(ECFLAGS):' \
		-e 's:^\(TMAKE_CXXFLAGS_RELEASE\t*\)= .*$:\1= $(ECXXFLAGS):' \
		-e 's:^\(TMAKE_LFLAGS_RELEASE\s*\)=.*$:\1= $(ELDFLAGS):' \
                tmake/lib/*/tmake.conf \
		|| return 1

        # Ensure we link to -liconv
	for pro in */*.pro.in */*/*.pro.in; do
		[ "$ALPINE_LIBC" != "eglibc" ] && \
			echo "unix:LIBS += -liconv" >> "${pro}"
	done

        # fix final DESTDIR issue
	sed -i -e "s:\$(INSTALL):\$(DESTDIR)/\$(INSTALL):g" \
		addon/doxywizard/Makefile.in || return 1
}

build() {
	cd "$_builddir"
	export ECFLAGS="$CFLAGS" ECXXFLAGS="$CXXFLAGS" ELDFLAGS="$LDFLAGS"
	./configure \
		--prefix /usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" MAN1DIR=share/man/man1 install
}

md5sums="db51274568755e2c75c2657e30a78a55  doxygen-1.8.5.src.tar.gz"
sha256sums="243a8b67db12ad68d6ea5b51c6f60dc2cc3a34fa47abf1b5b4499196c3d7cc25  doxygen-1.8.5.src.tar.gz"
sha512sums="56d2b262feae41fe9acf3c0c8ad3dd1d8868a52c17e2d9882a553570311482ec73548c0a70ae0ad7ccd7d1011a69968f284031beb93f915bab3a4c740b943f47  doxygen-1.8.5.src.tar.gz"
