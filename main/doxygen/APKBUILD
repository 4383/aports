# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=doxygen
pkgver=1.8.8
pkgrel=0
pkgdesc="A documentation system for C++, C, Java, IDL and PHP"
url="http://www.doxygen.org/"
arch="all"
license="GPL"
depends=""
makedepends="flex bison coreutils perl libiconv-dev python"
subpackages="$pkgname-doc"
source="http://ftp.stack.nl/pub/users/dimitri/doxygen-$pkgver.src.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"

        sed -i -e 's:^\(TMAKE_CFLAGS_RELEASE\t*\)= .*$:\1= $(ECFLAGS):' \
		-e 's:^\(TMAKE_CXXFLAGS_RELEASE\t*\)= .*$:\1= $(ECXXFLAGS):' \
		-e 's:^\(TMAKE_LFLAGS_RELEASE\s*\)=.*$:\1= $(ELDFLAGS):' \
                tmake/lib/*/tmake.conf \
		|| return 1

        # Ensure we link to -liconv
	for pro in */*.pro.in */*/*.pro.in; do
		[ "$ALPINE_LIBC" != "eglibc" ] && \
			echo "unix:LIBS += -liconv" >> "${pro}"
	done

        # fix final DESTDIR issue
	sed -i -e "s:\$(INSTALL):\$(DESTDIR)/\$(INSTALL):g" \
		addon/doxywizard/Makefile.in || return 1
}

build() {
	cd "$_builddir"
	export ECFLAGS="$CFLAGS" ECXXFLAGS="$CXXFLAGS" ELDFLAGS="$LDFLAGS"
	./configure \
		--prefix /usr \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" MAN1DIR=share/man/man1 install
}

md5sums="0cbe6912fcac302a984bfcfb9231fec9  doxygen-1.8.8.src.tar.gz"
sha256sums="158e7834f05e0aeea5794b23c1e775ddfebafc709543e47f6fff9d81b190ade1  doxygen-1.8.8.src.tar.gz"
sha512sums="f9cdc7b5ce18321449f29ec86d0824f34d22bf41e2007224d266e68520141e8e21553dab2add361795dc23c56845f7e118b11298ecbed061b25ffabf638a79c1  doxygen-1.8.8.src.tar.gz"
