# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=builder
pkgname=ruby-rails-$_gemname
pkgver=3.1.4
pkgrel=0
pkgdesc="Builder objects to simplify creating structured data for Rails"
url="http://rubygems.org/gems/builder"
arch="noarch"
license="GPL"
depends="ruby"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="1a71f3efdf5782ab8dc1fcbd6f308ae3  builder-3.1.4.gem"
sha256sums="b700924902c2680a4f6568aa8dee2879010754c305ea651ad7eb83b583970bdc  builder-3.1.4.gem"
sha512sums="d9da48735ef719927e71b2bbd392424fbef1aa0b728ac0bff8b6924d752f1f4f3a615153b392803528dfcbf48add3793d411abed23437f64c828b457dd0f24e7  builder-3.1.4.gem"
