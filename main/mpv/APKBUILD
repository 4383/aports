pkgname=mpv
pkgver=0.7.2
pkgrel=0
pkgdesc="Video player based on MPlayer/mplayer2"
url="http://mpv.io/"
arch="all"
license="GPL"
depends=
makedepends="libxxf86dga-dev libxv-dev libmad-dev lame-dev libao-dev
	libtheora-dev xvidcore-dev zlib-dev sdl-dev freetype-dev
	x264-dev faac-dev ttf-dejavu libxvmc-dev alsa-lib-dev libva-dev
	mesa-dev ffmpeg-dev libass-dev perl lua5.2-dev libvdpau-dev python
	libxext-dev libxscrnsaver-dev"
install=""
subpackages="$pkgname-libs"
source="$pkgname-$pkgver.tar.gz::https://github.com/mpv-player/mpv/archive/v$pkgver.tar.gz
	"

_builddir="$srcdir"/mpv-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	./bootstrap.py
}

build() {
	cd "$_builddir"
	./waf configure --prefix=/usr \
		--mandir=/usr/share/man \
		--confdir=/etc/mpv \
		--enable-libmpv-shared \
		--enable-libass \
		--enable-xss \
		|| return 1

	./waf build || return 1
}

package() {
	cd "$_builddir"
	./waf install --destdir="$pkgdir" || return 1
}

md5sums="5081934235bf1d531364f59e5f718024  mpv-0.7.2.tar.gz"
sha256sums="7d083b9248245ab4fef0e5dc7932c2316e2e7ad1ed6c57e0faf0bb5ea8e6da8f  mpv-0.7.2.tar.gz"
sha512sums="7fbfbe3cc255d4ab7d9a18905d680db3d78d6423d38cc5db67d5fa1031d0afb6556a12f9136de8c85e1564dfcdd77e0a462262cf599781f940586be9b767fe8a  mpv-0.7.2.tar.gz"
