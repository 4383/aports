# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=mpv
pkgver=0.4.1
pkgrel=0
pkgdesc="Video player based on MPlayer/mplayer2"
url="http://mpv.io/"
arch="all"
license="GPL"
depends=
makedepends="libxxf86dga-dev libxv-dev libmad-dev lame-dev libao-dev
	libtheora-dev xvidcore-dev zlib-dev sdl-dev freetype-dev
	x264-dev faac-dev ttf-dejavu libxvmc-dev alsa-lib-dev libva-dev
	mesa-dev ffmpeg-dev libass-dev perl lua5.2-dev libvdpau-dev python
	libxscrnsaver-dev libquvi-dev"
install=""
subpackages="$pkgname-libs"
source="$pkgname-$pkgver.tar.gz::https://github.com/mpv-player/mpv/archive/v$pkgver.tar.gz
	"

_builddir="$srcdir"/mpv-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	./bootstrap.py
}

build() {
	cd "$_builddir"
	./waf configure --prefix=/usr \
		--mandir=/usr/share/man \
		--confdir=/etc/mpv \
		--enable-libmpv-shared \
		--disable-libass \
		--enable-xss \
		--enable-libquvi \
		|| return 1

	./waf build || return 1
}

package() {
	cd "$_builddir"
	./waf install --destdir="$pkgdir" || return 1
}

md5sums="24dcff8c676388227b280a463f9a05d0  mpv-0.4.1.tar.gz"
sha256sums="969511267ad443235ac60a947fc40b5fb93fbd97670e23e42705cd39f8f71273  mpv-0.4.1.tar.gz"
sha512sums="154a27198c1690d5d1b3c097163e97eff6f375496c9fb7f7958936c84c776afd78b392df8e136798a1f5a1fc4924af3069cc7dbef36bfa8ff84aff9d7a0b8735  mpv-0.4.1.tar.gz"
