# Maintainer: Kaarle Ritvanen <kaarle.ritvanen@datakunkku.fi>
_gemname=minitest
pkgname=ruby-rails-$_gemname
pkgver=5.4.3
pkgrel=0
pkgdesc="Ruby testing facilities"
url=https://github.com/seattlerb/minitest
arch=noarch
license=MIT
depends=ruby
makedepends=ruby
source=http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem

_builddir="$srcdir"/$_gemname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="faddd44292d7a12615230b8d034deb3a  minitest-5.4.3.gem"
sha256sums="a41b54b1c6e64b102fe78bf265045896845c38177a10bdb32d04caf4e06542f3  minitest-5.4.3.gem"
sha512sums="2a2df1502e449732d39da377c262d8c481e5b6399b39781c5d55fb0c3065f3dc4cdd326794a16731b2dbc970c40b4dc1399929913fcc2dd1f8ffb1f78df81a9f  minitest-5.4.3.gem"
