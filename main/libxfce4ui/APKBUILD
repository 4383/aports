# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libxfce4ui
pkgver=4.7.5
pkgrel=0
pkgdesc="Widgets library for the Xfce desktop environment"
url="http://www.xfce.org/"
license="GPL2"
subpackages="$pkgname-dev $pkgname-doc"
depends=
replaces="libxfcegui4"
makedepends="gtk+-dev xfconf-dev libxfce4util-dev startup-notification-dev"
source="http://archive.xfce.org/src/xfce/${pkgname}/${pkgver%.*}/${pkgname}-${pkgver}.tar.bz2"

depends_dev="gtk+-dev libxfce4util-dev xfconf-dev startup-notification-dev"
build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="56a8179ce525b6e5e0c5ed7b5c992102  libxfce4ui-4.7.5.tar.bz2"
