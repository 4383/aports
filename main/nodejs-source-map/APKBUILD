sha256sums="90edce999e130d89e5ceb93933f73bfaa5ef1789d3dc5342883e25262713bad2  source-map-0.1.37.tgz"
sha512sums="fa871dd899c769d27adb3a9ae71a7a211bb6949bc52a93f649eb87208d68e1005fd0e08b059e549d512e232f0add7580a7d2a11e71578fdf3f05c7efa35969c7  source-map-0.1.37.tgz"
