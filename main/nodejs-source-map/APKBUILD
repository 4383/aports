sha256sums="8b7b9f8bd47fa8a43f6320a62496f3fd9a7690294f0486be6fc17438666a1c90  source-map-0.1.38.tgz"
sha512sums="8004ec8f487af5cb4441b89e117726cac5e60d1fde67de5f18f4e224c182be206d482f6f7ff2e39af7a9bf6453a45f00880e2857a3c2ba3a90e34776caf3e46e  source-map-0.1.38.tgz"
