# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=man
pkgver=1.6g
pkgrel=0
pkgdesc="A utility for reading man pages"
url="http://primates.ximian.com/~flucifredi/man/"
arch="all"
license="GPL"
depends="groff gawk"
options="suid"
subpackages="$pkgname-doc"
source="ftp://metalab.unc.edu/pub/Linux/apps/doctools/man/man-$pkgver.tar.gz
	whatis.periodic.daily
	$pkgname-troff.patch"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	cd "$_builddir"
	local i
	for i in ../*.patch; do
		msg "Applying $i"
		patch -p1 -i $i || return 1
	done
}

build () {
	cd "$_builddir"
	# note: not autotools
	./configure -confdir=/etc +sgid +fhs +lang none
	sed -i "s/\\/usr\\/bin\\/awk/\\/usr\\/bin\\/gawk/" ./conf_script
	make -j1 || return 1
}

package() {
	cd "$_builddir"
	make PREFIX="$pkgdir" install || return 1

	sed -i -e "s|-Tlatin1||g" \
		-e "s|less -is|less|g" \
		"$pkgdir"/etc/man.conf
	install -D -m744 ../whatis.periodic.daily \
		"$pkgdir"/etc/periodic/daily/whatis
}
