# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=bison
pkgver=3.0
pkgrel=0
pkgdesc="The GNU general-purpose parser generator"
arch="all"
license="GPL"
url="http://www.gnu.org/software/bison/bison.html"
makedepends="perl"
depends="m4"
source="ftp://ftp.gnu.org/gnu/bison/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-doc"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--datadir=/usr/share \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	rm -rf "$pkgdir"/usr/lib/charset.alias
	rmdir -p "$pkgdir"/usr/lib 2>/dev/null
	return 0
}

md5sums="a2624994561aa69f056c904c1ccb2880  bison-3.0.tar.xz"
sha256sums="e9ac5585002b71208aee8a20bbe1ced96c48766e6c4247bc7ef8f3141f7624c8  bison-3.0.tar.xz"
sha512sums="dae48cd251959b563f0a34aab85a91b2772199121a2a6debd2d4b7be3530778fbb458d62db7c0fa4aae1976794d52a72ef2a661b2b52a7086845c0332d5afda6  bison-3.0.tar.xz"
