# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=bison
pkgver=2.7.1
pkgrel=0
pkgdesc="The GNU general-purpose parser generator"
arch="all"
license="GPL"
url="http://www.gnu.org/software/bison/bison.html"
makedepends="perl"
depends="m4"
source="ftp://ftp.gnu.org/gnu/bison/${pkgname}-${pkgver}.tar.xz"
subpackages="$pkgname-doc"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--datadir=/usr/share \
		--infodir=/usr/share/info \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	rm -rf "$pkgdir"/usr/lib/charset.alias
	rmdir -p "$pkgdir"/usr/lib 2>/dev/null
	return 0
}

md5sums="7be02eb973eccf388f1ae750fc09eed0  bison-2.7.1.tar.xz"
sha256sums="b409adcbf245baadb68d2f66accf6fdca5e282cafec1b865f4b5e963ba8ea7fb  bison-2.7.1.tar.xz"
sha512sums="ac0c7ca57142bcb84af498f606acb86091984a00359294fbf721a4ca8112f9fcf26497f7dd2e65f527e04a6e1de94142ecb76602d407e548475970e5a566d370  bison-2.7.1.tar.xz"
