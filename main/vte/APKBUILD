# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=vte
pkgver=0.28.0
pkgrel=1
pkgdesc="Virtual Terminal Emulator library"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc"
depends=
makedepends="pkgconfig gtk+-dev intltool python ncurses-dev"
source="http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2"

depends_dev="glib-dev pango-dev gtk+-dev"
prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	for i in $source; do
		case $i in
		*.patch)
			patch -p1 -i "$srcdir"/$i || return 1
			;;
		esac
	done
}
build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib/vte \
		--localstatedir=/var \
		--disable-static \
		|| return 1
	make
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	ln -sf /usr/share/vte/termcap-0.0 "$pkgdir"/usr/share/vte/termcap
}
md5sums="c21e08e973a47a9d105c24506e537848  vte-0.28.0.tar.bz2"
