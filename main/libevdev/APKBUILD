# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libevdev
pkgver=1.5.3
pkgrel=0
pkgdesc="Kernel Evdev Device Wrapper Library"
url="https://www.freedesktop.org/wiki/Software/libevdev"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev python linux-headers"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="https://freedesktop.org/software/${pkgname}/${pkgname}-${pkgver}.tar.xz"

_builddir="$srcdir"/libevdev-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="60a9eb9a338c725d0dc571c0c978d2a7  libevdev-1.5.3.tar.xz"
sha256sums="6dd58044c35eb30e97efe0e2f388d77bd3c64036c7780171f70ddb67004e62d3  libevdev-1.5.3.tar.xz"
sha512sums="fc49b34a035296a93e8ba1481565977ced532a6305204fe0c7b017c997083794222eed31c89cd57bea743a6a63d24a346e331e0d948e380b51fe4af16f8f52dd  libevdev-1.5.3.tar.xz"
