# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libevdev
pkgver=1.3
pkgrel=0
pkgdesc="Kernel Evdev Device Wrapper Library"
url="http://www.freedesktop.org/wiki/Software/libevdev"
arch="all"
license="MIT"
depends=""
depends_dev=""
makedepends="$depends_dev python"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.freedesktop.org/software/libevdev/libevdev-$pkgver.tar.xz"

_builddir="$srcdir"/libevdev-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="ab67de8f949e84ae2abb48af09eda423  libevdev-1.3.tar.xz"
sha256sums="265411ce79a592b3074e9d07fb97d462745d0c7ef178254a6f720245ed253446  libevdev-1.3.tar.xz"
sha512sums="d208a9be788e5531e2fd83da8bdef58245a0265a0551f28645a7de157d165cee161c8c5cde50156bbf6414b719d6a0125b4263ecf0f60c71ec864a21afcd303c  libevdev-1.3.tar.xz"
