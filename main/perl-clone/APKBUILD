# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-clone
pkgver=0.35
pkgrel=0
pkgdesc="Clone perl module"
url="http://search.cpan.org/dist/Clone/"
arch="all"
license="GPLv2 or Artistic"
depends="perl"
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/G/GA/GARU/Clone-$pkgver.tar.gz"

_builddir="$srcdir"/Clone-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make && make test || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

md5sums="22175ef74a6e5f5604cb74d1e4af456e  Clone-0.35.tar.gz"
sha256sums="3d3d9eabfa6022dac8c9111097bebc7731e2e184457b5b55580bd5a3f6ef214a  Clone-0.35.tar.gz"
sha512sums="fab8cf708ea3b03852d2eabaac638f5f017d8d1c06621f9573e1227554c2aa19bfa7cc8b90f6273baf966df4b85905fd95b8d7110227c8a5d75664f692ae4c92  Clone-0.35.tar.gz"
