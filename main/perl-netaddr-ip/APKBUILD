# Maintainer:  Leonardo Arena <rnalrd@alpinelinux.org>
pkgname=perl-netaddr-ip
_realname=NetAddr-IP
pkgver=4.069
pkgrel=0
pkgdesc="Perl extension for managing IPv4 and IPv6 addresses and subnets"
url="http://search.cpan.org/~miker/NetAddr-IP-$pkgver/"
arch="all"
license="GPL2 and Artistic"
depends="perl"
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/M/MI/MIKER/$_realname-$pkgver.tar.gz"

_builddir="$srcdir/$_realname-$pkgver"
prepare() {
	return 0
}

build() {
	cd $_builddir
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make || return 1
}

package() {
	cd $_builddir
	make DESTDIR="$pkgdir" install
	# creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
}

md5sums="7721135fcea390327f75421a6b701144  NetAddr-IP-4.069.tar.gz"
sha256sums="96739afc484eca1597c4f4b520864b342169c8fdeef486778511e5a1527ba4e7  NetAddr-IP-4.069.tar.gz"
sha512sums="93e2f46d7b45fc7220ca665baa4a0b513a7d5618388df181ecafa1d0f56b910a2bce7bdafd5a03d2b6f6a07d2e8ad145d8ce43e37191e4297c8a2253155c9320  NetAddr-IP-4.069.tar.gz"
