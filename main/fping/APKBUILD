# Maintainer: Natanael Copa <ncopa@alpinelinux.org>

pkgname=fping
pkgver=3.8
pkgrel=0
pkgdesc="A utility to ping multiple hosts at once"
url="http://fping.org/"
arch="all"
license="fping"
depends=""
subpackages="$pkgname-doc"
source="http://fping.org/dist/fping-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
}

build () { 
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	chmod 4755 "$pkgdir"/usr/sbin/fping
}
md5sums="1e36467cc96a4ca959925ac167ea19af  fping-3.8.tar.gz"
sha256sums="c77406cfe93725e38506779c9a2a59d79fe8f81cab9e732e4f405b3e3a913c12  fping-3.8.tar.gz"
sha512sums="11496092bcc438ebc26f9e1b1437bd8ad3ac2436708333ea4aca74c46e6cbd60ce7bd31d6cd9134bc63498bd7e93ab3323193bf8db94d592a130a029aa8ac95e  fping-3.8.tar.gz"
