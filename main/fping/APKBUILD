# Maintainer: Natanael Copa <ncopa@alpinelinux.org>

pkgname=fping
pkgver=3.5
pkgrel=0
pkgdesc="A utility to ping multiple hosts at once"
url="http://fping.org/"
arch="all"
license="fping"
depends=""
subpackages="$pkgname-doc"
source="http://fping.org/dist/fping-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
	update_config_sub || return 1
}

build () { 
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	chmod 4755 "$pkgdir"/usr/sbin/fping
}
md5sums="2e17cb655aa4eb59b5a4a38a89e746ed  fping-3.5.tar.gz"
sha256sums="09b8960e235341bae6000085d38106357eae656a79e0119bd27e816c9003656a  fping-3.5.tar.gz"
sha512sums="db36e74a5051de32245c2d96289d238ae2ae6698a5215c83401ed3b5bca2784c7d09bff2686f696990b31063fea8c1a5d2f2e15c09f808a1012992a1349db8f5  fping-3.5.tar.gz"
