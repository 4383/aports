# Maintainer: Natanael Copa <ncopa@alpinelinux.org>

pkgname=fping
pkgver=3.9
pkgrel=0
pkgdesc="A utility to ping multiple hosts at once"
url="http://fping.org/"
arch="all"
license="fping"
depends=""
subpackages="$pkgname-doc"
source="http://fping.org/dist/fping-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build () {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make install DESTDIR="$pkgdir" || return 1
	chmod 4755 "$pkgdir"/usr/sbin/fping
}
md5sums="7ad0313646681c33e975f7b946d8d283  fping-3.9.tar.gz"
sha256sums="173653d123c0122f69ec916d9a29914e3525c8e880d2b0e57db307a1be42b11d  fping-3.9.tar.gz"
sha512sums="1550c77faef2c5c696baf8e9307c905821a35aab33534d5a4bd388b20e8c70aa47c9aeeaf4b4d1cafd1f0f399271ec787bcd25cbd84224912c127c2a13d19fa1  fping-3.9.tar.gz"
