# Contributor: Jeff Bilyk <jbilyk@gmail.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=haproxy
pkgver=1.4.23
pkgrel=0
pkgdesc="A TCP/HTTP reverse proxy for high availability environments"
url="http://haproxy.1wt.eu"
arch="all"
license="GPL"
depends=""
makedepends="pcre-dev"
install=
subpackages="$pkgname-doc"
source="http://haproxy.1wt.eu/download/1.4/src/$pkgname-$pkgver.tar.gz
	haproxy.initd"

build() {
	cd "$srcdir/$pkgname-$pkgver"
	make TARGET=linux26 USE_PCRE=1 CFLAGS="$CFLAGS" || return 1
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" PREFIX=/usr DOCDIR=/usr/share/doc/haproxy \
		install
	install -m755 -D "$srcdir"/$pkgname.initd "$pkgdir"/etc/init.d/$pkgname
}

md5sums="6535d5e58037ada4b58b439cebe03c79  haproxy-1.4.23.tar.gz
0891c7f7b98899b7e7bf767ae92b652e  haproxy.initd"
