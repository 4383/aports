# Maintainer:
pkgname=libssh2
pkgver=1.2.8
pkgrel=0
pkgdesc="library for accessing ssh1/ssh2 protocol servers"
url="http://libssh2.org/"
arch="all"
license="BSD"
depends=""
depends_dev="openssl-dev zlib-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://www.libssh2.org/download/libssh2-$pkgver.tar.gz"

_builddir="$srcdir"/libssh2-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la
}

md5sums="1b236563b75d1b1f0d483352dc5918cf  libssh2-1.2.8.tar.gz"
