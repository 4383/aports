sha256sums="2331c7e760cfb30b4a67cc0c04d7b1b4d7822d69a5c1d0ec430b113f34b4c1e5  net-ldap-0.9.0.gem"
sha512sums="7101501035aa937bf516bab7f7c8cf96194c7426d0195d677c830879b7601d3a0caeb13c4592ed1b528454d340e9c6c24b3f8feef67a1e32c19c4a2da90538f7  net-ldap-0.9.0.gem"
