# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=glib-networking
pkgver=2.36.1
_maj=${pkgver%%.*}
_min=${pkgver#${_maj}.}
_min=${_min%%.*}
_ver=$_maj.$_min
pkgrel=0
pkgdesc="Networking support for GLib"
url="http://www.gnome.org"
arch="all"
license="LGPLv2+"
depends="ca-certificates"
depends_dev="glib-dev gnutls-dev libproxy-dev intltool libgcrypt-dev"
makedepends="$depends_dev bash p11-kit-dev"
install=
subpackages="$pkgname-lang"
source="http://download.gnome.org/sources/glib-networking/$_ver/glib-networking-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	CONFIG_SHELL=/bin/bash ./configure --prefix=/usr \
		--with-libproxy \
		--with-gnutls \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/gio/modules/*.a \
		"$pkgdir"/usr/lib/gio/modules/*.la
}

md5sums="a9cb3d98f4dd42035f43e371066b6e5a  glib-networking-2.36.1.tar.xz"
sha256sums="e2df2d1943a6193ca471addc58539895da1ae96fdba305dedb937ef56adb57ea  glib-networking-2.36.1.tar.xz"
sha512sums="bd76f418b7d9ac77e82f63308e1a35e56d5a2bcdc7096f5ef122afda491914e893b2d7e75c2d85d40a75dce6218c7fadf7c8c5459ea8a2a68d2016275db5e09b  glib-networking-2.36.1.tar.xz"
