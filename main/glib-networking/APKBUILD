# Contributor: Natanael Copa <ncopa@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=glib-networking
pkgver=2.38.2
_maj=${pkgver%%.*}
_min=${pkgver#${_maj}.}
_min=${_min%%.*}
_ver=$_maj.$_min
pkgrel=0
pkgdesc="Networking support for GLib"
url="http://www.gnome.org"
arch="all"
license="LGPLv2+"
depends="ca-certificates"
depends_dev="glib-dev gnutls-dev libproxy-dev intltool libgcrypt-dev"
makedepends="$depends_dev bash p11-kit-dev"
install=
subpackages="$pkgname-lang"
source="http://download.gnome.org/sources/glib-networking/$_ver/glib-networking-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	CONFIG_SHELL=/bin/bash ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-more-warnings \
		--with-libproxy \
		--with-gnutls \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/gio/modules/*.a \
		"$pkgdir"/usr/lib/gio/modules/*.la
}

md5sums="99293f58a8256214b2b9b331afeb1aee  glib-networking-2.38.2.tar.xz"
sha256sums="e8e2fe919d3236169c9bfaec807966ec81b844fc28b11bddc9f8256cfa949fc7  glib-networking-2.38.2.tar.xz"
sha512sums="299649fbb7df0821695b812e7d4f97ccfc8d63231fb3b9f6c8c1b0ea69d03bb1de80b1e6c7ca295837b210bca57620c9cbe2150fe1a36d9238604ad5d2412e33  glib-networking-2.38.2.tar.xz"
