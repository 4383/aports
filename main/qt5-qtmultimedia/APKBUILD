# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=qt5-qtmultimedia
pkgver=5.4.2
_ver=${pkgver/_/-}
_ver=${_ver/beta0/beta}
_ver=${_ver/rc0/rc}
_V=${_ver/rc/RC}
pkgrel=0
pkgdesc="Qt5 - Multimedia support"
url="http://qt-project.org/"
arch="all"
license="LGPLv2 with exceptions or GPLv3 with exceptions"
depends=""
depends_dev=""
makedepends="$depends_dev qt5-qtbase-dev qt5-qtdeclarative-dev
	alsa-lib-dev libxv-dev gstreamer0.10-dev gst-plugins-base0.10-dev"
install=""
subpackages="$pkgname-dev"
case $pkgver in
*_beta*|*_rc*) _rel=development_releases;;
*) _rel=official_releases;;
esac
source="http://download.qt-project.org/$_rel/qt/${pkgver%.*}/$_ver/submodules/qtmultimedia-opensource-src-$_V.tar.xz"

_builddir="$srcdir"/qtmultimedia-opensource-src-$_V
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	qmake-qt5 && make || return 1
}

package() {
	cd "$_builddir"
	make install INSTALL_ROOT="$pkgdir" || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="b94baed3effda9187d71300b3e37d2d5  qtmultimedia-opensource-src-5.4.2.tar.xz"
sha256sums="d2668c7922412344384482239d34bee66d8ebb6d9fa9d025cc4a5aa990664940  qtmultimedia-opensource-src-5.4.2.tar.xz"
sha512sums="8d8757ff9d9d736618cc57e0872722668b6f2455ec194a700dc03a352a9bfbe90135f06fe05f3aeed2981d837b6c9cc338a8d6cc25f5f253016499244ca873d2  qtmultimedia-opensource-src-5.4.2.tar.xz"
