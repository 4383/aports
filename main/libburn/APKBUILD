# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libburn
pkgver=1.3.6
_ver=${pkgver%_p*}
_pver=
if [ "$_ver" != "$pkgver" ]; then
	_pver=".pl${pkgver##*_p}"
fi
pkgrel=0
pkgdesc="Library for reading, mastering and writing optical discs"
url="http://libburnia-project.org/"
arch="all"
license="GPL"
depends=""
makedepends=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://files.libburnia-project.org/releases/libburn-${_ver}${_pver}.tar.gz"

_builddir="$srcdir"/$pkgname-$_ver
build ()
{
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="ed7b9bbf873fc754b1a75df1b2cc1023  libburn-1.3.6.tar.gz"
sha256sums="cdbe9ba1d0bd3ad80864eb1b8c1d7c368321fa52d65b92cdf15241586fb72350  libburn-1.3.6.tar.gz"
sha512sums="f09a13c3e66b3d6ce2340a42d401406e3c5e5d6d8b2ed114ed9bd5dbc63c28cf5c9149a4e95cd27a22e22cbcbb75ef274a75e6b45da1382b2de2411e04b63714  libburn-1.3.6.tar.gz"
