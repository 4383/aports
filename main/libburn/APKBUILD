# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libburn
pkgver=1.3.0
_ver=${pkgver%_p*}
_pver=
if [ "$_ver" != "$pkgver" ]; then
	_pver=".pl${pkgver##*_p}"
fi
pkgrel=0
pkgdesc="Library for reading, mastering and writing optical discs"
url="http://libburnia-project.org/"
arch="all"
license="GPL"
depends=""
makedepends=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://files.libburnia-project.org/releases/libburn-${_ver}${_pver}.tar.gz"

_builddir="$srcdir"/$pkgname-$_ver
build () 
{ 
	cd "$_builddir"
	./configure --prefix=/usr --disable-static
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="c06bfec410ef461a994b9a75b2620561  libburn-1.3.0.tar.gz"
sha256sums="c0005515e25b960890d8ab6e3bcc0f6d0b258e164fad6c0aade996f1906e40ba  libburn-1.3.0.tar.gz"
sha512sums="b81c7e78508f2622b0a6640c4bb6dbcbae91dea3536ff3f7c65e011ed863d36ded2d84d2b4812096fbf3b9b3a6fd25cf37bfd9785c9fb86d15cca0355a0bb819  libburn-1.3.0.tar.gz"
