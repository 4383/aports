# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libburn
pkgver=1.3.0_p01
_ver=${pkgver%_p*}
_pver=
if [ "$_ver" != "$pkgver" ]; then
	_pver=".pl${pkgver##*_p}"
fi
pkgrel=0
pkgdesc="Library for reading, mastering and writing optical discs"
url="http://libburnia-project.org/"
arch="all"
license="GPL"
depends=""
makedepends=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://files.libburnia-project.org/releases/libburn-${_ver}${_pver}.tar.gz"

_builddir="$srcdir"/$pkgname-$_ver
build () 
{ 
	cd "$_builddir"
	./configure --prefix=/usr --disable-static
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}

md5sums="1ccbb8624b8c2b9937727000e46b52cf  libburn-1.3.0.pl01.tar.gz"
sha256sums="c90c566f7a54f3de0f3ed5ddc6a5b897245ac6e6ec6c0be752feb7ec6001e17c  libburn-1.3.0.pl01.tar.gz"
sha512sums="7f328e21ac90653e5e8a72f4c3f68f70dec878004811ebd430ed5cec571e7630c9e39e5e331ad8b4d8ad0a2a97dbadb5e6b654b2736359dd040815b2f2b3b229  libburn-1.3.0.pl01.tar.gz"
