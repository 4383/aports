sha512sums="f80317c4bfef80dc5e32274d1fe6fe643eb2fdb9bfb999b092a227b53bc6bc01bfc0f3e67156daae9d83543ef437f8ffc4a52c686517ba1314296d6bedf74305  xf86-video-intel-2.21.10.tar.bz2
