sha512sums="0a9e18399c80b99f23b39fff5ae850171a4d29b0d64c9825ca7bd8cc8a6f76560908f1d0d925359c349e77702b71570f607301b538a22abbda3644a3fb735677  DBD-mysql-4.025.tar.gz"
