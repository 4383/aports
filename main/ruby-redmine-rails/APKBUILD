_gemname=rails
pkgname=ruby-redmine-rails
pkgver=3.2.19
pkgrel=0
pkgdesc="Ruby full-stack web framework"
url="http://rubyonrails.org/"
arch="noarch"
license="MIT"
depends="ruby ruby-redmine-actionmailer ruby-redmine-actionpack ruby-redmine-activerecord
	ruby-redmine-activeresource ruby-redmine-activesupport ruby-bundler ruby-redmine-railties"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="3545800bc87637a368eb9614b5309a4e  rails-3.2.19.gem"
sha256sums="33b64cf78dfcf3206d961ce03e8fe6d260081da696e60da39d0b2a4a160fe22b  rails-3.2.19.gem"
sha512sums="92c8b6bdc05159d5d12fe26acdb6220aefcccf87c3531ba7b1e3fb147f0cff8537a5ebf87614afcf1183e8c4510991689aed637c172e7dc80d77f36c551b8bc7  rails-3.2.19.gem"
