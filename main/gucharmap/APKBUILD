# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gucharmap
pkgver=3.12.1
pkgrel=0
pkgdesc="the GNOME Character Map, based on the Unicode Character Database"
url="http://live.gnome.org/Gucharmap"
arch="all"
license="GPL"
depends=
makedepends="gtk+3.0-dev itstool desktop-file-utils gobject-introspection-dev"
install=
subpackages="$pkgname-dev $pkgname-lang"
source="http://ftp.gnome.org/pub/GNOME/sources/gucharmap/${pkgver%.*}/gucharmap-$pkgver.tar.xz"

_builddir="$srcdir"/$pkgname-$pkgver

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
	find "$pkgdir" -name '*.la' -delete
}

md5sums="3a39588c963e7848a4850a0b5975211b  gucharmap-3.12.1.tar.xz"
sha256sums="5e260767da43f6dc31a8be33ca363da56781349b367464fa9c478bca66aa18d9  gucharmap-3.12.1.tar.xz"
sha512sums="47d5a85cd6941ea5698442658d7aa91ac9e2b86b861f2fa9fd2a397caddc81c89df550cd635c5cf080bb31e7f2f0968d4bd36c23dc231799af533736fe66bf6b  gucharmap-3.12.1.tar.xz"
