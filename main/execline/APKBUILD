# Contributor: John Regan <john@jrjrtech.com>
# Maintainer: John Regan <john@jrjrtech.com>
pkgname=execline
pkgver=2.1.4.0
pkgrel=0
pkgdesc="A small scripting language, to be used in place of a shell in non-interactive scripts."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
depends="skalibs"
depends_dev="skalibs-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="d43dda8bc4f349933b0039e1ed5a8404  execline-2.1.4.0.tar.gz"
sha256sums="e400b195865d73f8f9195aa8b74efa8b5d1d41bff71fbfaf73ee59f5caef767e  execline-2.1.4.0.tar.gz"
sha512sums="6a6ab7fc8485958e8cb8b72b8a4aa00a184f4edba25f751baa98312d7f8432ce2f64bd4abab36fa008776ac382f07f900b1e49b5e15d20bbabc7f89056913419  execline-2.1.4.0.tar.gz"
