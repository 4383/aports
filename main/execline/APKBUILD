# Contributor: John Regan <john@jrjrtech.com>
# Maintainer: John Regan <john@jrjrtech.com>
pkgname=execline
pkgver=2.1.4.2
pkgrel=0
pkgdesc="A small scripting language, to be used in place of a shell in non-interactive scripts."
url="http://skarnet.org/software/$pkgname/"
arch="all"
license="ISC"
depends="skalibs"
depends_dev="skalibs-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://skarnet.org/software/$pkgname/$pkgname-$pkgver.tar.gz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--enable-shared \
		--enable-static \
		--disable-allstatic \
		--prefix=/usr \
		--libdir=/usr/lib \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="9e781bb9d5a19cea6eb240711b9fc21d  execline-2.1.4.2.tar.gz"
sha256sums="a424aa7642d675b00cc6cb6ac929d04c5d707805cbbc5e3ab3a3f7880ca3695b  execline-2.1.4.2.tar.gz"
sha512sums="7bccf9438e986756e1c7abb106b8319fda40ad231f52ff5a209eff0782f4c5b162c01b51a9198cb7fbd4398b54b2866b0a98e37f6ce3376525f8c9aa1fc0cd0c  execline-2.1.4.2.tar.gz"
