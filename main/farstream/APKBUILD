# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=farstream
pkgver=0.2.6
pkgrel=0
pkgdesc="Libraries for videoconferencing"
url="http://www.freedesktop.org/wiki/Software/Farstream"
arch="all"
license="LGPLv2+"
depends=""
depends_dev="libnice-dev gstreamer1-dev gst-plugins-base1-dev"
makedepends="$depends_dev gobject-introspection-dev py-gobject-dev python-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://freedesktop.org/software/farstream/releases/farstream/farstream-$pkgver.tar.gz"
	
_builddir="$srcdir"/farstream-$pkgver
prepare() {
	local i
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-python \
		--disable-static \
	|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/usr/lib/*.la \
		"$pkgdir"/usr/lib/*/*.la \
		"$pkgdir"/usr/lib/python*/site-packages/farstream.la
}

py() {
	pkgdesc="Python binding for farstream"
	mkdir -p "$subpkgdir"/usr/lib/
	mv "$pkgdir"/usr/lib/python* "$subpkgdir"/usr/lib/
}

md5sums="63cecbb912e7a8b96d4470420327e2cc  farstream-0.2.6.tar.gz"
sha256sums="b92c7f64852a5f5585da3ad5f91e52aba0da4633b8e41170d4560d7360dd4252  farstream-0.2.6.tar.gz"
sha512sums="2d21d0dc8f47c7611d43e7ce4231532e7de51020625cec72b4bd1f801897068cd4c0d5246510684f56a71ede368caf17ef61cae9b55d8ce1ec87b2cf250d4c50  farstream-0.2.6.tar.gz"
