# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=cleancss
_pkgname=clean-css
pkgver=2.2.9
pkgrel=0
pkgdesc="Well-tested CSS minifier"
url="https://github.com/GoalSmashers/clean-css"
arch="noarch"
license="MIT"
depends="nodejs nodejs-commander"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json bin lib index.js "$pkgdir"/$_moduledir

	mkdir -p "$pkgdir"/usr/bin
	ln -s ../../$_moduledir/bin/$pkgname "$pkgdir"/usr/bin/$pkgname
}

md5sums="a5fb0645886d1c5cbcc59beecadd6a9d  clean-css-2.2.9.tgz"
sha256sums="aec6037b408b95aa6fc9d8460852135f9f13aea2709c3a6fafbd25b0b98a9dd9  clean-css-2.2.9.tgz"
sha512sums="fd09481a3c894f650df58a3aad09967c3b97dc40956d0df92ca2fbcea2613a43d6cfda3e886c26a255c3225dda2e6b51300f5d901940e4232b61f5761fca407e  clean-css-2.2.9.tgz"
