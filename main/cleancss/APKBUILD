sha256sums="46a3c3415dd6e62aab53ab8d5329a82479471c0c16da1cbd01dc734d3357c73c  clean-css-2.2.13.tgz"
sha512sums="a1c8f26722a8301de231c0e5ba20c9ed34e13d4c385f8658997944821347b3a1e33c6638a2e2420e89fa6d6589e38cd991022d1b421424c3f981eccc96022b67  clean-css-2.2.13.tgz"
