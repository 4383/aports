# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=cleancss
_pkgname=clean-css
pkgver=2.2.5
pkgrel=0
pkgdesc="Well-tested CSS minifier"
url="https://github.com/GoalSmashers/clean-css"
arch="noarch"
license="MIT"
depends="nodejs nodejs-commander"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json bin lib index.js "$pkgdir"/$_moduledir

	mkdir -p "$pkgdir"/usr/bin
	ln -s ../../$_moduledir/bin/$pkgname "$pkgdir"/usr/bin/$pkgname
}

md5sums="6ee618ca8d3a35cee1d446456a819440  clean-css-2.2.5.tgz"
sha256sums="aa85919e271bb1a4c2d5567469939ea825bb20c7cfb8d94df5885b34b927d2d6  clean-css-2.2.5.tgz"
sha512sums="ba89e2e75b027960467d6c0f8bcbd55be1db24cf5e9783f65b670b16d30484439c08adab4a5c2cfa4d7c630abeb1412e5eb19c935f419914f259da4fbb4aca6e  clean-css-2.2.5.tgz"
