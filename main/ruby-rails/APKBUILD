# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=rails
pkgname=ruby-rails
pkgver=4.0.4
pkgrel=0
pkgdesc="Ruby full-stack web framework"
url="http://rubyonrails.org/"
arch="noarch"
license="MIT"
depends="ruby ruby-actionmailer ruby-actionpack ruby-activerecord
	ruby-activeresource ruby-activesupport ruby-bundler ruby-railties"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="dfce6b006b938891a1b578e97ea17f6e  rails-4.0.4.gem"
sha256sums="ead3f37942b32496cd07837a01c40acc4f8c8df72e839f3d087a2c3543d760bc  rails-4.0.4.gem"
sha512sums="18aacdd84093a06a8cae6ad22f48620b742922a6ce0f6b1bd45887acdcb8d46b21dad7100d0aa5a4134d5ab6e81e19bfd894df75b190b9a59ef557030f4716d8  rails-4.0.4.gem"
