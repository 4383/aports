_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.7
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="714a90464fac64d30c7d2f34d927012e  acf-provisioning-0.8.7.tar.xz"
sha256sums="170fedc9a6d84120fe7bca64651ca40018287e1bfbf95207efc4feac75ffe3a7  acf-provisioning-0.8.7.tar.xz"
sha512sums="cf813c03869f38ea2231f77c65effe8fc9467cd095c006c822c4506385d13265a48048333446055d7c8e4e67209a03e569fe307b1b440dd4d549414888399e5b  acf-provisioning-0.8.7.tar.xz"
