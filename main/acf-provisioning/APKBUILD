_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.10
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL2"
depends="acf-core lua-sql-postgres postgresql-client lua-posixtz lua-xml"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="9430ff4689444c2627f9c0290658490a  acf-provisioning-0.8.10.tar.xz"
sha256sums="372437e87d78f72ad4be81a127885f6a4c049d7a841300111acbaec780e7f169  acf-provisioning-0.8.10.tar.xz"
sha512sums="609955688aadc70aea968281b3bdcde5b9af1d9fef5ae02814b9940b7d49a30ef8efdfec8d9b5fcfa53a7e75ef4d12fd4db725ffe229e4245bb02ba17c272c52  acf-provisioning-0.8.10.tar.xz"
