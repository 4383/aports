_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.8
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="fba101fa7079bc182327abfea871bce2  acf-provisioning-0.8.8.tar.xz"
sha256sums="e54ee9a8fb5b9764bf75de9ac425c10944aac5377acd6c351cadeb975003ce0e  acf-provisioning-0.8.8.tar.xz"
sha512sums="98015af6525fed6678b02c7b0f2189871e5042c5c683c14ed21b0fb3e4d6ea0fa1457829728e4cff18622a87d67a7cbf7e6b03b7aaaa98772635f3633f9e80f3  acf-provisioning-0.8.8.tar.xz"
