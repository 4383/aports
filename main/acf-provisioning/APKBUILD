_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.7.0
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="d1cb993423db498ce7b807e88297ca0d  acf-provisioning-0.7.0.tar.xz"
sha256sums="c768ff36820a0afe1e27fc038d175f952b0b4a76d8e9351ca72b482a9c7aeac3  acf-provisioning-0.7.0.tar.xz"
sha512sums="1cdbc32dffcc95ee659267492ebac7a700626e8e1f0d90a1bcfd654be1d75d7fc9afb2fec085035e324e4d94a1f17f8b51b0e4cf7f22a462d0804d2bd6bb8805  acf-provisioning-0.7.0.tar.xz"
