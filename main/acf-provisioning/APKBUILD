_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.7.4
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="06b8a7424075cb2ad81ba0af297159df  acf-provisioning-0.7.4.tar.xz"
sha256sums="2e02b0da07f98bb0fa706d68a52b477b497294b13771ecbc7ac6849505258462  acf-provisioning-0.7.4.tar.xz"
sha512sums="665c3c70c9ef2fa9900a868c819dfba4a546b7bdbb495c631ec2d253ca0d2563898ab976cf683ed41666c74b496381c90f1ee79df24b9760f5b48ce6ebeb0d87  acf-provisioning-0.7.4.tar.xz"
