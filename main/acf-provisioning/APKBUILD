_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.1
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="e140e0eea093f07601a4e627610c3718  acf-provisioning-0.8.1.tar.xz"
sha256sums="ac7626ce3b9be4485ce1744aef6771af1d4477a4fb08cc4217d0e95868839050  acf-provisioning-0.8.1.tar.xz"
sha512sums="90adbce7a4743a2135178cd9e8cd2c718824d70382f392dd8ca009dba7c3f5e217b286ed7ae3cac8e16b72567cbb6571ddfda170fb65162fdb1d6ad351f16081  acf-provisioning-0.8.1.tar.xz"
