_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.11
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL2"
depends="acf-core lua-sql-postgres postgresql-client lua-posixtz lua-xml"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="da2abd3611f588da6ac1aea88afde8b9  acf-provisioning-0.8.11.tar.xz"
sha256sums="8c4b23541d7fe7eee00be0b400bbddf62d306bf01708255b92996d38b0f4161d  acf-provisioning-0.8.11.tar.xz"
sha512sums="269162398c8c0ba2b3f5d22159cce0bb0c37256d9f7846ec9784d4f0910325d4824e329ec6f66c486ce80a8a6476fa58690c0c59a0ea6a325e4d15f5dc7bddc2  acf-provisioning-0.8.11.tar.xz"
