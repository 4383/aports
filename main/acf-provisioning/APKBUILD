_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.7.3
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="a69a1357c475bbc709c61a15a4eae525  acf-provisioning-0.7.3.tar.xz"
sha256sums="71b137ab5248b0cc9fcd2108024d82224ba177eeb6ee0e678fae8c14bc88819e  acf-provisioning-0.7.3.tar.xz"
sha512sums="515af5b76e5f12915d168ec7c84a78d2f0c97a0b4ea1c3de3407de3253093bd51944ce439854528095622f4e004dce66fb04c9c1a1396ad6efbf49335671a4dd  acf-provisioning-0.7.3.tar.xz"
