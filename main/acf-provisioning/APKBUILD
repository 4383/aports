_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.7.1
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="5b6d89cd3af8abf57c809a7909c8fe31  acf-provisioning-0.7.1.tar.xz"
sha256sums="690d32804cee04432ec6b1afbc48bd8f390bf18dbfc8bd35c4106bbdcd9ed3fb  acf-provisioning-0.7.1.tar.xz"
sha512sums="394f7d8c1de2a44ecfdee99dea31e54d34a0a54b1524398739d40de99c90810bbb206905f7c67279f6e87c0842f25de39e7643bd8ab42429c8e276d5143a9628  acf-provisioning-0.7.1.tar.xz"
