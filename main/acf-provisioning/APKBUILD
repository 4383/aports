_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.7.6
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="7485dba470fa17f59889dd72a1290da8  acf-provisioning-0.7.6.tar.xz"
sha256sums="4cce77b85d1137b61cd9bebdf9231531b03928a550adce8de0c75cfae1ac41e0  acf-provisioning-0.7.6.tar.xz"
sha512sums="af83ca8c1a7882fa79d60cb13a60a0e1db8fd331e812f12689421f71d60b61b84827469ada34c1db86c32a742fd48b74e80112696ca6165386cbd102ab03ad38  acf-provisioning-0.7.6.tar.xz"
