_luaversion=5.2
pkgname=acf-provisioning
pkgver=0.8.0
pkgrel=0
pkgdesc="ACF for provisioning templated configs to devices"
url="http://git.alpinelinux.org/cgit/acf-provisioning"
arch="noarch"
license="GPL-2"
depends="acf-core lua lua-sql-postgres postgresql-client lua-posixtz"
makedepends=""
install=""
subpackages=""
source="http://dev.alpinelinux.org/archive/$pkgname/$pkgname-$pkgver.tar.xz"

package() {
	cd "$srcdir"/$pkgname-$pkgver

	# fix shebang
	sed -i -e "1s:#!/usr/bin/haserl :#!/usr/bin/haserl-lua$_luaversion :" \
		cgi-bin/provisioning.cgi || return 1
	
	make DESTDIR="$pkgdir" install
}

md5sums="3806c96ad56d40f03be701d52fedd123  acf-provisioning-0.8.0.tar.xz"
sha256sums="b9e88b533d3c8aa321390aa494a77ae28f0cb923c19ace06e3707a37ff836ab2  acf-provisioning-0.8.0.tar.xz"
sha512sums="4da0b224aeea4060a3adf0a3f8970b33539e71b9aa87ed28a91fe873148f78f903c2d53357953e1339bf7894c5c35bdc9e36d2a95fddd239e8a93ac46e847cdd  acf-provisioning-0.8.0.tar.xz"
