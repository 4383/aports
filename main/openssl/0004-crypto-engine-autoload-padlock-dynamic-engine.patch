+++ b/crypto/engine/eng_all.c
@@ -112,6 +112,16 @@ void ENGINE_load_builtin_engines(void)
 	ENGINE_load_capi();
 #endif
 #endif
+#ifdef OPENSSL_NO_STATIC_ENGINE
+	{
+		ENGINE *e;
+		e = ENGINE_by_id("padlock");
+		if (e != NULL) {
+			ENGINE_add(e);
+			ENGINE_free(e);
+		}
+	}
+#endif
 	}
 
