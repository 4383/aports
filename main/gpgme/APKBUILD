# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gpgme
pkgver=1.5.3
pkgrel=0
pkgdesc="gnupg made easy"
url="http://www.gnupg.org/related_software/gpgme/"
arch="all"
license="GPL"
depends=gnupg
depends_dev="libgpg-error-dev libassuan-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.gnupg.org/gcrypt/gpgme/gpgme-$pkgver.tar.bz2"

_builddir="$srcdir"/gpgme-$pkgver
prepare() {
	local i
	cd "$_builddir"
	update_config_sub || return 1
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}

md5sums="082ab2632e7f051f5c09bafd5c4bfacf  gpgme-1.5.3.tar.bz2"
sha256sums="0db040c5b07e69cfe9a0b4566c8e90151ebacfe122c97c452f11386654aefcc9  gpgme-1.5.3.tar.bz2"
sha512sums="c21879bf424372733eae3a06beb1a3aa33b5c4f1fbefcb0964206caccf7a09b17941c0547972762cfb4e8d010e903b3ce6a895697558def2449c529159933049  gpgme-1.5.3.tar.bz2"
