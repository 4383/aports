sha512sums="bf421b9f8a0a736142e48a68e2fadc1da15fe8c0a9b967187d089d0ea0654cec3c5e71461edceed878f4a0ac7ec9243c01a1e3bab6f16ee87199f389366d219d  nsd-4.0.1.tar.gz
b2f2e0d4c6e1f3bcca0f46021ca71d19e924e576c6dd4390b1c15329a00e9249b9c001fed49ebe8aafa9428a671edb7664addf3e382a9bf5bdd05c82f3b5e54a  nsd.initd"
