# Maintainer:
pkgname=gconf
pkgver=2.32.2
pkgrel=0
pkgdesc="GNOME configuration system"
url="http://projects.gnome.org/gconf"
arch="all"
license="GPL"
depends=
depends_dev="orbit2-dev libxml2-dev gtk+-dev polkit-dev"
makedepends="$depends_dev

	     gobject-introspection
	     gnome-doc-utils"
install=""
subpackages="$pkgname-dev"
source="http://ftp.gnome.org/pub/GNOME/sources/GConf/${pkgver%.*}/GConf-${pkgver}.tar.bz2"

_builddir="${srcdir}/GConf-${pkgver}"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--with-gtk=2.0 || return 0
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="0d19e59b8997b9968695ca863dd0acc8  GConf-2.32.2.tar.bz2"
