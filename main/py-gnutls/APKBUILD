pkgname=py-gnutls
_name=python-gnutls
pkgver=1.2.2
pkgrel=0
pkgdesc="Python wrapper for the GNUTLS library"
url="http://pypi.python.org/pypi/python-gnutls"
arch="all"
license="PSF"
depends="python"
makedepends="python-dev gnutls-dev"
install=
subpackages=""
source="http://pypi.python.org/packages/source/p/$_name/$_name-$pkgver.tar.gz"

_buildroot=${srcdir}/${_name}-${pkgver}
build() {
	cd ${_buildroot}
	python setup.py build
}

package() {
	cd ${_buildroot}
	python setup.py install --root="$pkgdir"
}

md5sums="1ca32b3e2d22ca33a15222191efc04aa  python-gnutls-1.2.2.tar.gz"
