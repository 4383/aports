sha512sums="1b16e680235a244bc31ac516f462021093d1a3dc86dac3c2698e49425b20130e0ee3ddd4e7afc11f936b1ae8b081c65a421517e7d9414b02295715ecf74c25d0  gst-plugins-ugly-1.2.2.tar.xz"
