sha512sums="3af4dd111a09768396748e6e9c7a85257a1abd19294e026007cb27da42e57eba99d2a764129a4c39ba6dc48a3c926368a94900afc013cd143148dedec8d3259a  gst-plugins-ugly-1.0.6.tar.xz"
