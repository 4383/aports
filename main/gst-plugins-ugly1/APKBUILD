sha512sums="8cac8f6310d178d29d14ddb41215d28d65578ce00233c876fb88ccff5ce5b5f479c426aa6cfcf261495eb6e6760072df5ef3a41e470a78a8b0a12979f23e530d  gst-plugins-ugly-1.2.0.tar.xz"
