sha256sums="d581592a82cf3930361430d38436c30a58d8b6c249cad18f7f213b203e206d46  gst-plugins-ugly-1.4.3.tar.xz"
sha512sums="274d5e3028d55fbfceaefa341a5be43f673bde7c5c2de7c932b19e6d1456589084ef73bd1ad03f57475910d4db71c669989ce2ee07f98594027b78a3ec12c287  gst-plugins-ugly-1.4.3.tar.xz"
