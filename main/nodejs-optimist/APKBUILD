# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs-optimist
_pkgname=${pkgname#nodejs-}
pkgver=0.6.1
pkgrel=0
pkgdesc="Light-weight option parsing with an argv hash"
url="https://github.com/substack/node-optimist"
arch="noarch"
license="MIT"
depends="nodejs nodejs-wordwrap nodejs-minimist"
depends_dev=""
makedepends="$depends_dev"
install=""
subpackages=""
source="https://registry.npmjs.org/$_pkgname/-/$_pkgname-$pkgver.tgz"

_builddir="$srcdir/package"
_moduledir=usr/lib/node_modules/$_pkgname

package() {
	cd "$_builddir"

	mkdir -p "$pkgdir"/$_moduledir
	cp -pr package.json index.js "$pkgdir"/$_moduledir
}

md5sums="5a3c2018c395731ecb5e91168a2242d4  optimist-0.6.1.tgz"
sha256sums="56425fd38177f312912848ff242a684e0c69a03a4c370f49269e1411e031a1a5  optimist-0.6.1.tgz"
sha512sums="b273783b84e48a0ba36698562cdd04fff9d09a6efbf74458684e770dd2fb658c1e7b60fc0c3a3dfc4c9888a51f377ae77965238499ee7a28dadc6f48da2d21de  optimist-0.6.1.tgz"
