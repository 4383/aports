# Contributor: Francesco Colista <fcolista@alpinelinux.org>
# Maintainer: Francesco Colista <fcolista@alpinelinux.org>
pkgname=byobu
pkgver=5.68
pkgrel=0
pkgdesc="An enhancement of the GNU Screen"
url="https://launchpad.net/byobu"
arch="noarch"
license="GPL3"
depends="screen python"
makedepends=""
install=""
subpackages="$pkgname-doc"
source="http://launchpad.net/byobu/trunk/$pkgver/+download/byobu_$pkgver.orig.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc 
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install
}

md5sums="bbc7ed881e3b626ab5e253c832e869fa  byobu_5.68.orig.tar.gz"
sha256sums="157a1a26c16a51718fbe12d0562439a23a55ecfe8ef48d012b078cfe51a8c2f5  byobu_5.68.orig.tar.gz"
sha512sums="a1aba4880a018a15cf974bb95e84f89c20a2676f837d49ac06156e91da3b267afd00fc175e196a1a3eec57293aa363e97791845a657e4ff55788782a13ab53ce  byobu_5.68.orig.tar.gz"
