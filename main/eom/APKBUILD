# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=eom
pkgver=1.10.1
pkgrel=0
pkgdesc="A simple graphics viewer for the MATE"
url="https://github.com/mate-desktop/eom"
arch="all"
license="GPLv2"
depends="mate-icon-theme libxml2-utils"
depends_dev=""
makedepends="$depends_dev glib-dev gtk+2.0-dev itstool mate-desktop-dev
	libexif-dev lcms2-dev dconf-dev dbus-dev librsvg-dev libxslt-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
                --build=$CBUILD \
                --host=$CHOST \
                --sysconfdir=/etc \
		--with-gtk=2.0 \
                --prefix=/usr || return 1

        make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
        find "$pkgdir" -name \*.la -delete
}

md5sums="cec4a1ab028278c9b3a0511168f082cd  eom-1.10.1.tar.xz"
sha256sums="777ff0b9a5d5db59b4d8a54468e54ee70612ea8ec645a2f688bd76fd2c335bde  eom-1.10.1.tar.xz"
sha512sums="28511e20a7f346e40a830842de27c1e2a7350afc40366edbe17e3c879d49a3362e44448b9ab74b89b36acca8f000e9917cb05d5129ea54be19dd1022272ec773  eom-1.10.1.tar.xz"
