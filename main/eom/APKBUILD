# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=eom
pkgver=1.10.5
pkgrel=0
pkgdesc="A simple graphics viewer for the MATE"
url="https://github.com/mate-desktop/eom"
arch="all"
license="GPLv2"
depends="mate-icon-theme libxml2-utils"
depends_dev=""
makedepends="$depends_dev glib-dev gtk+2.0-dev itstool mate-desktop-dev
	libexif-dev lcms2-dev dconf-dev dbus-dev librsvg-dev libxslt-dev"
install=""
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
source="http://pub.mate-desktop.org/releases/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
                --build=$CBUILD \
                --host=$CHOST \
                --sysconfdir=/etc \
		--with-gtk=2.0 \
                --prefix=/usr || return 1

        make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="${pkgdir}" install || return 1
}

md5sums="362b5a94e363e3ef45fdb34c0335f18d  eom-1.10.5.tar.xz"
sha256sums="19b484dba1c2adf1450153815e4edb05ba7ab7bdf4eb8b4f2071766e48e72d14  eom-1.10.5.tar.xz"
sha512sums="f58f2c4c1d211afe66c2a112b75ee6b325590294da51df3a56d1dca0fb813cea1abd9e9dc7a4a3f26c111f1c11aba20e8177e36913f04bae664f4ddad6f98c0c  eom-1.10.5.tar.xz"
