sha256sums="48721eb318ffffdd134edea754d0b65d76b08c8209a8d2c8a42bca1f799f9099  gst-libav-1.2.0.tar.xz"
sha512sums="2d53de52fb6f846752b0e0c90f8ca167397ade5a413755ecbad9876a25046b56850a8d8c1b2783819da0988475bdf91a3ce8709f6f8db2b3e197bc2fb0e37d7a  gst-libav-1.2.0.tar.xz"
