# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=nasm
pkgver=2.11
pkgrel=0
pkgdesc="80x86 assembler designed for portability and modularity"
url="http://nasm.sourceforge.net"
arch="all"
license="LGPL"
depends=
source="http://www.nasm.us/pub/nasm/releasebuilds/$pkgver/$pkgname-$pkgver.tar.bz2"

subpackages="$pkgname-doc"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () { 
	cd "$_builddir"
	export CFLAGS=
	export CXXFLAGS=
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make nasmlib.o || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make INSTALLROOT="$pkgdir" install
}
md5sums="4cd558047ea5ed51fc2c7c94e249c7b8  nasm-2.11.tar.bz2"
sha256sums="1ce7e897c67255a195367a60c739a90a0b33a4a73f058f7cda3253bcf975642b  nasm-2.11.tar.bz2"
sha512sums="82a6a217a4f7e111326f5babad93ebcffc697bff5bc2318bdd62b25dac3d1fed89577a465507524c9dea541982c87e91b74344e5c618e17229193eb5148883f7  nasm-2.11.tar.bz2"
