# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=nasm
pkgver=2.10.09
pkgrel=0
pkgdesc="80x86 assembler designed for portability and modularity"
url="http://nasm.sourceforge.net"
arch="all"
license="LGPL"
depends=
source="http://www.nasm.us/pub/nasm/releasebuilds/$pkgver/$pkgname-$pkgver.tar.bz2"

subpackages="$pkgname-doc"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () { 
	cd "$_builddir"
	export CFLAGS=
	export CXXFLAGS=
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make nasmlib.o || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make INSTALLROOT="$pkgdir" install
}
md5sums="0e45ca0d3d7ff36d503777eaa673e2ae  nasm-2.10.09.tar.bz2"
sha256sums="7141180d3874b5967c6a60191e8d45fba9cc86bd60a4803ad80b6b6b3eac36b9  nasm-2.10.09.tar.bz2"
sha512sums="770474712aeed347f4e1afef15167081c77fc52142737f685706e3d79167db882a4eaae26139be7c3d4971cb68106af213c0a29ee67eaebe1985ffd584fc195e  nasm-2.10.09.tar.bz2"
