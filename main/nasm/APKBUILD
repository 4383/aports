# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=nasm
pkgver=2.11.05
pkgrel=0
pkgdesc="80x86 assembler designed for portability and modularity"
url="http://nasm.sourceforge.net"
arch="all"
license="LGPL"
depends=
source="http://www.nasm.us/pub/nasm/releasebuilds/$pkgver/$pkgname-$pkgver.tar.bz2"

subpackages="$pkgname-doc"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build () { 
	cd "$_builddir"
	export CFLAGS=
	export CXXFLAGS=
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make nasmlib.o || return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make INSTALLROOT="$pkgdir" install
}
md5sums="f6b1db2858cad82bbb0c8c6f3e2b0fb2  nasm-2.11.05.tar.bz2"
sha256sums="4a417bcf5cde5d203e228feea3f428a6ff4d700d558e4d79d50a30a695bdfae9  nasm-2.11.05.tar.bz2"
sha512sums="131cf04d122f6fd1546516e3a27e26d8016bc8584a2e1c5a9bb7ca419b3286fa91ed6b090050438c3d927447abe8cd3e486f080f6d96aa5cb44ebc9e5fb6d0d5  nasm-2.11.05.tar.bz2"
