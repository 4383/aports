# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=mutagen
pkgver=1.26
pkgrel=0
pkgdesc="An audio metadata tag reader and writer implemented in pure python"
url="http://code.google.com/p/mutagen/"
arch="noarch"
license="GPL2"
depends="python py-mutagen"
makedepends="python-dev"
subpackages="$pkgname-doc py-$pkgname:py"
source="https://bitbucket.org/lazka/mutagen/downloads/mutagen-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	python setup.py build 
}

package() {
	cd "$_builddir"
	python setup.py install --root="$pkgdir"
}

py() {
	pkgdesc="Python library for mutagen"
	depends="python"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/python* "$subpkgdir"/usr/lib/
}

md5sums="32db83cc52cdd75c0b3efa656934eac7  mutagen-1.26.tar.gz"
sha256sums="be9f9ec27bc00f698d674cd00ef8eb29bbce316154a52ab105e85ca24ca9c751  mutagen-1.26.tar.gz"
sha512sums="ce6e679533b3e7548e0fa0682d58287f25c12439236b2f277f8fd984a59059d9cfceb77ba2dd6c8dd8b43dbf2377ba28dcca95ee27ff4ae814a0b19ca435b19e  mutagen-1.26.tar.gz"
