# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=mutagen
pkgver=1.25
pkgrel=0
pkgdesc="An audio metadata tag reader and writer implemented in pure python"
url="http://code.google.com/p/mutagen/"
arch="noarch"
license="GPL2"
depends="python py-mutagen"
makedepends="python-dev"
subpackages="$pkgname-doc py-$pkgname:py"
source="https://bitbucket.org/lazka/mutagen/downloads/mutagen-$pkgver.tar.gz"

_builddir="$srcdir"/$pkgname-$pkgver

build() {
	cd "$_builddir"
	python setup.py build 
}

package() {
	cd "$_builddir"
	python setup.py install --root="$pkgdir"
}

py() {
	pkgdesc="Python library for mutagen"
	depends="python"
	mkdir -p "$subpkgdir"/usr/lib
	mv "$pkgdir"/usr/lib/python* "$subpkgdir"/usr/lib/
}

md5sums="7657ba453b25d01d831a0560007e1e52  mutagen-1.25.tar.gz"
sha256sums="52bb5d189f76bf77c95a4fa46e09b409698cc5bc7ba52c1ea14b84c5bda7207f  mutagen-1.25.tar.gz"
sha512sums="63972d80b171da969bb6ef692621b0d841c93dde9c97b8a1ee971c60769601f9f97dc6200618c4faa6b1d1ca5a3cd46fc650d3a3af3934e3fe681ec70bd37971  mutagen-1.25.tar.gz"
