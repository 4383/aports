# Maintainer: Leonardo Arena <rnalrd@alpinelinux.org>
pkgname=perl-fcgi
_realname=FCGI
pkgver=0.73
pkgrel=0
pkgdesc="Perl Fast CGI module"
url="http://search.cpan.org/~flora/FCGI"
arch="all"
license="unknown"
depends=
depends_dev=
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc"
source="http://search.cpan.org/CPAN/authors/id/F/FL/FLORA/$_realname-$pkgver.tar.gz"

_builddir="$srcdir/$_realname-$pkgver"

build() {
	cd "$_builddir"
        PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make && make test || return 1
}

package() {
        cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	# creates collision among perl modules
        find "$pkgdir" -name perllocal.pod -delete
}

md5sums="b55c8b93ccd175b3c0e4473f1a6c0bdd  FCGI-0.73.tar.gz"
