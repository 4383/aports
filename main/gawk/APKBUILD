pkgname=gawk
pkgver=4.0.1
pkgrel=0
pkgdesc="GNU awk pattern-matching language"
url="http://www.gnu.org/software/gawk/gawk.html"
arch="all"
license="GPL"
subpackages="$pkgname-doc"
source="http://ftp.gnu.org/gnu/$pkgname/$pkgname-$pkgver.tar.xz"

_builddir="$srcdir/$pkgname-$pkgver"
prepare() {
	cd "$_builddir"
	update_config_sub || return 1
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--disable-nls \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir/$pkgname-$pkgver"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="a601b032c39cd982f34272664f8afa49  gawk-4.0.1.tar.xz"
sha256sums="ae0cb9a0ac80686df316fcd126d0da7d1fb6a0acfe043320511c1f212f2ecb47  gawk-4.0.1.tar.xz"
sha512sums="45b4265ca09e281f003ba5d6e489f6c7c2885b2ad1eaf70f23aefb43f442631d1d81b01342c71e9f83b9b371da9f79a102f53dad3e0e776cac817b3d32a721e6  gawk-4.0.1.tar.xz"
