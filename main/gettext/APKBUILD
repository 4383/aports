sha256sums="d1a4e452d60eb407ab0305976529a45c18124bd518d976971ac6dc7aa8b4c5d7  gettext-0.18.3.2.tar.gz"
sha512sums="0cf8f2bb844b9d94f5e63a0f4bddc133e2388d103fd4189614d2fc157a94e27836ec399eb32ab69410e2214425676e6bc195bbf13238cc5ad32b454ec6e2b5ef  gettext-0.18.3.2.tar.gz"
