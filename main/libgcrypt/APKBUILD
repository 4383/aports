# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libgcrypt
pkgver=1.5.4
pkgrel=0
pkgdesc="general purpose crypto library based on the code used in GnuPG"
url="http://www.gnupg.org"
arch="all"
license="LGPL"
depends=
depends_dev="libgpg-error-dev"
makedepends="$depends_dev texinfo"
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.gnupg.org/gcrypt/libgcrypt/libgcrypt-$pkgver.tar.bz2"


build () {
	cd "$srcdir"/$pkgname-$pkgver

	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--enable-padlock-support \
		--disable-static \
		|| return 1

	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make -j1 DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	rm -f ${pkgdir}/usr/share/info/dir
}
md5sums="ac4eb5091806d86a8575d0b8dcd2b9db  libgcrypt-1.5.4.tar.bz2"
sha256sums="d5f88d9f41a46953dc250cdb8575129b37ee2208401b7fa338c897f667c7fb33  libgcrypt-1.5.4.tar.bz2"
sha512sums="fe7e1d07eb10ee4ea8054bc955c35dc4b2109db645a08a6fa7757bf1e77a612e03c0838f9766086f04270b3621f34ccae0d6333f117cff204ccad9018c8a7908  libgcrypt-1.5.4.tar.bz2"
