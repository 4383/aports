# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xfdesktop
pkgver=4.10.3
pkgrel=0
pkgdesc="A desktop manager for Xfce"
url="http://www.xfce.org/"
arch="all"
license="GPL-2"
subpackages="$pkgname-doc $pkgname-lang"
depends="hicolor-icon-theme"
makedepends="garcon-dev thunar-dev libxfce4ui-dev libwnck-dev libnotify-dev
	exo-dev"
install=
source="http://archive.xfce.org/src/xfce/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2
	"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--libexecdir=/usr/lib \
		--localstatedir=/var \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="11c9601f99080b47ee92b2ea30d30355  xfdesktop-4.10.3.tar.bz2"
sha256sums="09ca2ba554d8b724b4bbb34b6fb3523de36b556efa4f28ecd802c9c5ba3272ce  xfdesktop-4.10.3.tar.bz2"
sha512sums="756291c5cd850525dd2380071c2681faf42336fc81bbf6f7c6e7e77d2c351d88ba8b796221dcce3e9c78a68fbf0ea4f603a12026aa00922f8f9df791c099dca4  xfdesktop-4.10.3.tar.bz2"
