# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=pixman
pkgver=0.32.2
pkgrel=0
pkgdesc="Pixman library"
url="http://xorg.freedesktop.org"
arch="all"
license="custom"
subpackages="$pkgname-dev"
depends=
makedepends="perl"
source="http://xorg.freedesktop.org/releases/individual/lib/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	cd "$_builddir"
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}
md5sums="1e92d239011ea65826026ac15b372e10  pixman-0.32.2.tar.bz2"
sha256sums="d7cc5c845536835a3bfaaeaa4f2e27ebd90b5e8e7a9e73962fa912d3a669002e  pixman-0.32.2.tar.bz2"
sha512sums="2a96c9e2caaee9728c0544a697ef6bcdab4e87ff0d96fccafb0ec6ed7a31b7bbe7f59727f3b2088eaaf4093515909b95d0d489901ae9243c61f763dbac8e08c4  pixman-0.32.2.tar.bz2"
