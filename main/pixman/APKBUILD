# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=pixman
pkgver=0.30.0
pkgrel=0
pkgdesc="Pixman library"
url="http://xorg.freedesktop.org"
arch="all"
license="custom"
subpackages="$pkgname-dev"
depends=
makedepends="perl"
source="http://xorg.freedesktop.org/releases/individual/lib/$pkgname-$pkgver.tar.bz2"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-static \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
}
md5sums="11b7e062e20ae40e49c2871dd9f82b0b  pixman-0.30.0.tar.bz2"
sha256sums="77e756dc7fafdf17f39a4f23bdc8be59f9f6a65c08704f5cac1d8aa87cfaf517  pixman-0.30.0.tar.bz2"
sha512sums="1e594fee7d36b4faae1f3cb0a268563eceef8b2b3bb71a6fd2b14c30b7df87f6c7f8fd78274620b9aceda84994a88fbbd436db0b67201a03ca2e3584732a7eea  pixman-0.30.0.tar.bz2"
