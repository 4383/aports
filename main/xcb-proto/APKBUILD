# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=xcb-proto
pkgver=1.9
pkgrel=0
pkgdesc="XML-XCB protocol descriptions"
url="http://xcb.freedesktop.org/"
arch="noarch"
license="custom"
depends=
makedepends="python"
source="http://xcb.freedesktop.org/dist/$pkgname-$pkgver.tar.bz2"

build() {
	cd "$srcdir"/${pkgname}-${pkgver}
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/${pkgname}-${pkgver}
	make DESTDIR=${pkgdir} install || return 1
	install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
	install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/ || return 1
}
md5sums="311817f844c45c0c3d76dd72e6560c10  xcb-proto-1.9.tar.bz2"
sha256sums="895afe21793e6e26c5ce999b1900c02a5984c201d96d55cc42c182d3c3bde43c  xcb-proto-1.9.tar.bz2"
sha512sums="063e08e51893302b160f7cbfe75e2319c6c0c7172cae3d1bbda4cb69695e47ce4938ea18679d36eda436bab7ee1cc288e62381d7d6115892e35626bb6ca2607d  xcb-proto-1.9.tar.bz2"
