# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libx11
pkgver=1.4.4
pkgrel=1
pkgdesc="X11 client-side library"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom:XFREE86"
depends=
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libxcb-dev xproto xextproto xf86bigfontproto xtrans kbproto
	inputproto"
makedepends="$depends_dev util-macros pkgconfig"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$pkgver.tar.bz2
	0001-fix-CVE-2013-1981-CVE-2013-1997-CVE-2013-2004.patch
	"

_builddir="$srcdir"/libX11-$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--with-xcb || return 1
	make
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

md5sums="ed7c382cbf8c13425b6a66bcac0ca5d9  libX11-1.4.4.tar.bz2
ed1e995836f3d5ad69f666d4e2f82d17  0001-fix-CVE-2013-1981-CVE-2013-1997-CVE-2013-2004.patch"
