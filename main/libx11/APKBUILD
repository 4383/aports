# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libx11
pkgver=1.4.2
pkgrel=0
pkgdesc="X11 client-side library"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom:XFREE86"
depends=
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libxi-dev libxext-dev libxmu-dev libxcb-dev libxau-dev libxdmcp-dev xproto xextproto
	xf86bigfontproto xtrans kbproto inputproto
	"
makedepends="$depends_dev util-macros pkgconfig"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$pkgver.tar.bz2
	"

build() {
	cd "$srcdir"/libX11-$pkgver
	./configure --prefix=/usr \
		--with-xcb || return 1
	make
}

package() {
	cd "$srcdir"/libX11-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

md5sums="9bfab42d2cbc2e5b47cf6a3069ee8ad3  libX11-1.4.2.tar.bz2"
