# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libx11
pkgver=1.5.99.902
pkgrel=0
pkgdesc="X11 client-side library"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom:XFREE86"
depends=
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libxcb-dev xproto xextproto xf86bigfontproto xtrans kbproto
	inputproto"
makedepends="$depends_dev util-macros pkgconfig"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$pkgver.tar.bz2
	"

build() {
	cd "$srcdir"/libX11-$pkgver
	./configure --prefix=/usr \
		--with-xcb || return 1
	make
}

package() {
	cd "$srcdir"/libX11-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

md5sums="0f1a38133d11d64ad02fecb508b049ed  libX11-1.5.99.902.tar.bz2"
sha256sums="9e6a28609e1857600d51d45b90f14853350176e00bd50c863603164f539cdf8c  libX11-1.5.99.902.tar.bz2"
sha512sums="db5d53d7a68424b46862b973c9c5ab413bbe71ad2dcdbd1d821d2be7dbf1d84df52a5d2b81a070c281a5155363c0a3996e5827433f00c25324e1caa1abb6c571  libX11-1.5.99.902.tar.bz2"
