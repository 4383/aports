# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libx11
pkgver=1.6.1
pkgrel=0
pkgdesc="X11 client-side library"
url="http://xorg.freedesktop.org/"
arch="all"
license="custom:XFREE86"
depends=
subpackages="$pkgname-dev $pkgname-doc"
depends_dev="libxcb-dev xproto xextproto xf86bigfontproto xtrans kbproto
	inputproto"
makedepends="$depends_dev util-macros pkgconfig"
source="http://xorg.freedesktop.org/releases/individual/lib/libX11-$pkgver.tar.bz2
	"

build() {
	cd "$srcdir"/libX11-$pkgver
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--with-xcb \
		|| return 1
	make
}

package() {
	cd "$srcdir"/libX11-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la || return 1
	install -Dm644 COPYING "$pkgdir"/usr/share/licenses/$pkgname/COPYING
}

md5sums="bc5fc459ec25a50c5a7e27035b89e579  libX11-1.6.1.tar.bz2"
sha256sums="10a54fc16b58b4f5a5eed4d080c357a82fd2f42d09af625c1f5df50650701892  libX11-1.6.1.tar.bz2"
sha512sums="701f3cbc8f103760bc2b6842ff99d0a87bef18cc78127d86756a4fad849dc6e009081031177a4059209691ded10f08506e9ae23034d51576e4dad9101d54f923  libX11-1.6.1.tar.bz2"
