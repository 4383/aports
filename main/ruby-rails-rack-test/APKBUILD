# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=rack-test
pkgname=ruby-rails-$_gemname
pkgver=0.6.2
pkgrel=0
pkgdesc="A small, simple testing API for Rack apps (for Rails)"
url="http://rubygems.org/gems/rack-test"
arch="noarch"
license="MIT"
depends="ruby ruby-rails-rack"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="cfb89a03ea96b80d2c82ce88168a6ae3  rack-test-0.6.2.gem"
sha256sums="7e920b6aac888e4a3846e5997fb1cbf456bdb5846322b58dc31697a54a38b306  rack-test-0.6.2.gem"
sha512sums="9c14d75eafea93afb02c4e8fc438f7c653cfe816058560a458a092591214a7fd185b2d76eed7b398e16d72f763e8c7ae0a869c3a29df075102845074568d8ef0  rack-test-0.6.2.gem"
