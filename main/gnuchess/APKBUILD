# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gnuchess
pkgver=6.0.0
pkgrel=0
pkgdesc="The GNU chess program"
url="http://www.gnu.org/software/chess/"
arch="all"
license="GPLv3+"
depends=
makedepends=
install=""
subpackages="$pkgname-doc"
source="ftp://ftp.gnu.org/pub/gnu/chess/gnuchess-$pkgver.tar.gz"

_builddir="$srcdir"/gnuchess-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
}

md5sums="1a7a46188dab76f4339d22ff47c31515  gnuchess-6.0.0.tar.gz"
