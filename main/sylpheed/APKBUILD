# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=sylpheed
pkgver=3.0.3
pkgrel=0
pkgdesc="Lightweight and user-friendly e-mail client"
url="http://sylpheed.sraoss.jp/en/"
license="GPL"
depends=
makedepends="gtk+-dev openldap-dev openssl-dev"
subpackages="$pkgname-dev"
source="http://$pkgname.sraoss.jp/$pkgname/v${pkgver%.*}/$pkgname-$pkgver.tar.bz2"

build() {
	cd "$srcdir/sylpheed-$pkgver"
	./configure --prefix=/usr \
		--enable-ldap \
		--disable-gtkspell || return 1
	make || return 1
}

package() {
	cd "$srcdir/sylpheed-$pkgver"
	make DESTDIR="$pkgdir" install || return 1
}
md5sums="c69e5787868c7a8b5fe74cc24ffca189  sylpheed-3.0.3.tar.bz2"
