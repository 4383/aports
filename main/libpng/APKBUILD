sha512sums="919f8ad1bf3daa55104dcc61701d32e5f22053659fde45fbae90cd3304175821fb1fe805f401cef83cbecb63342cc35e63f053315269d161e77ba4509736aaac  libpng-1.6.13.tar.gz
