sha512sums="ae507b18d45a12979d954019fd157f2ac0d90f8b1d73ca04b9afd3d59f741d25d6f65d344aacb963bdb648e51f45aa433b1b40e4590bd572ff961e662bc319ad  libpng-1.6.6.tar.gz
8be5b149f7d87e240e1236c24e105d144b0d57a47aa60dd11e80b5bde715701039fb8ea67af2c58cc8a56de2708b0289169e9bea40f03a8c67e826b63e03e18a  libpng-1.6.6-apng.patch.gz"
