# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=cmake
pkgver=2.6.4
pkgrel=1
pkgdesc="CMake is a cross-platform open-source make system"
url="http://www.cmake.org"
license="CMake"
depends="uclibc libgcc g++ ncurses"
makedepends="ncurses-dev"
source="http://www.$pkgname.org/files/v2.6/$pkgname-$pkgver.tar.gz"
subpackages="$pkgname-doc"


parallel_opt() {
	local i n
	for i in $MAKEOPTS; do 
		case "$i" in
			-j*) n=${i#-j};;
		esac;
	done
	[ -n "$n" ] && echo "--parallel $n"
}

build ()
{
	cd $startdir/src/$pkgname-$pkgver
	# bug in cmake.
	# http://www.mail-archive.com/cmake@cmake.org/msg09515.html
	export CC="gcc"
	export CXX="g++"

	./bootstrap --prefix=/usr \
		--mandir=/share/man \
		--docdir=/share/cmake-2.6/doc \
		$(parallel_opt)

	make || return 1
	make DESTDIR="$pkgdir" install
}
md5sums="50f387d0436696c4a68b5512a72c9cde  cmake-2.6.4.tar.gz"
