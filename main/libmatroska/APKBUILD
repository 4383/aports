# Contributor: Timo Teräs <timo.teras@iki.fi>
# Maintainer: Timo Teräs <timo.teras@iki.fi>
pkgname=libmatroska
pkgver=1.4.0
pkgrel=0
pkgdesc="a C++ library to parse Matroska files"
url="http://www.matroska.org/"
arch="all"
license="LGPL"
depends=""
depends_dev="libebml-dev"
makedepends="$depends_dev"
install=""
subpackages="$pkgname-dev"
source="http://dl.matroska.org/downloads/$pkgname/$pkgname-$pkgver.tar.bz2"

_builddir="$srcdir"/$pkgname-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	make -C make/linux
}

package() {
	cd "$_builddir"
	make -C make/linux install prefix="$pkgdir/usr"
}

md5sums="5b83155019589b04a49f9db923b5bf74  libmatroska-1.4.0.tar.bz2"
sha256sums="1b6d02e75cdbfb6d282dcf2a902a259c3075404885d5e8063e6652a2b3f6c11b  libmatroska-1.4.0.tar.bz2"
sha512sums="c6bcabfd69dcbf131d1412cbaed5d0eee8f26db702b0ac54b04ff9bdc3c162a6a16fc0e8f4445e88bd1b4536a9fec347b2993484fb3b300077b8e6cf0c9c8950  libmatroska-1.4.0.tar.bz2"
