# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=py-twisted
_pkgname=Twisted
pkgver=12.3.0
pkgrel=1
pkgdesc="Asynchronous networking framework written in Python."
url="http://twistedmatrix.com/"
arch="all"
license="MIT"
depends="py-crypto py-zope-interface"
makedepends="python-dev"
install=""
subpackages="$pkgname-doc"
source="http://twistedmatrix.com/Releases/Core/${pkgver%.*}/"$_pkgname"Core-$pkgver.tar.bz2"

_builddir="$srcdir"/"$_pkgname"Core-$pkgver
build() {
	cd "$_builddir"
	python setup.py build || return 1
}

package() {
	cd "$_builddir"
	python setup.py install --prefix=/usr --root="$pkgdir" || return 1
	install -D -m644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
	_mans="manhole.1 pyhtmlizer.1 tap2deb.1 tapconvert.1 trial.1 twistd.1"
    for _man in $_mans; do
		install -m644 -D "$_builddir"/doc/man/$_man \
			"$pkgdir"/usr/share/man/man1/$_man  || return 1
	done
}

md5sums="95e3fa899250003c74b8995154cc7421  TwistedCore-12.3.0.tar.bz2"
sha256sums="343dd7372b05d4aa0805406bcbee7db40514b6bb48aa2840e0e56d88a8970900  TwistedCore-12.3.0.tar.bz2"
sha512sums="86e9bbd4b8b0b5f70b62757f9ce93fd03c2766b4cb9722028ec7863d1b9dd19e6d3771472a86f1373a8320a98f5081ac76400ac6bb25a950b6fc50fb241ebeb8  TwistedCore-12.3.0.tar.bz2"
