# Contributor: ≈Åukasz Jendrysik <scadu@yandex.com>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=btrfs-progs
pkgver=4.3.1
pkgrel=1
pkgdesc="Tools for the btrfs"
url="https://btrfs.wiki.kernel.org/"
arch="all"
license="GPL2"
depends=""
makedepends="util-linux-dev bash attr-dev acl-dev e2fsprogs-dev zlib-dev
	lzo-dev asciidoc xmlto linux-headers
	autoconf automake libtool"
install=
subpackages="$pkgname-doc $pkgname-dev $pkgname-bash-completion:completion $pkgname-libs"
source="https://www.kernel.org/pub/linux/kernel/people/kdave/$pkgname/$pkgname-v$pkgver.tar.xz
	includes.patch
	musl-compat.patch
	0001-use-pthread_join-instead-of-pthread_tryjoin_np.patch
	"

_builddir="$srcdir"/$pkgname-v$pkgver
prepare() {
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
	./autogen.sh
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--disable-backtrace \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make -j1 DESTDIR="$pkgdir" install || return 1
}

completion() {
        depends=""
        pkgdesc="Bash completion script for $pkgname"
        install_if="bash $pkgname=$pkgver-r$pkgrel"
        arch="noarch"

        install -Dm644 "$_builddir"/btrfs-completion \
                "$subpkgdir"/usr/share/bash-completion/completions/btrfs
}

