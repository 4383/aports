sha512sums="bc981290ec7238cf62ae5a18dbbc2f240958622f58f4d414fd16b297180ec5eadda3aa849d9aef23c030315e472de8ffa8e0bf7e02db21272307854a6269f1a3  xf86-video-qxl-0.1.1.tar.bz2"
