# Maintainer: William Pitcock <nenolod@dereferenced.org>
pkgname=libnih
pkgver=1.0.3
pkgrel=1
pkgdesc="glib-like library for embedded use"
url="http://launchpad.net/libnih"
arch="all"
license="LGPL"
depends=
depends_dev="dbus-dev expat-dev gettext-dev"
makedepends="$depends_dev pkgconfig"
install=""
subpackages="$pkgname-dev $pkgname-doc"
source="http://launchpad.net/libnih/${pkgver%.*}/${pkgver}/+download/${pkgname}-${pkgver}.tar.gz"

_builddir="${srcdir}/${pkgname}-${pkgver}"
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$_builddir"
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--libdir=/lib \
		--sysconfdir=/etc \
		--localstatedir=/var \
		|| return 1
	make || return 1
}

package() {
	cd "$_builddir"
	make DESTDIR="$pkgdir" install || return 1
	rm -f "$pkgdir"/lib/*.la
}

md5sums="db7990ce55e01daffe19006524a1ccb0  libnih-1.0.3.tar.gz"
