_gemname=activerecord
pkgname=ruby-$_gemname
pkgver=4.0.12
pkgrel=0
pkgdesc="Ruby ActiveRecord pattern (Fowler, PoEAA) for ORM"
url="http://rubygems.org/gems/activerecord"
arch="noarch"
license="GPL"
depends="ruby ruby-activemodel ruby-activerecord-deprecated_finders
         ruby-activesupport ruby-arel"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="c8c9896db780c9e268a74fa2726eb7e3  activerecord-4.0.12.gem"
sha256sums="c378ce37b18add85ec6f951eea8585bed3b5dc774bf855e04ec1c72b5e6f5252  activerecord-4.0.12.gem"
sha512sums="4e91c4cec3c50cead3fe308faf8c95c5ace40deb7e37aae0a68bde95c2cea545a49af61ddb83d9995655d7ca578cddef445a6d4364750426c27afd642e45d715  activerecord-4.0.12.gem"
