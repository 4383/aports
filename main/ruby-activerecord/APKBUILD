# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
_gemname=activerecord
pkgname=ruby-$_gemname
pkgver=3.2.13
pkgrel=0
pkgdesc="Ruby ActiveRecord pattern (Fowler, PoEAA) for ORM"
url="https://rubyforge.org/projects/activerecord/"
arch="noarch"
license="GPL"
depends="ruby ruby-activemodel ruby-activesupport ruby-arel ruby-tzinfo"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="9dd850fbc4d13698384f2a2914315f09  activerecord-3.2.13.gem"
sha256sums="05ed0718b25202e6f1907c02f1bc55c5996962d7a4692272a3fd882dbcccb9fc  activerecord-3.2.13.gem"
sha512sums="ec0ce59350d2eb1ded131c2d1ab64d9c08c318ad9fb2f1a38674d9b7278ee58a7af2fbd78242f94b856fb364c1b3cc5e32972686ea80a5e81d977254ef3bbdb9  activerecord-3.2.13.gem"
