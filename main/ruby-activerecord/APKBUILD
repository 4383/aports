_gemname=activerecord
pkgname=ruby-$_gemname
pkgver=4.0.10
pkgrel=0
pkgdesc="Ruby ActiveRecord pattern (Fowler, PoEAA) for ORM"
url="http://rubygems.org/gems/activerecord"
arch="noarch"
license="GPL"
depends="ruby ruby-activemodel ruby-activesupport ruby-arel ruby-tzinfo"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="1ef179b2a00c45548c0349e809cf2de4  activerecord-4.0.10.gem"
sha256sums="7b7e46dc17f685d1a5b76ba65e60dba5ecd840c834745f3922164c9f602adae0  activerecord-4.0.10.gem"
sha512sums="bb92128e6bbdc2d509972b5ff53ef30f680e60d6f372aa225a40d81ec0cc812f628b38eaa96bf740d9d493a504337d37e48dd7706eccd1a95db94ba8fb89929c  activerecord-4.0.10.gem"
