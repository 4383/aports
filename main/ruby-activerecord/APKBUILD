_gemname=activerecord
pkgname=ruby-$_gemname
pkgver=4.1.8
pkgrel=0
pkgdesc="Ruby ActiveRecord pattern (Fowler, PoEAA) for ORM"
url="http://rubygems.org/gems/activerecord"
arch="noarch"
license="GPL"
depends="ruby ruby-activemodel ruby-activesupport ruby-arel"
depends_dev=
makedepends="$depends_dev ruby"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="664c3375e7ee39aef3a1b24eced6bb9e  activerecord-4.1.8.gem"
sha256sums="4f309f06cc0af80ac33da5518cc08c60e80e959585ad50f095a9dcdba6f6af5a  activerecord-4.1.8.gem"
sha512sums="9c9882e13f47b80b6b2bf4e0b9b267a04673c8b421cf632b08f7078f98ccb0b42d0e0831290626862a3fbf893a697adf34e94c3ca007cd26be70b7d4ab2eba2b  activerecord-4.1.8.gem"
