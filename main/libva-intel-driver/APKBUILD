sha256sums="d0b448193ab34b622cd14e4db8ca29991a4038b4eb459a8fbbcbd7db843da3dc  libva-intel-driver-1.5.0.tar.bz2"
sha512sums="aef41b40a9d926c2555e58258a65b82a406e24ab4e4e513390674dfabc05c8e6ebc31bf00adfd399800e81523f88209a4df286216fb8e7236c8f11f09061825e  libva-intel-driver-1.5.0.tar.bz2"
