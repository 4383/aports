sha256sums="fe6784c7ba6092204e3e7d4142e6023386b43f08127dae1243385078c5c21fec  libva-intel-driver-1.4.1.tar.bz2"
sha512sums="1b0d868c50ae18dde025618618b984ffc71d3e7827edda125479a42cd4c197c8059f764c7ffe601d83c2838038a6dd18e6a80caf13176897ac271bec75644550  libva-intel-driver-1.4.1.tar.bz2"
