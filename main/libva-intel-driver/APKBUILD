sha256sums="11d956ce11cb85bb009c8eb1ebb768403da2cb82675a6d66649f9c49ef4908d1  libva-intel-driver-1.3.2.tar.bz2"
sha512sums="94b09a64cbc2186b2c2cb863fbc8b390314e2b91bdf05b756d5d83a707db3847cca72072bb79bb09e69e335a711343f809552bc02b229679f8f5bb2b85602e1c  libva-intel-driver-1.3.2.tar.bz2"
