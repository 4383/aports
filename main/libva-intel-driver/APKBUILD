sha256sums="f487cee5ddbfb5f11d83a825f4ee72092c9e36018f282e6b2d76baa2ba1abfa2  libva-intel-driver-1.4.0.tar.bz2"
sha512sums="2ab3be0a4ff9d721a94c1096333d1c92483a8ccbbae42bedd3f83a6bf0f8bb836d44090d77187d3c963e4718a9a1b31620689f1eeb7268666150272f9283093b  libva-intel-driver-1.4.0.tar.bz2"
