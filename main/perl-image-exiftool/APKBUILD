# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=perl-image-exiftool
pkgver=9.25
pkgrel=0
pkgdesc="Perl module for editing exif meta info in files"
url="http://www.sno.phy.queensu.ca/~phil/exiftool/"
arch="noarch"
license="Perl"
depends="perl"
makedepends="perl-dev"
install=""
subpackages="$pkgname-doc exiftool"
source="http://www.sno.phy.queensu.ca/~phil/exiftool/Image-ExifTool-$pkgver.tar.gz"

_builddir="$srcdir"/Image-ExifTool-$pkgver
prepare() {
	local i
	cd "$_builddir"
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd $_builddir
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor || return 1
	make && make test || return 1
}

package() {
	cd $_builddir
	make DESTDIR="$pkgdir" install
	# creates file collision among perl modules
	find "$pkgdir" -name perllocal.pod -delete
	find "$pkgdir" -name .packlist -delete
}

exiftool() {
	pkgdesc="Tool for editing exif meta info in files"
	depends="perl-image-exiftool"
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/bin "$subpkgdir"/usr/
}

md5sums="c6071d197e5b5ccb7abc027fde0eb647  Image-ExifTool-9.25.tar.gz"
sha256sums="ff89a60d41ba89a85a9e2f0cfd65db9b376bc19cb737077e9e7687d470828ce6  Image-ExifTool-9.25.tar.gz"
sha512sums="f4043769e0306d58c36a5521a8e9765be14728b4d00124a3d1ca3d3702414b0103a6ba3df19239e71f4b43b124316b72b5c8b150813628926c5d347fb47cccfc  Image-ExifTool-9.25.tar.gz"
