# Contributor: William Pitcock <nenolod@dereferenced.org>
# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=nodejs
pkgver=0.10.36
pkgrel=0
pkgdesc='Evented I/O for V8 javascript'
url='http://nodejs.org/'
arch='all'
license='MIT'
makedepends="$depends_dev python openssl-dev zlib-dev libuv-dev c-ares-dev
	paxctl"
subpackages="$pkgname-dev $pkgname-doc $pkgname-dbg"
source="http://nodejs.org/dist/v$pkgver/node-v$pkgver.tar.gz"

build() {
	cd "$srcdir"/node-v$pkgver
	./configure --prefix=/usr \
		--shared-zlib \
		--shared-libuv \
		--shared-cares \
		--shared-openssl || return 1
	make -C out BUILDTYPE=Release mksnapshot || return 1
	paxctl -c -m out/Release/mksnapshot || return 1
	make || return 1
}

package() {
	local d

	cd "$srcdir"/node-v$pkgver
	make DESTDIR="$pkgdir" install || return 1
	# paxmark so JIT works
	paxctl -cm "$pkgdir"/usr/bin/node || return 1

	cp -pr "$pkgdir"/usr/lib/node_modules/npm/man "$pkgdir"/usr/share || return 1
	for d in doc html man; do
		rm -r "$pkgdir"/usr/lib/node_modules/npm/$d || return 1
	done
}

md5sums="4b3527b830f2dacaba01aececd509c6f  node-v0.10.36.tar.gz"
sha256sums="b9d7d1d0294bce46686b13a05da6fc5b1e7743b597544aa888e8e64a9f178c81  node-v0.10.36.tar.gz"
sha512sums="353fe6df45f5c2b94f432f320e0e51385819c5e2c77ddabe0e0072d1163e37ebefdb59005c71444ce0b7a74d0e30d19830e9c4fcc470fdee25acbc33429fe4c3  node-v0.10.36.tar.gz"
