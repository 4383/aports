sha512sums="87dc3ba29d2423769e6532d2f6175ddec4665d30b22f45907c30bee3b48468032790eb4dc49e7a1c0a13f523b44dd98be2c5ea062444885652b122cbcc26d69d  gnutls-3.2.5.tar.xz
