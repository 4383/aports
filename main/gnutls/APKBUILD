sha512sums="c00cc8a73e26c57050e124ed95f98681e41aee5b59a47c545555ba6571b08063152bf81903c3b7c97d3dcefb938ef3fbd5a76e5816a23fce64f799740d61c9bc  gnutls-3.2.3.tar.xz
