sha512sums="b177ee26588892175a765aacb4c8d59065f4339e54c86b2651a64d72757477f414d6f5451f4458c0797d5de4ddf5cf9f1a77307e0708fd2a759d598f29229e3b  gnutls-3.2.7.tar.xz
