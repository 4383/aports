# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gimp
pkgver=2.6.12
pkgrel=0
pkgdesc="GNU Image Manipulation Program"
url="http://www.gimp.org/"
license="GPL"
makedepends="gtk+-dev libxpm-dev libxmu-dev librsvg-dev dbus-glib-dev
	libexif-dev desktop-file-utils intltool gegl-dev tiff-dev
	jpeg-dev libpng-dev curl-dev openssl-dev"
install=
subpackages="$pkgname-dev $pkgname-doc"
source="ftp://ftp.$pkgname.org/pub/$pkgname/v2.6/$pkgname-$pkgver.tar.bz2
	gimp-curl-fix.patch
	CVE-2012-2763.patch
	"

prepare() { 
	cd "$srcdir"/$pkgname-$pkgver
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() { 
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--enable-mp \
		--enable-gimp-console \
		--enable-gimp-remote \
		--disable-devel-docs \
		--disable-python \
		--without-gvfs \
		--without-gnomevfs \
		--with-gif-compression=lzw \
		--without-aa || return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	ln -s gimptool-2.0 "$pkgdir/usr/bin/gimptool" || return 1
}
md5sums="9f876ee63a0c4a4c83f50f32fb3bbe63  gimp-2.6.12.tar.bz2
678010acec374e06140e65f7de24ff69  gimp-curl-fix.patch
5ec673cf5c153af8a19eb264bea5d3f5  CVE-2012-2763.patch"
