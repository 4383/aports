sha512sums="fe0b3f30c8093d303d768d411475ec01936a02e4e52d863695ffe06daf7de962a2703cb4536e45e9fe8d33020239e95f388554be6385a4dcdead25cd0fe803f6  debootstrap_1.0.52.tar.gz
