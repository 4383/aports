_gemname=coderay
pkgname=ruby-coderay
pkgver=1.0.9
pkgrel=0
pkgdesc="Fast and easy syntax highlighting"
url="http://coderay.rubychan.de"
arch="noarch"
license="MIT"
depends="ruby"
depends_dev=
makedepends="$depends_dev ruby-gems"
install=""
subpackages=""
source="http://gems.rubyforge.org/gems/$_gemname-$pkgver.gem"

_builddir="$srcdir"/$_realname-$pkgver
build() {
	return 0
}

package() {
	local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
	local _geminstdir=$_gemdir/gems/$_gemname-$pkgver
	mkdir -p "$pkgdir" || return 1

	gem install --local --install-dir "$pkgdir"/$_gemdir \
		--ignore-dependencies --verbose --no-rdoc --no-ri \
		"$srcdir"/$_gemname-$pkgver.gem || return 1
	rm -rf "$pkgdir"/$_gemdir/cache \
		"$pkgdir"/$_geminstdir/ext \
		"$pkgdir"/$_geminstdir/.require_paths
}

md5sums="2e2619f9dc74f6443c80118c429752e1  coderay-1.0.9.gem"
sha256sums="c8c713f7f06c8c0c60a89abaa6ba3bbfc8b0ac4be1b2a84cebaa896cdad672dd  coderay-1.0.9.gem"
sha512sums="afebea6898de8690abacb270c6b9920691b73a69f56ab19d986a558d27430f196fa40c2e101829ed9bafeb03df6d5ad2b5c7e3b4897e85599eb57063c3d836bf  coderay-1.0.9.gem"
