# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libsoup
pkgver=2.40.0
pkgrel=0
pkgdesc="Gnome HTTP Library"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
depends="glib-networking"
depends_dev="glib-dev libxml2-dev gnutls-dev"
makedepends="$depends_dev libgcrypt-dev libgpg-error-dev zlib-dev
	gobject-introspection-dev intltool"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-gnome \
		--disable-tls-check \
		--enable-introspection=yes \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="4d66366e08271e22aef164ec4d74e5f0  libsoup-2.40.0.tar.xz"
