sha256sums="c532c331dd5f7eb78438867302ed6897a847c82b287ed9347bea8d1937974c1d  libsoup-2.44.1.tar.xz"
sha512sums="07120996737d86f45acb80b05147e9af0e3e183bec9a97727881b8dc05cb154c679a785f4d5a3a53d0e3611ae0198df977bc9059623c9f1e8e01a03d4c7acb95  libsoup-2.44.1.tar.xz"
