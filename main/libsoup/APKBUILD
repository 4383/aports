# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libsoup
pkgver=2.42.0
pkgrel=0
pkgdesc="Gnome HTTP Library"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
depends="glib-networking"
depends_dev="glib-dev libxml2-dev gnutls-dev sqlite-dev"
makedepends="$depends_dev libgcrypt-dev libgpg-error-dev zlib-dev
	gobject-introspection-dev intltool"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	DATADIRNAME=share ./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-gnome \
		--disable-tls-check \
		--enable-introspection=yes \
		--localedir=/usr/share/locale \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="a632a38d2983c2a88679672d00940128  libsoup-2.42.0.tar.xz"
sha256sums="9e0e7eb5d3f7401ccf521fbc289fc1fa0923b7c7833729e2ed7696f7b848893e  libsoup-2.42.0.tar.xz"
sha512sums="ac2b48a25e77ea5a010033b595d7a01aecabd470b367a9ade18498b4980ca3432db620a591ec2dc08c017a68d6353b05648140c4822b1fb411d3b07798eab420  libsoup-2.42.0.tar.xz"
