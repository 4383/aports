# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libsoup
pkgver=2.42.1
pkgrel=0
pkgdesc="Gnome HTTP Library"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
depends="glib-networking"
depends_dev="glib-dev libxml2-dev gnutls-dev sqlite-dev"
makedepends="$depends_dev libgcrypt-dev libgpg-error-dev zlib-dev
	gobject-introspection-dev intltool"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	DATADIRNAME=share ./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-gnome \
		--disable-tls-check \
		--enable-introspection=yes \
		--localedir=/usr/share/locale \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="aaccd590a8002b69716f885fa8589887  libsoup-2.42.1.tar.xz"
sha256sums="20bd5365bb3e7de70fade91ac82c9dea31636318df90b8c26bc4cde2523a8c91  libsoup-2.42.1.tar.xz"
sha512sums="4b0c53283007057bef34f0164dc2cffdbd521dc4a1524ecdf3ac7ce72ba300fc20425fd09fa97c67278a6427c3c73f5bc99a9a01aa77e38808f4bb155e7b5877  libsoup-2.42.1.tar.xz"
