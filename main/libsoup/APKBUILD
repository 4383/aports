# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libsoup
pkgver=2.32.2
pkgrel=0
pkgdesc="Gnome HTTP Library"
url="http://www.gnome.org"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc"
depends=
makedepends="pkgconfig glib-dev gnutls-dev libxml2-dev libiconv-dev
	gettext-dev libgcrypt-dev libgpg-error-dev zlib-dev"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.bz2
	cve-2011-2524.patch"

depends_dev="glib-dev libxml2-dev gnutls-dev"

prepare() {
	cd "$srcdir"/$pkgname-$pkgver
	for i in $source; do
		case $i in
		*.patch) msg $i; patch -p1 -i "$srcdir"/$i || return 1;;
		esac
	done
}

build() {
	cd "$srcdir"/$pkgname-$pkgver
	./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-gnome \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
}
md5sums="03f37350a2a31046ebabb8470e75abcc  libsoup-2.32.2.tar.bz2
be169f24fbf69fe8bbf0af4740829a29  cve-2011-2524.patch"
