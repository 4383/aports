# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libsoup
pkgver=2.42.2
pkgrel=0
pkgdesc="Gnome HTTP Library"
url="http://www.gnome.org"
arch="all"
license="LGPL"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang"
depends="glib-networking"
depends_dev="glib-dev libxml2-dev gnutls-dev sqlite-dev"
makedepends="$depends_dev libgcrypt-dev libgpg-error-dev zlib-dev
	gobject-introspection-dev intltool"
source="http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz"

build() {
	cd "$srcdir"/$pkgname-$pkgver
	DATADIRNAME=share ./configure --prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--disable-static \
		--without-gnome \
		--disable-tls-check \
		--enable-introspection=yes \
		--localedir=/usr/share/locale \
		|| return 1
	make || return 1
}

package() {
	cd "$srcdir"/$pkgname-$pkgver
	make DESTDIR="$pkgdir" install || return 1
	rm "$pkgdir"/usr/lib/*.la
}
md5sums="7d19a84f9eecba53187f5c2ae13fd83e  libsoup-2.42.2.tar.xz"
sha256sums="1f4f9cc55ba483dc8defea0c3f97cc507dc48384c5529179e29c1e6d05630dbf  libsoup-2.42.2.tar.xz"
sha512sums="c0ba6bf6091f8efd75ebca317bde5af58e9ea81f42cccea74a1e009572f80ffd2cc8b3d07e62c657c4475152772a639eec8ca5178b9c26f4a33544c1a73d40e3  libsoup-2.42.2.tar.xz"
